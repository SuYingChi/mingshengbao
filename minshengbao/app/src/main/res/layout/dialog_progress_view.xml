<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_custom_bg"
    android:padding="@dimen/margin_width15"
    android:gravity="center">
    <com.msht.minshengbao.custom.widget.DonutProgress
        android:id="@+id/id_progress"
        android:layout_width="@dimen/margin_width40"
        android:layout_height="@dimen/margin_width40"
        custom:donut_finished_color="@color/white"
        android:background="@color/transparent"
        custom:donut_show_text="true"
        custom:donut_unfinished_color="@color/transparent"
        custom:donut_text_color="@color/white"
        custom:donut_progress="0"
        custom:donut_text_size="@dimen/text_width8"
        custom:donut_finished_stroke_width="@dimen/margin_width3"
        custom:donut_unfinished_stroke_width="@dimen/margin_width3"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_width5"
        android:layout_marginRight="@dimen/margin_width5"
        android:layout_marginLeft="@dimen/margin_width5"
        android:layout_marginStart="@dimen/margin_width5"
        android:layout_marginTop="@dimen/margin_width10"
        android:text="@string/loading_text"
        android:textColor="@color/white"
        android:textSize="@dimen/text_width12" />

</LinearLayout>