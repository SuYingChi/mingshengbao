<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.functionActivity.MyActivity.AddAddressActivity">
    <include layout="@layout/layout_header"/>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_touch_background"
        android:minHeight="@dimen/margin_width48">
        <TextView
            android:id="@+id/id_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/title_tv"/>
        <EditText
            android:id="@+id/id_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_width10"
            android:background="@null"
            android:layout_toRightOf="@+id/id_text5"
            android:layout_marginLeft="@dimen/margin_width20"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/title_tv"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_width10"
        android:layout_marginRight="@dimen/margin_width10"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_touch_background"
        android:minHeight="@dimen/margin_width48">
        <TextView
            android:id="@+id/id_text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/title_tv"/>
        <EditText
            android:id="@+id/id_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:layout_marginRight="@dimen/margin_width10"
            android:background="@null"
            android:layout_toRightOf="@+id/id_text6"
            android:layout_marginLeft="@dimen/margin_width20"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/title_tv"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_width10"
        android:layout_marginRight="@dimen/margin_width10"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>
    <RelativeLayout
        android:id="@+id/id_re_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_touch_background"
        android:minHeight="@dimen/margin_width48">
        <TextView
            android:id="@+id/id_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城市"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/title_tv"/>
        <TextView
            android:id="@+id/id_tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_text1"
            android:gravity="right"
            android:layout_marginLeft="@dimen/margin_width20"
            android:layout_toLeftOf="@+id/id_forward_img"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_centerVertical="true"
            android:hint="例：海口"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/title_tv"/>
        <ImageView
            android:id="@+id/id_forward_img"
            android:layout_width="@dimen/margin_16"
            android:layout_height="@dimen/margin_16"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10"
            android:src="@drawable/forward_2x"/>
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
        <RelativeLayout
            android:id="@+id/id_re_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_48"
            android:background="@drawable/selector_touch_background">
            <TextView
                android:id="@+id/id_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/title_tv"/>
            <TextView
                android:id="@+id/id_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/id_text2"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_toLeftOf="@+id/id_forward"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_centerVertical="true"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/title_tv"/>
            <ImageView
                android:id="@+id/id_forward"
                android:layout_width="@dimen/margin_16"
                android:layout_height="@dimen/margin_16"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"
                android:src="@drawable/forward_2x"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/margin_48">
        <TextView
            android:id="@+id/id_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="门牌号"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/title_tv"/>
        <EditText
            android:id="@+id/id_et_doorplate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_text4"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="例：6号楼502室"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/title_tv"/>
    </RelativeLayout>
    <include layout="@layout/layout_line_gray"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/id_re_newaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width48"
        android:background="@drawable/selector_rectangle_change_button">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="保存"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>
