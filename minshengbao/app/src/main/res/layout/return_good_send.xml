<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/msb_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="?actionBarSize"
                android:layout_height="match_parent"
                android:padding="@dimen/dp14"
                android:src="@drawable/back2x" />

            <TextView
                style="@style/shopMsbcolorTitleText"
                android:layout_centerInParent="true"
                android:text="退货发货"
                android:textColor="@color/white" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/ll_seclect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/shopBlackTitleText"
            android:text="物流公司编号："
             />
        <TextView
            android:id="@+id/wuliu"
            android:textSize="@dimen/text_width18"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_angle"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/margin_Modules"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_danhao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/shopBlackTitleText"
            android:text="物流单号："
            />
        <EditText
            android:id="@+id/et"
            style="@style/editText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:hint="请输入物流单号"
            android:inputType="number"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/post"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/text_width18"
        android:background="@color/msb_color"
        android:gravity="center"
        android:paddingTop="@dimen/margin_Modules"
        android:paddingBottom="@dimen/margin_Modules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>