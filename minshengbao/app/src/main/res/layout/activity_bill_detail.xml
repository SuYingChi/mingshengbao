<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bill_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.functionActivity.GasService.BillDetailActivity">

    <include layout="@layout/layout_header"/>
    <RelativeLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF" >
        <ImageView
            android:layout_width="@dimen/margin_width20"
            android:layout_height="@dimen/margin_width20"
            android:src="@drawable/customer_xh"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width10"
            android:layout_alignParentLeft="true"
            android:id="@+id/id_customerView" />
        <TextView
            android:id="@+id/id_customerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_customerView"
            android:layout_marginLeft="@dimen/margin_6"
            android:textSize="@dimen/text_width18"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/margin_6"
            android:layout_alignBottom="@+id/id_customerView"
            />
        <ImageView
            android:layout_width="@dimen/margin_width20"
            android:layout_height="@dimen/margin_width20"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/id_customerText"
            android:src="@drawable/address_xh"
            android:id="@+id/imageView8" />
        <TextView
            android:id="@+id/id_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_width18"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/imageView8"
            android:layout_marginLeft="@dimen/margin_6"
            android:layout_below="@+id/id_customerText"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width10"/>
    </RelativeLayout>
    <include layout="@layout/layout_line_gray"/>
    <ListView
        android:id="@+id/id_bill_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null">
    </ListView>
</LinearLayout>
