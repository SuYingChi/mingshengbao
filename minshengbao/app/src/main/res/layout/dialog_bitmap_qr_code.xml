<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_width25"
        android:layout_marginLeft="@dimen/margin_width25"
        android:layout_marginRight="@dimen/margin_width25"
        android:layout_marginEnd="@dimen/margin_width25"
        android:layout_marginTop="@dimen/margin_width20"
        android:layout_marginBottom="@dimen/margin_width20"
        android:padding="@dimen/margin_width5"
        android:background="@drawable/shape_white_layout"
        android:orientation="vertical">
        <FrameLayout
            android:layout_weight="1"
            android:id="@+id/id_qrCode_layout"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/margin_width5"
            android:layout_marginLeft="@dimen/margin_width5"
            android:layout_marginRight="@dimen/margin_width5"
            android:layout_marginEnd="@dimen/margin_width5"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/insurance_qr_code_bg">
            <ImageView
                android:id="@+id/id_qr_code"
                android:layout_width="@dimen/margin_width120"
                android:layout_height="@dimen/margin_width120"
                android:layout_marginEnd="@dimen/margin_width10"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginBottom="@dimen/margin_width60"
                android:layout_gravity="end|bottom"
                android:contentDescription="@string/picture_text"
                android:src="@drawable/erwei_code"/>
        </FrameLayout>
        <include layout="@layout/layout_line_gray"/>
        <LinearLayout
            android:id="@+id/pop_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">
            <Button
                android:layout_weight="1"
                android:id="@+id/id_btn_save"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width35"
                android:background="@color/white"
                android:text="@string/save_text"
                android:textColor="#277be1"
                android:textSize="@dimen/text_width16"/>
            <include layout="@layout/layout_line_gray"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/id_weiXin_circle"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width35"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/wei_xin_circle"
                android:textColor="#277be1"
                android:textSize="@dimen/text_width16"/>
            <include layout="@layout/layout_line_gray"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/id_weiXin_btn"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width35"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/wei_xin"
                android:textColor="#277be1"
                android:textSize="@dimen/text_width16"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/id_close_img"
        android:layout_width="@dimen/margin_width20"
        android:layout_height="@dimen/margin_width20"
        android:contentDescription="@string/picture_text"
        android:layout_gravity="end|top"
        android:layout_marginTop="@dimen/margin_width15"
        android:layout_marginEnd="@dimen/margin_width15"
        android:layout_marginRight="@dimen/margin_width15"
        android:src="@drawable/close_cancel_xh"/>
</FrameLayout>