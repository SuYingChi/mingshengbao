<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/iv"
        style="@style/image"
        android:layout_width="@dimen/margin_width100"
        android:layout_height="@dimen/margin_width100" />

    <TextView
        android:id="@+id/name"
        style="@style/shopMsbcolorTitleText"
        android:layout_alignTop="@id/iv"
        android:layout_toRightOf="@id/iv"
        android:textColor="@color/black"

        />

    <TextView
        android:id="@+id/price"
        style="@style/shopMsbcolorTitleText"
        android:layout_alignBottom="@id/iv"
        android:layout_toRightOf="@id/iv"
        android:textColor="@color/msb_color" />

    <ImageView
        android:id="@+id/delete"
        style="@style/image"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/iv"
        android:layout_centerVertical="true"
        android:padding="@dimen/margin_Modules"
        android:src="@drawable/shop_delete"
        />
</RelativeLayout>