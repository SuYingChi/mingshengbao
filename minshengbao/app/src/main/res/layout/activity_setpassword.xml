<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical"
    tools:context=".FunctionActivity.MyActivity.PasswordActivity">
    <include layout="@layout/layout_header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width8"
                android:background="@color/white"
                android:minHeight="@dimen/margin_width50">
                <TextView
                    android:id="@+id/id_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_width15"
                    android:layout_centerVertical="true"
                    android:text="@string/origin_password"
                    android:textColor="@color/color_383838"
                    android:textSize="@dimen/text_width16"/>
                <EditText
                    android:id="@+id/id_origin_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:inputType="textPassword"
                    android:layout_toRightOf="@+id/id_text1"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="@string/input_originPwd"
                    android:textSize="@dimen/text_width14"
                    android:textColor="@color/color_9e9e9e"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width8"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="@dimen/margin_width50">
                <TextView
                    android:id="@+id/id_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_width15"
                    android:layout_centerVertical="true"
                    android:text="@string/new_password"
                    android:textColor="@color/color_383838"
                    android:textSize="@dimen/text_width16"/>
                <EditText
                    android:id="@+id/id_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:inputType="textPassword"
                    android:layout_toRightOf="@+id/id_text2"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请至少输入6位数的新密码"
                    android:textSize="@dimen/text_width14"
                    android:textColor="@color/color_9e9e9e"/>
            </RelativeLayout>
            <include layout="@layout/layout_line_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="@dimen/margin_width50">
                <TextView
                    android:id="@+id/id_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_width15"
                    android:layout_centerVertical="true"
                    android:text="@string/ensure_password"
                    android:textColor="@color/color_383838"
                    android:textSize="@dimen/text_width16"/>
                <EditText
                    android:id="@+id/id_ensure_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:inputType="textPassword"
                    android:layout_toRightOf="@+id/id_text3"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入与新密码一致数字"
                    android:textSize="@dimen/text_width14"
                    android:textColor="@color/color_9e9e9e"/>
            </RelativeLayout>
            <Button
                android:id="@+id/id_btn_ensure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width45"
                android:layout_marginTop="@dimen/margin_width40"
                android:layout_marginLeft="@dimen/margin_width20"
                android:layout_marginRight="@dimen/margin_width20"
                android:layout_marginBottom="@dimen/margin_width35"
                android:background="@drawable/selector_touch_button_change"
                android:text="@string/ensure_text"
                android:textColor="@color/white"
                android:textSize="@dimen/text_width18"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>