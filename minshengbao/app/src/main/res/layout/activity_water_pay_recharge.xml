<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical"
    tools:context=".functionActivity.WaterApp.WaterPayRechargeActivity">
    <include layout="@layout/layout_white_header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_width10"
            android:orientation="vertical"
            android:background="@color/background_gray">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width40"
                android:background="@color/white">
                <TextView
                    android:id="@+id/id_recommend_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:textSize="@dimen/text_width16"
                    android:textColor="@color/color_383838"
                    android:text="@string/recommend_code"/>
                <EditText
                    android:id="@+id/id_et_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:layout_centerVertical="true"
                    android:maxLength="11"
                    android:background="@null"
                    android:layout_toRightOf="@+id/id_recommend_text"
                    android:layout_toEndOf="@+id/id_recommend_text"
                    android:layout_marginLeft="@dimen/margin_width15"
                    android:layout_marginStart="@dimen/margin_width15"
                    android:hint="@string/please_input_recommend_code" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width10"
                android:background="@color/white">
                <TextView
                    android:id="@+id/id_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:textColor="@color/color_383838"
                    android:textSize="@dimen/text_width16"
                    android:text="@string/recharge_meal_tip"/>
                <TextView
                    android:id="@+id/id_tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_text"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:layout_marginBottom="@dimen/margin_width10"
                    android:textSize="@dimen/text_width25"
                    android:textColor="@color/color_383838"
                    android:textStyle="bold"
                    android:text="@string/default_value0"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width10"
                android:background="@color/background_gray"/>
            <include layout="@layout/layout_line_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width45"
                android:background="@color/white">
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:text="@string/select_pay_way"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_width16"
                    />
            </RelativeLayout>
            <include layout="@layout/layout_line_gray" />
            <com.msht.minshengbao.ViewUI.widget.ListViewForScrollView
                android:id="@+id/id_payway_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.msht.minshengbao.ViewUI.widget.ListViewForScrollView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width60"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:id="@+id/id_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_tv"
                    android:textSize="@dimen/text_width12"
                    android:text="@string/pay_fee_agree_tip"/>
                <TextView
                    android:id="@+id/id_back_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_width12"
                    android:layout_toRightOf="@+id/id_text1"
                    android:layout_toEndOf="@+id/id_text1"
                    android:textColor="@color/colorAccent"
                    android:text="@string/activity_protocol"/>
            </RelativeLayout>
            <Button
                android:id="@+id/id_btn_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width45"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width40"
                android:layout_marginRight="@dimen/margin_width40"
                android:layout_marginBottom="@dimen/margin_width40"
                android:background="@drawable/selector_change_blue_corner_background"
                android:textColor="@color/white"
                android:textSize="@dimen/text_width16"
                android:text="@string/immediately_recharge"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>