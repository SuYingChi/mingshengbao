<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/id_store_img"
            android:layout_width="@dimen/margin_width60"
            android:layout_height="@dimen/margin_width60"
            android:layout_marginLeft="@dimen/margin_width10"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_width10">
            <TextView
                android:id="@+id/id_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_toLeftOf="@+id/id_text1"
                android:layout_marginRight="@dimen/margin_width10"
                android:text="艾玛电动车维修店"
                android:textColor="@color/black1"
                android:textSize="@dimen/text_width18"/>
            <TextView
                android:id="@+id/id_tv_ddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_store_name"
                android:layout_marginTop="@dimen/margin_width15"
                android:layout_marginBottom="@dimen/margin_width10"
                android:text="地址：金贸西路"
                android:textColor="@color/title_tv"
                android:textSize="@dimen/text_16"/>
            <TextView
                android:id="@+id/id_tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_width10"
                android:text="200m"
                android:textSize="@dimen/text_14"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:id="@+id/id_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_toLeftOf="@+id/id_tv_distance"
                android:layout_marginRight="@dimen/margin_width3"
                android:textSize="@dimen/text_14"
                android:textColor="@color/title_tv"
                android:text="距您"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>