<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_gas_evaluate_workorder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.functionActivity.gasService.GasEvaluateWorkOrderActivity">
    <include layout="@layout/layout_header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TextView
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/integral_satisfaction_degree"
                    android:layout_marginBottom="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:textSize="@dimen/text_width18"
                    android:textColor="@color/title_tv" />
            </RelativeLayout>
            <include layout="@layout/layout_line_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <com.msht.minshengbao.custom.RatingBar
                    android:id="@+id/id_ratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    hedgehog:clickable="true"
                    hedgehog:halfstart="true"
                    hedgehog:starCount="5"
                    hedgehog:starEmpty="@drawable/star_empty"
                    hedgehog:starFill="@drawable/star_half"
                    hedgehog:starHalf="@drawable/star_full"
                    hedgehog:starImageHeight="50dp"
                    hedgehog:starImageWidth="60dp"
                    hedgehog:starImagePadding="15dp">
                </com.msht.minshengbao.custom.RatingBar>
            </RelativeLayout>
            <include layout="@layout/layout_line_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <EditText
                    android:id="@+id/id_tv_evaluation"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName"
                    android:layout_height="120dp"
                    android:paddingLeft="@dimen/margin_width18"
                    android:paddingStart="@dimen/margin_width18"
                    android:paddingRight="@dimen/margin_width5"
                    android:paddingEnd="@dimen/margin_width5"
                    android:paddingTop="@dimen/margin_width5"
                    android:gravity="start|top"
                    android:background="@null"
                    android:hint="@string/please_input_evaluated_content"/>
            </RelativeLayout>
            <include layout="@layout/layout_line_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <Button
                    android:id="@+id/id_btn_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/margin_45"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:textSize="@dimen/text_18"
                    android:text="@string/send_server"
                    android:textColor="@color/white"
                    android:background="@drawable/selector_touch_button_change"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
