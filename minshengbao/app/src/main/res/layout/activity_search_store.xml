<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.FunctionView.Electricvehicle.SearchStore">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_change_background">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_width20"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:focusable="true"
            android:orientation="horizontal"
            android:focusableInTouchMode="true">
            <RelativeLayout
                android:id="@+id/lay_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="14dp"
                android:paddingRight="8dp">
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back2x"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_toRightOf="@+id/lay_back"
                android:layout_toLeftOf="@+id/id_search"
                android:background="@drawable/shape_gray_border_transparent"
                android:gravity="center"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp">
                    <ImageView
                        android:id="@+id/id_search_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/sousuo"/>
                    <EditText
                        android:id="@+id/et_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/id_search_img"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="搜索电动车维修点"
                        android:textColor="#ff444444"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/id_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="搜索"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/id_re_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="历史搜索"
            android:textColor="@color/title_tv"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/id_delete_history"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/delect_addr_xh"/>
        <com.msht.minshengbao.ViewUI.widget.MultiLineChooseLayout
            android:id="@+id/id_multiChoose"
            style="@style/MultiLineChooseItemTags.SingleFlowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_text1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp">
        </com.msht.minshengbao.ViewUI.widget.MultiLineChooseLayout>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_width10">
        <com.msht.minshengbao.ViewUI.PullRefresh.LoadMoreListView
            android:id="@+id/id_view_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.msht.minshengbao.ViewUI.PullRefresh.LoadMoreListView>
    </FrameLayout>
</LinearLayout>
