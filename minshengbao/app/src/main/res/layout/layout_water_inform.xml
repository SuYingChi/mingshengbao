<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/id_re_head"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="@dimen/margin_width45"
    android:background="@color/yellow_more_light">
    <ImageView
        android:id="@+id/id_inform_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/picture_text"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_width10"
        android:layout_marginStart="@dimen/margin_width10"
        android:src="@drawable/water_inform_xh"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/id_inform_img"
        android:layout_toRightOf="@+id/id_inform_img"
        android:layout_toStartOf="@+id/id_water_clear"
        android:layout_toLeftOf="@+id/id_water_clear"
        android:layout_marginLeft="@dimen/margin_width10"
        android:layout_marginStart="@dimen/margin_width10"
        android:background="@color/transparent">
        <TextView
            android:layout_weight="1"
            android:id="@+id/id_tip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow_gray"
            android:layout_marginEnd="@dimen/margin_width10"
            android:layout_marginRight="@dimen/margin_width10"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/text_width14"
            android:text="@string/water_inform_tip"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/id_water_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_width10"
        android:layout_marginEnd="@dimen/margin_width10"
        android:contentDescription="@string/picture_text"
        android:tint="@color/yellow_gray"
        android:src="@drawable/forward_2x"/>
</RelativeLayout>