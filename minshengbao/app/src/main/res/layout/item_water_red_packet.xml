<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="@dimen/margin_width5"
    android:paddingTop="@dimen/margin_width5"
    android:paddingLeft="@dimen/margin_width5"
    android:paddingRight="@dimen/margin_width5">
    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width100"
        android:orientation="vertical"
        android:background="@drawable/water_coupon_normal_xh">
        <RelativeLayout
            android:id="@+id/id_layout_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_width10">
            <TextView
                android:id="@+id/id_title_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="@dimen/text_width20"
                android:layout_toLeftOf="@+id/id_layout_amount"
                android:layout_toStartOf="@+id/id_layout_amount"
                android:layout_marginTop="@dimen/margin_width20"
                android:layout_marginLeft="@dimen/margin_width20"
                android:layout_marginStart="@dimen/margin_width20"
                android:text="@string/default_text"
                android:textStyle="bold"
                android:textColor="@color/red"/>
            <TextView
                android:id="@+id/id_effective_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_title_name"
                android:layout_marginTop="@dimen/margin_width6"
                android:layout_marginLeft="@dimen/margin_width20"
                android:layout_marginStart="@dimen/margin_width20"
                android:textColor="@color/color_383838"
                android:text="@string/effective_date"
                android:textSize="@dimen/text_width16"/>
            <RelativeLayout
                android:id="@+id/id_layout_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_width20"
                android:layout_marginEnd="@dimen/margin_width20"
                android:layout_marginRight="@dimen/margin_width20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/monetary_unit"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_width14"
                    android:layout_alignBaseline="@+id/id_discount_amount"/>
                <TextView
                    android:id="@+id/id_discount_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_width35"
                    android:text="@string/default_text"
                    android:textColor="@color/red"/>
                <TextView
                    android:id="@+id/id_use_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_discount_amount"
                    android:layout_marginTop="@dimen/margin_width6"
                    android:layout_marginBottom="@dimen/margin_width12"
                    android:textColor="@color/color_9e9e9e"
                    android:text="限制使用"
                    android:textSize="@dimen/text_width16"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width10"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/id_use_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_width20"
                android:layout_marginLeft="@dimen/margin_width20"
                android:layout_toStartOf="@+id/id_use_btn"
                android:layout_toLeftOf="@+id/id_use_btn"
                android:gravity="start"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginEnd="@dimen/margin_width10"
                android:textSize="@dimen/text_width14"
                android:textColor="@color/app_text"
                android:text="@string/default_text"/>
            <com.msht.minshengbao.ViewUI.ButtonUI.ButtonM
                android:id="@+id/id_use_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/margin_width60"
                android:minHeight="@dimen/margin_width25"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/margin_width20"
                android:layout_marginRight="@dimen/margin_width20"
                android:textSize="@dimen/text_width12"
                android:gravity="center"
                app:backColorPress="@color/yellow_more_light"
                app:backColor="@color/colorYellow"
                app:textColor="@android:color/white"
                app:radius="45"
                app:fillet="true"
                app:shape="rectangle"
                android:text="@string/immediately_use"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>