<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">
        <ImageView
            android:id="@+id/id_bottle_image"
            android:layout_width="@dimen/margin_width70"
            android:layout_height="@dimen/margin_width70"
            android:layout_margin="@dimen/margin_width10"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width10"
            android:contentDescription="@string/picture_text"
            android:src="@drawable/five_weight_bottle_xh"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/id_bottle_image"
            android:layout_toEndOf="@+id/id_bottle_image">
            <TextView
                android:id="@+id/id_bottle_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/color_383838"
                android:textStyle="bold"
                android:text="@string/steel_bottle_type1"/>
            <TextView
                android:id="@+id/id_pledge_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_bottle_type1"
                android:layout_marginTop="@dimen/margin_width6"
                android:textColor="@color/color_9e9e9e"
                android:textSize="@dimen/text_width14"
                android:text="@string/pledge_text"/>
            <TextView
                android:id="@+id/id_tv_pledge1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_bottle_type1"
                android:layout_marginTop="@dimen/margin_width6"
                android:layout_toRightOf="@+id/id_pledge_text1"
                android:layout_toEndOf="@+id/id_pledge_text1"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:textColor="@color/color_9e9e9e"
                android:textSize="@dimen/text_width14"
                android:text="@string/default_text"/>
            <TextView
                android:id="@+id/id_tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_pledge_text1"
                android:layout_marginTop="@dimen/margin_width10"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/text_width18"
                android:visibility="gone"
                android:text="@string/default_value0"/>
        </RelativeLayout>
        <Button
            android:id="@+id/id_add_btn1"
            android:layout_width="@dimen/margin_width25"
            android:layout_height="@dimen/margin_width25"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margin_width15"
            android:layout_marginEnd="@dimen/margin_width15"
            android:background="@color/background_gray"
            android:text="@string/add_symbol"/>
        <Button
            android:id="@+id/id_tv_num1"
            android:layout_width="@dimen/margin_width25"
            android:layout_height="@dimen/margin_width25"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id_add_btn1"
            android:layout_toStartOf="@+id/id_add_btn1"
            android:layout_marginRight="@dimen/margin_width5"
            android:layout_marginEnd="@dimen/margin_width10"
            android:background="@color/background_gray"
            android:text="@string/zero_value"/>
        <Button
            android:id="@+id/id_subtract_btn1"
            android:layout_width="@dimen/margin_width25"
            android:layout_height="@dimen/margin_width25"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id_tv_num1"
            android:layout_toStartOf="@+id/id_tv_num1"
            android:layout_marginRight="@dimen/margin_width5"
            android:layout_marginEnd="@dimen/margin_width5"
            android:background="@color/background_gray"
            android:textSize="@dimen/text_width16"
            android:text="@string/subtract_symbol"/>
    </RelativeLayout>
    <include layout="@layout/layout_line_gray"/>
