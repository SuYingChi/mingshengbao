<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_enlarge_pic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.msht.minshengbao.functionActivity.repairService.EnlargePicActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_change_background">
        <View
            android:id="@+id/id_status_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_width20" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_width50">
            <ImageView
                android:id="@+id/id_back"
                android:padding="@dimen/margin_width5"
                android:layout_width="@dimen/margin_width35"
                android:layout_height="@dimen/margin_width35"
                android:background="?android:selectableItemBackground"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:contentDescription="@string/picture_text"
                android:layout_centerVertical="true"
                android:src="@drawable/back2x"/>
            <TextView
                android:id="@+id/id_text"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/id_back"
                android:layout_toEndOf="@+id/id_back"
                android:layout_marginLeft="@dimen/margin_width5"
                android:layout_marginStart="@dimen/margin_width5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_width14"/>
            <ImageView
                android:id="@+id/id_delete_img"
                android:layout_width="@dimen/margin_width25"
                android:layout_height="@dimen/margin_width25"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_width15"
                android:layout_marginEnd="@dimen/margin_width15"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/picture_text"
                android:src="@drawable/delete2x"/>
        </RelativeLayout>
    </LinearLayout>
    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/read_table_xh"
        android:scaleType="fitCenter"/>
</LinearLayout>
