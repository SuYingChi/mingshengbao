<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/good_name"
                style="@style/shopBlackTitleText" />

            <TextView
                android:id="@+id/good_jingle"
                style="@style/grey_small_text"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/good_price"
                style="@style/shopMsbcolorTitleText" />

            <TextView
                android:id="@+id/good_orginal_price"
                style="@style/grey_small_text"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/qrcode"
                android:layout_width="@dimen/margin_width150"
                android:layout_height="@dimen/margin_width150"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:text="打开微信扫描二维码即可查看"
                style="@style/shopBlackTitleText" />
            <TextView
                android:text="截图可保存到手机相册"
                android:layout_gravity="center_horizontal"
                style="@style/grey_small_text" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/save"
        style="@style/shopMsbcolorTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/msb_color"
        android:gravity="center_horizontal"
        android:text="保存到手机"
        android:textColor="@color/white" />
</LinearLayout>