<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_width5"
    android:paddingBottom="@dimen/margin_width5"
    android:paddingRight="@dimen/margin_width6"
    android:paddingLeft="@dimen/margin_width6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/id_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black1"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_width16"
            android:text="微信支付"/>

        <TextView
            android:id="@+id/id_bucketNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_toRightOf="@+id/id_tv_type"
            android:layout_centerVertical="true"
            android:textColor="@color/black1"
            android:textSize="@dimen/text_width16"
            android:text="(配桶*1)"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/id_deliveryFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_toRightOf="@+id/id_bucketNum"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_orange_corner_button"
            android:textSize="@dimen/text_14"
            android:textColor="@color/white"
            android:text="配送"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/id_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginTop="@dimen/margin_width10"
            android:textSize="@dimen/text_width12"
            android:text="2018-01-12"/>
        <TextView
            android:id="@+id/id_tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/id_tv_time"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginTop="@dimen/margin_width6"
            android:layout_marginBottom="@dimen/margin_width10"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/black"
            android:text="300元"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/id_layout_givefee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_width2"
            android:background="@color/background_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_width45">
            <TextView
                android:id="@+id/id_tv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black1"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_width16"
                android:text="赠送金额"/>
            <TextView
                android:id="@+id/id_tv_giveFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/black"
                android:text="300元"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>