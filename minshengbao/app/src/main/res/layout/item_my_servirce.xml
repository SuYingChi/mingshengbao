<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/id_img_serveTYPE"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:src="@drawable/homepage_gas_dianhuo3x"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"/>
        <TextView
            android:id="@+id/id_tv_serveTYPE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报装通气"
            android:textSize="@dimen/text_18"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id_btn_dealwith"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_toRightOf="@+id/id_img_serveTYPE"
            android:layout_marginLeft="@dimen/margin_25"/>
        <Button
            android:id="@+id/id_btn_dealwith"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_30"
            android:layout_alignParentRight="true"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_15"
            android:text="待处理"
            android:textSize="@dimen/text_16"
            android:textColor="@color/colorOrange"
            android:background="@drawable/shape_orange_corner_boder_inwithte"/>
        <TextView
            android:id="@+id/id_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-10-12"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_15"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#e2e2e2">
    </View>
</LinearLayout>