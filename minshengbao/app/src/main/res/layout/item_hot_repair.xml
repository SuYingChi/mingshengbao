<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/selector_touch_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/id_function_img"
        android:layout_width="@dimen/margin_imgHight"
        android:layout_height="@dimen/margin_imgHight"
        android:layout_centerHorizontal="true"
        android:src="@drawable/home_hot_gasstove_2xh"/>
    <TextView
        android:id="@+id/id_function_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_function_img"
        android:layout_marginTop="@dimen/margin_5"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="油烟机"
        android:textSize="@dimen/text_16"
        android:textColor="@color/title_tv"/>
</RelativeLayout>