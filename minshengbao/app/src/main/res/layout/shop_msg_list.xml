<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        app:contentInsetStart="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/msb_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="?actionBarSize"
            android:layout_height="match_parent"
            android:padding="@dimen/dp14"
            android:src="@drawable/back2x" />

        <TextView
            style="@style/shopMsbcolorTitleText"
            android:layout_centerInParent="true"
            android:text="消息"
            android:textColor="@color/white" />
    </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/rlt_warn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/warniv"
            android:src="@drawable/warning"
            android:layout_width="@dimen/margin_width70"
            android:layout_height="@dimen/margin_width70"
            android:padding="@dimen/margin_5"
            />
        <TextView
            android:id="@+id/warnnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_red_oval"
            android:gravity="center"
            android:text="3"
            android:layout_alignRight="@id/warniv"
            android:textColor="@color/white"
            android:textSize="@dimen/text_10"
            android:visibility="visible" />
        <TextView
            android:id="@+id/warntv"
            style="@style/shopMsbcolorTitleText"
            android:layout_alignBottom="@id/warniv"
            android:layout_toRightOf="@id/warnnum"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="112121212"
            android:textSize="@dimen/text_12"
            android:textColor="@color/gray_black" />
        <TextView
            android:id="@+id/warntime"
            style="@style/shopMsbcolorTitleText"
            android:layout_alignTop="@id/warniv"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:text="一小时前"
            android:textSize="@dimen/text_12"
            />
        <TextView
            style="@style/shopMsbcolorTitleText"
            android:layout_alignTop="@id/warniv"
            android:layout_toRightOf="@id/warnnum"
            android:layout_toLeftOf="@id/warntime"
            android:textColor="@color/black"
            android:text="紧急通知"
            android:textSize="@dimen/text_12"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlt_gas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="visible"
        >

        <ImageView
            android:id="@+id/gasiv"
            android:src="@drawable/gas_service"
            android:layout_width="@dimen/margin_width70"
            android:layout_height="@dimen/margin_width70"
            android:padding="@dimen/margin_5"
            />
        <TextView
            android:id="@+id/gasnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_red_oval"
            android:gravity="center"
            android:text=""
            android:layout_alignRight="@id/gasiv"
            android:textColor="@color/white"
            android:textSize="@dimen/text_10"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/gastv"
            style="@style/shopMsbcolorTitleText"
            android:layout_alignBottom="@id/gasiv"
            android:layout_toRightOf="@id/gasnum"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/text_12"
            android:text=""
            android:textColor="@color/gray_black" />
        <TextView
            android:id="@+id/gastime"
            style="@style/shopMsbcolorTitleText"
            android:layout_alignTop="@id/gasiv"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:text=""
            android:textSize="@dimen/text_12"
            />
        <TextView
            style="@style/shopMsbcolorTitleText"
            android:layout_alignTop="@id/gasiv"
            android:layout_toRightOf="@id/gasnum"
            android:layout_toLeftOf="@id/gastime"
            android:textColor="@color/black"
            android:text="燃气服务"
            android:textSize="@dimen/text_12"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlt_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/routeiv"
            android:src="@drawable/shop_logisic"
            android:layout_width="@dimen/margin_width70"
            android:layout_height="@dimen/margin_width70"
            android:padding="@dimen/margin_5"
            />
        <TextView
            android:id="@+id/routenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_red_oval"
            android:gravity="center"
            android:text=""
            android:layout_alignRight="@id/routeiv"
            android:textColor="@color/white"
            android:textSize="@dimen/text_10"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/routetv"
            style="@style/shopMsbcolorTitleText"
            android:layout_alignBottom="@id/routeiv"
            android:layout_toRightOf="@id/routenum"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""
            android:textSize="@dimen/text_12"
            android:textColor="@color/gray_black" />
        <TextView
            android:id="@+id/routetime"
            style="@style/shopMsbcolorTitleText"
            android:layout_alignTop="@id/routeiv"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:text=""
            android:textSize="@dimen/text_12"
            />
        <TextView
            style="@style/shopMsbcolorTitleText"
            android:layout_alignTop="@id/routeiv"
            android:layout_toRightOf="@id/routenum"
            android:layout_toLeftOf="@id/routetime"
            android:textColor="@color/black"
            android:text="物流助手"
            android:textSize="@dimen/text_12"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlt_youhui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/youhuiiv"
            android:src="@drawable/youhui"
            android:layout_width="@dimen/margin_width70"
            android:layout_height="@dimen/margin_width70"
            android:padding="@dimen/margin_5"
            />
        <TextView
            android:id="@+id/youhuinum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_red_oval"
            android:gravity="center"
            android:text=""
            android:layout_alignRight="@id/youhuiiv"
            android:textColor="@color/white"
            android:textSize="@dimen/text_10"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/youhuitv"
            style="@style/shopMsbcolorTitleText"
            android:layout_alignBottom="@id/youhuiiv"
            android:layout_toRightOf="@id/youhuinum"
            android:text=""
            android:textSize="@dimen/text_12"
            android:textColor="@color/gray_black" />
        <TextView
            android:id="@+id/youhuitime"
            style="@style/shopMsbcolorTitleText"
            android:layout_alignTop="@id/youhuiiv"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:text=""
            android:textSize="@dimen/text_12"
            />
        <TextView
            style="@style/shopMsbcolorTitleText"
            android:layout_alignTop="@id/youhuiiv"
            android:layout_toRightOf="@id/youhuinum"
            android:layout_toLeftOf="@id/youhuitime"
            android:textColor="@color/black"
            android:text="优惠促销"
            android:textSize="@dimen/text_12"

            />
    </RelativeLayout>
    <include
        android:layout_marginTop="@dimen/margin_Modules"
        layout="@layout/smart_refresh_rcl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>