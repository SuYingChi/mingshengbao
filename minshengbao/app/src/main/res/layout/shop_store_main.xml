<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          >

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width200"
                app:contentScrim="@color/msb_color"
                app:expandedTitleMarginEnd="48dp"
                app:expandedTitleMarginStart="80dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false">


                <RelativeLayout
                    android:id="@+id/head_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7">
                <TextView
                    android:id="@+id/storeleixin"
                    android:textSize="@dimen/text_width18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="普通店铺"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_trans"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="@dimen/margin_Modules"
                    />
                    <TextView
                        android:id="@+id/storename"
                       style="@style/shopMsbcolorTitleText"
                        android:textColor="@color/white"
                        android:layout_above="@id/storeleixin"
                        android:layout_alignLeft="@id/storeleixin"
                        android:drawableRight="@drawable/right_grey_angle"
                        android:drawablePadding="@dimen/margin_Modules"
                        />
                    <ImageView
                        android:id="@+id/collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/margin_Modules"
                        />
                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="pin"
                    app:layout_collapseParallaxMultiplier="0.7"
                    app:contentInsetStart="0dp"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                  >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="?actionBarSize"
                            android:layout_height="?actionBarSize"
                            android:src="@drawable/back2x"
                            android:paddingLeft="@dimen/dp14"
                            android:paddingRight="@dimen/dp14"
                            android:paddingTop="24dp"
                            />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                        <TextView
                            android:id="@+id/tvtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingTop="24dp"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                        <ImageView
                            android:id="@+id/searchiv"
                            android:layout_width="?actionBarSize"
                            android:layout_height="?actionBarSize"
                            android:paddingLeft="@dimen/dp14"
                            android:paddingRight="@dimen/dp14"
                            android:paddingTop="24dp"
                            android:src="@drawable/nc_icon_search_w"
                            android:layout_marginRight="10dp"
                            />

                        <ImageView
                            android:id="@+id/menu"
                            android:layout_width="?actionBarSize"
                            android:layout_height="?actionBarSize"
                            android:src="@drawable/menu"
                            android:paddingLeft="@dimen/dp14"
                            android:paddingRight="@dimen/dp14"
                            android:paddingTop="24dp"
                            />
                    </LinearLayout>
                </android.support.v7.widget.Toolbar>
                <!-- app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>
    <!--    <android.support.v4.widget.NestedScrollView
            android:id="@+id/nsv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >
        <android.support.design.widget.TabLayout
            android:id="@+id/toolbar_tab"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:fillViewport="false"
            app:tabIndicatorColor="@color/msb_color"
            app:tabIndicatorHeight="2.0dp"
            app:tabSelectedTextColor="@color/msb_color"
            app:tabTextColor="@color/black">
            <!--   app:layout_scrollFlags="scroll"-->

            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:text="首页" />

            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:text="宝贝" />

            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:text="新品" />

            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:text="活动" />


        </android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/main_vp_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_Modules"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
            <!--防止出现滑动冲突时添加的属性 并且跟随者APPbar折叠和展开一起动-->
        <!--    </android.support.v4.widget.NestedScrollView>-->
        </LinearLayout>
       <!-- </android.support.v4.widget.NestedScrollView>-->
    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/nc_bg" >
    <TextView
        android:id="@+id/storefenlei"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="@dimen/margin_Modules"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp1"
        android:text="商品分类"
        android:drawableLeft="@drawable/shop_fenlei"
        android:drawablePadding="@dimen/margin_Modules"
       />
    <TextView
        android:id="@+id/storejieshao"
        android:background="@color/white"
        android:layout_marginRight="@dimen/dp1"
        android:padding="@dimen/margin_Modules"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="店铺介绍"
        android:drawableLeft="@drawable/shop_store"
        android:drawablePadding="@dimen/margin_Modules"
        />
    <TextView
        android:id="@+id/kefu"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_Modules"
        android:text="联系客服"
        android:drawableLeft="@drawable/order_detai_kefu"
        android:drawablePadding="@dimen/margin_Modules"

        />
    </LinearLayout>
</LinearLayout>