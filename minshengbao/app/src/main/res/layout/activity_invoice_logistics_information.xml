<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:background="@color/background_gray"
    tools:context=".functionActivity.invoiceModule.InvoiceLogisticsInformationActivity">
    <include layout="@layout/layout_header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/transparent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/id_portrait_view"
                    android:layout_width="@dimen/margin_width80"
                    android:layout_height="@dimen/margin_width80"
                    android:layout_marginTop="@dimen/margin_width15"
                    android:layout_marginBottom="@dimen/margin_width15"
                    android:layout_centerVertical="true"
                    android:src="@drawable/logistics_agitate_good_xh"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/id_portrait_view"
                    android:layout_toEndOf="@+id/id_portrait_view"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:layout_marginBottom="@dimen/margin_width10"
                    android:layout_centerVertical="true"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/id_logistics_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_383838"
                        android:textSize="@dimen/text_width14"
                        android:text="@string/default_text"/>
                    <TextView
                        android:id="@+id/id_express_orderNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/id_logistics_company"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:textSize="@dimen/text_width14"
                        android:textColor="@color/color_383838"
                        android:text="@string/default_text"/>
                    <TextView
                        android:id="@+id/id_express_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/id_express_orderNo"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:textSize="@dimen/text_width14"
                        android:textColor="@color/color_383838"
                        android:text="@string/default_text"/>
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width10"/>
            <com.msht.minshengbao.custom.widget.ListViewForScrollView
                android:id="@+id/id_logistics_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:layout_marginBottom="@dimen/margin_width10">
            </com.msht.minshengbao.custom.widget.ListViewForScrollView>
        </LinearLayout>

    </ScrollView>
</LinearLayout>