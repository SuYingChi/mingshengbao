<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical"
    tools:context=".functionActivity.GasService.GasInternetTableActivity">
    <include layout="@layout/layout_header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioGroup
                android:id="@+id/id_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width10"
                android:background="@color/white">
                <RadioButton
                    android:id="@+id/id_rb_address"
                    android:layout_marginLeft="@dimen/margin_width15"
                    android:layout_marginStart="@dimen/margin_width15"
                    android:drawablePadding="@dimen/margin_width5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_width45"
                    android:text="@string/select_customerNo_query"
                    android:textSize="@dimen/text_width16"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_width10"
                    android:background="@color/background_gray" />
                <com.msht.minshengbao.ViewUI.widget.ListViewForScrollView
                    android:id="@+id/id_addre_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.msht.minshengbao.ViewUI.widget.ListViewForScrollView>
                <View
                    android:id="@+id/id_line_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_width10"
                    android:background="@color/background_gray" />
                <include layout="@layout/layout_line_gray"/>
                <RadioButton
                    android:id="@+id/id_rb_customer"
                    android:layout_marginLeft="@dimen/margin_width15"
                    android:layout_marginStart="@dimen/margin_width15"
                    android:drawablePadding="@dimen/margin_width5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_width45"
                    android:text="@string/input_customerNo_query"
                    android:textSize="@dimen/text_width16"/>
            </RadioGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width10"/>
            <RelativeLayout
                android:id="@+id/id_customer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width50"
                android:background="@color/white"
                android:visibility="gone">
                <EditText
                    android:id="@+id/id_et_customerNo"
                    android:layout_marginLeft="@dimen/margin_width45"
                    android:layout_marginRight="@dimen/margin_width45"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:layout_marginBottom="@dimen/margin_width10"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:ems="10"
                    android:hint="查看纸质账单或拨打963666"
                    android:paddingLeft="@dimen/margin_width15"
                    android:paddingRight="@dimen/margin_width15"
                    android:layout_height="@dimen/margin_width40"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_white_border_rectangle"
                    android:textSize="@dimen/text_width16"/>
            </RelativeLayout>
            <Button
                android:id="@+id/id_btn_payquery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width45"
                android:layout_marginTop="@dimen/margin_width60"
                android:layout_marginBottom="@dimen/margin_width25"
                android:layout_marginRight="@dimen/margin_width45"
                android:layout_marginLeft="@dimen/margin_width45"
                android:text="@string/query_text"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18"
                android:background="@drawable/selector_touch_button_change"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>