<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.msht.minshengbao.androidShop.customerview.XScrollView
    android:id="@+id/xsl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >    <!--第一模块-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_width150"
            android:background="@color/msb_color"
            />
        <RelativeLayout
            android:id="@+id/rlt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_width100"
            android:layout_marginLeft="@dimen/margin_width30"
            android:layout_marginRight="@dimen/margin_width30"
            android:layout_marginBottom="@dimen/margin_Modules"
            android:padding="@dimen/margin_Modules"
            android:background="@drawable/shape_white_layout"
            >
            <ImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/margin_width100"
                android:layout_height="@dimen/margin_width100"
                />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16"
                android:textColor="@color/black"
                android:maxLines="2"
                android:layout_marginLeft="@dimen/margin_Modules"
                android:layout_toRightOf="@id/iv"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/iv"
                android:layout_marginLeft="@dimen/margin_Modules"
                android:layout_alignBottom="@id/iv"
                >
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_18"
                android:textColor="@color/msb_color"
                android:layout_marginRight="@dimen/margin_Modules"
                />
                <TextView
                    android:id="@+id/marketprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/shop_grey"
                    />
            </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/rlt"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_Modules"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本拼团还有"
                android:textColor="@color/red"
                android:textSize="@dimen/text_14"
                />
            <TextView
                android:id="@id/hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:textColor="@color/white"
                android:padding="@dimen/margin_width2"
                android:textSize="@dimen/text_18"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时"
                android:textColor="@color/red"
                android:textSize="@dimen/text_14"
                />
            <TextView
                android:id="@id/minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18"
                android:padding="@dimen/margin_width2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分"
                android:textColor="@color/red"
                android:textSize="@dimen/text_14"
                />
            <TextView
                android:id="@id/second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:textColor="@color/white"
                android:padding="@dimen/margin_width2"
                android:textSize="@dimen/text_18"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秒"
                android:textColor="@color/red"
                android:textSize="@dimen/text_14"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动解散"
                android:textColor="@color/red"
                android:textSize="@dimen/text_14"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_Modules"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还差"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14"
                />
            <TextView
                android:id="@+id/leftnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X人"
                android:textColor="@color/red"
                android:textSize="@dimen/text_14"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成团，赶紧邀请好友前来拼团吧！"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_width50"
            android:gravity="center_vertical"
            >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <TextView
            android:id="@+id/share"
            android:layout_width="@dimen/margin_width200"
            android:layout_marginTop="@dimen/margin_width20"
            android:layout_gravity="center_horizontal"
            android:text="邀请好友来拼团"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/white"
            android:background="@drawable/btn_pay"
            />
        <TextView
            android:id="@+id/backmain"
            android:layout_width="@dimen/margin_width200"
            android:layout_marginTop="@dimen/margin_width20"
            android:layout_gravity="center_horizontal"
            android:text="回到首页"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/red"
            android:background="@drawable/btn_oringe_stoke"
            />
    </LinearLayout>
        <TextView
            android:id="@+id/pingtuanrule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_14"
            android:layout_marginTop="@dimen/margin_Modules"
            android:layout_below="@id/ll"
            android:paddingLeft="@dimen/margin_Modules"
            android:paddingRight="@dimen/margin_Modules"
            android:paddingBottom="@dimen/margin_width100"
            />
    </RelativeLayout>
</com.msht.minshengbao.androidShop.customerview.XScrollView>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="0dp"
        android:background="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:src="@drawable/gray_back_xh"
                android:padding="@dimen/dp14"
                />

            <TextView
                android:id="@+id/tvtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="拼团详情"
                android:textSize="@dimen/text_18"
                android:textColor="@color/black"
                />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</RelativeLayout>