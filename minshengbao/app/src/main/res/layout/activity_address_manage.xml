<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_address_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.FunctionActivity.MyActivity.AddressManageActivity">
    <include layout="@layout/layout_header"/>
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.msht.minshengbao.ViewUI.widget.ListViewForScrollView
                android:id="@+id/id_address_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null">
            </com.msht.minshengbao.ViewUI.widget.ListViewForScrollView>
            <RelativeLayout
                android:id="@+id/id_re_nodata"
                android:layout_width="match_parent"
                android:layout_height="45dp" >
                <TextView
                    android:id="@+id/id_nodata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="当前没有添加地址"
                    android:textSize="@dimen/text_18"
                    android:textColor="@color/colorOrange"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/id_re_newaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width48"
        android:background="@drawable/selector_rectangle_change_button">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加新地址"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>
