<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".functionActivity.repairService.RepairOrderListActivity">
    <include layout="@layout/layout_header"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/id_order_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.jcodecraeer.xrecyclerview.XRecyclerView>
        <RelativeLayout
            android:id="@+id/id_re_nodata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <ImageView
                android:id="@+id/id_img_wufuwu"
                android:layout_width="@dimen/margin_width120"
                android:layout_height="@dimen/margin_width120"
                android:contentDescription="@string/picture_text"
                android:layout_marginTop="@dimen/margin_width30"
                android:layout_centerHorizontal="true"
                android:src="@drawable/order_data_xh"/>
            <TextView
                android:id="@+id/id_tv_wufuwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/id_img_wufuwu"
                android:layout_marginTop="@dimen/margin_width20"
                android:textSize="@dimen/text_width18"
                android:text="@string/no_server_order" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>