<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingTop="2dp">

    <LinearLayout
        android:id="@+id/ll_tab0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_tab0"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/main_index_my_home_n" />

        <TextView

            android:id="@+id/tv_tab0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="商城首页"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tab1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_tab1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/main_index_my_cart_n" />

        <TextView

            android:id="@+id/tv_tab1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="购物车"
            android:textColor="#525252"
            android:textSize="@dimen/text_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tab2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_tab2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/main_index_my_mine_n" />

        <TextView
            android:id="@+id/tv_tab2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="商城订单"
            android:textColor="#525252"
            android:textSize="@dimen/text_16" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_tab3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_tab3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/shop_refund_n" />

        <TextView
            android:id="@+id/tv_tab3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="退货/退款"
            android:textColor="#525252"
            android:textSize="@dimen/text_16" />
    </LinearLayout>

</LinearLayout>


