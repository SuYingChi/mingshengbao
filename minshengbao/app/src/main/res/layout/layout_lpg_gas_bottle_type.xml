<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/margin_width10"
    android:layout_marginStart="@dimen/margin_width10"
    android:layout_marginRight="@dimen/margin_width10"
    android:layout_marginEnd="@dimen/margin_width10"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width45"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:textColor="@color/color_383838"
            android:textSize="@dimen/text_width16"
            android:text="@string/select_buy_bottle"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/id_layout_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/layout_line_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">
        <ImageView
            android:id="@+id/id_bottle_image"
            android:layout_width="@dimen/margin_width70"
            android:layout_height="@dimen/margin_width70"
            android:layout_margin="@dimen/margin_width10"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width10"
            android:contentDescription="@string/picture_text"
            android:src="@drawable/five_weight_bottle_xh"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id_tv_amount1"
            android:layout_toStartOf="@+id/id_tv_amount1"
            android:layout_marginRight="@dimen/margin_width5"
            android:layout_marginEnd="@dimen/margin_width5"
            android:layout_toRightOf="@+id/id_bottle_image"
            android:layout_toEndOf="@+id/id_bottle_image">
            <TextView
                android:id="@+id/id_bottle_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/color_383838"
                android:textStyle="bold"
                android:text="@string/steel_bottle_type1"/>
            <TextView
                android:id="@+id/id_pledge_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_bottle_type1"
                android:layout_marginTop="@dimen/margin_width6"
                android:textColor="@color/color_9e9e9e"
                android:textSize="@dimen/text_width14"
                android:text="@string/count_text"/>
            <TextView
                android:id="@+id/id_tv_count1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_bottle_type1"
                android:layout_marginTop="@dimen/margin_width6"
                android:layout_toRightOf="@+id/id_pledge_text"
                android:layout_toEndOf="@+id/id_pledge_text"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:textColor="@color/color_9e9e9e"
                android:textSize="@dimen/text_width14"
                android:text="@string/default_text"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/id_tv_amount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/text_width18"
            />
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_layout_fifteen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <include layout="@layout/layout_line_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">
        <ImageView
            android:id="@+id/id_bottle_image2"
            android:layout_width="@dimen/margin_width70"
            android:layout_height="@dimen/margin_width70"
            android:layout_margin="@dimen/margin_width10"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width10"
            android:contentDescription="@string/picture_text"
            android:src="@drawable/fifteen_weight_bottle_xh"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id_tv_amount2"
            android:layout_toStartOf="@+id/id_tv_amount2"
            android:layout_marginRight="@dimen/margin_width5"
            android:layout_marginEnd="@dimen/margin_width5"
            android:background="@color/transparent"
            android:layout_toRightOf="@+id/id_bottle_image2"
            android:layout_toEndOf="@+id/id_bottle_image2">
            <TextView
                android:id="@+id/id_bottle_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/color_383838"
                android:textStyle="bold"
                android:text="@string/steel_bottle_type2"/>
            <TextView
                android:id="@+id/id_pledge_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_bottle_type2"
                android:layout_marginTop="@dimen/margin_width6"
                android:textColor="@color/color_9e9e9e"
                android:textSize="@dimen/text_width14"
                android:text="@string/count_text"/>
            <TextView
                android:id="@+id/id_tv_count2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_bottle_type2"
                android:layout_marginTop="@dimen/margin_width6"
                android:layout_toRightOf="@+id/id_pledge_text2"
                android:layout_toEndOf="@+id/id_pledge_text2"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:textColor="@color/color_9e9e9e"
                android:textSize="@dimen/text_width14"
                android:text="@string/default_text"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/id_tv_amount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/text_width18"
            />
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_layout_fifty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <include layout="@layout/layout_line_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <ImageView
            android:id="@+id/id_bottle_image3"
            android:layout_width="@dimen/margin_width70"
            android:layout_height="@dimen/margin_width70"
            android:layout_margin="@dimen/margin_width10"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width10"
            android:contentDescription="@string/picture_text"
            android:src="@drawable/fifty_weight_bottle_xh"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:layout_toLeftOf="@+id/id_tv_amount3"
            android:layout_toStartOf="@+id/id_tv_amount3"
            android:layout_marginRight="@dimen/margin_width5"
            android:layout_marginEnd="@dimen/margin_width5"
            android:layout_toRightOf="@+id/id_bottle_image3"
            android:layout_toEndOf="@+id/id_bottle_image3">
            <TextView
                android:id="@+id/id_bottle_type3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/color_383838"
                android:textStyle="bold"
                android:text="@string/steel_bottle_type3"/>
            <TextView
                android:id="@+id/id_pledge_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_bottle_type3"
                android:layout_marginTop="@dimen/margin_width6"
                android:textColor="@color/color_9e9e9e"
                android:textSize="@dimen/text_width14"
                android:text="@string/count_text"/>
            <TextView
                android:id="@+id/id_tv_count3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_bottle_type3"
                android:layout_marginTop="@dimen/margin_width6"
                android:layout_toRightOf="@+id/id_pledge_text3"
                android:layout_toEndOf="@+id/id_pledge_text3"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:textColor="@color/color_9e9e9e"
                android:textSize="@dimen/text_width14"
                android:text="@string/default_text"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/id_tv_amount3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/text_width18"
            />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>