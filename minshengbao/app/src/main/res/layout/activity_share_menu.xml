<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_share_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.functionActivity.myActivity.ShareMenuActivity">
    <include layout="@layout/layout_header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/id_er_wei_ma"
                    android:layout_width="@dimen/margin_width195"
                    android:layout_height="@dimen/margin_width195"
                    android:layout_marginTop="@dimen/margin_60"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/erwei_code"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_er_wei_ma"
                    android:text="扫一扫"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/text_25"/>
            </RelativeLayout>
            <Button
                android:layout_marginTop="@dimen/margin_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_25"
                android:minHeight="@dimen/margin_45"
                android:layout_marginLeft="@dimen/margin_65"
                android:layout_marginRight="@dimen/margin_65"
                android:text="分享应用"
                android:textColor="@color/white"
                android:background="@drawable/selector_touch_button_change"
                android:id="@+id/share_menu"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
