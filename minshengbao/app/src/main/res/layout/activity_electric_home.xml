<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.functionActivity.electricVehicle.ElectricHomeActivity">
    <com.msht.minshengbao.custom.widget.MySwipeRefreshLayout
        android:id="@+id/id_refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width15"
                android:layout_marginBottom="@dimen/margin_width15"
                android:layout_gravity="center"
                android:text="下拉刷新"
                android:textSize="@dimen/text_width16" />
        </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_weight="0.4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/white">
                    <com.amap.api.maps.MapView
                        android:id="@+id/id_mapView"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/id_location_img"
                        android:layout_width="@dimen/margin_width20"
                        android:layout_height="@dimen/margin_width36"
                        android:layout_gravity="center"
                        android:contentDescription="@string/picture_text"
                        android:src="@drawable/search_addr_xh"
                        android:translationY="-10dp"/>
                    <RelativeLayout
                        android:id="@+id/id_layout_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_width32"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/shape_gray_border_transparent"
                        android:minHeight="@dimen/margin_width35">
                        <ImageView
                            android:id="@+id/id_addr_img"
                            android:layout_width="@dimen/margin_width18"
                            android:layout_height="@dimen/margin_width18"
                            android:layout_marginLeft="@dimen/margin_width5"
                            android:layout_marginStart="@dimen/margin_width5"
                            android:contentDescription="@string/picture_text"
                            android:layout_centerVertical="true"
                            android:src="@drawable/store_address_xh"/>
                        <TextView
                            android:id="@+id/id_tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxWidth="@dimen/margin_width126"
                            android:layout_toRightOf="@+id/id_addr_img"
                            android:layout_toEndOf="@+id/id_addr_img"
                            android:layout_marginRight="@dimen/margin_width10"
                            android:layout_marginEnd="@dimen/margin_width10"
                            android:layout_marginLeft="@dimen/margin_width5"
                            android:layout_marginStart="@dimen/margin_width5"
                            android:layout_centerVertical="true"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/black" />
                    </RelativeLayout>
                    <android.support.v7.widget.CardView
                        android:id="@+id/id_card_view"
                        android:layout_width="@dimen/margin_width40"
                        android:layout_height="@dimen/margin_width40"
                        android:layout_marginEnd="@dimen/margin_width15"
                        android:layout_marginRight="@dimen/margin_width15"
                        android:layout_marginBottom="@dimen/margin_width15"
                        android:layout_gravity="bottom|end"
                        app:cardCornerRadius="@dimen/margin_width8"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/margin_width3">
                        <ImageView
                            android:id="@+id/id_button_img"
                            android:layout_width="@dimen/margin_width25"
                            android:layout_height="@dimen/margin_width25"
                            android:layout_gravity="center"
                            android:contentDescription="@string/picture_text"
                            android:src="@drawable/setlocation_xh"/>
                    </android.support.v7.widget.CardView>
                </FrameLayout>
                <RelativeLayout
                    android:id="@+id/id_layout_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/margin_width45"
                    android:background="@color/background_gray">
                    <View
                        android:id="@+id/id_view"
                        android:layout_width="@dimen/margin_width50"
                        android:layout_height="@dimen/margin_width5"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_width6"
                        android:background="@color/black_gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/id_view"
                        android:layout_marginTop="@dimen/margin_width15"
                        android:layout_marginBottom="@dimen/margin_width10"
                        android:text="附近维修店"
                        android:textSize="@dimen/text_width16"
                        android:textColor="@color/title_tv"/>
                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_width10"
                    android:background="@color/background_gray"/>
                <RelativeLayout
                    android:layout_weight="0.6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <com.msht.minshengbao.custom.PullRefresh.LoadMoreListView
                        android:id="@+id/id_more_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </com.msht.minshengbao.custom.PullRefresh.LoadMoreListView>
                </RelativeLayout>
            </LinearLayout>
    </com.msht.minshengbao.custom.widget.MySwipeRefreshLayout>
    <include layout="@layout/layout_electric_home_header"/>
</FrameLayout>
