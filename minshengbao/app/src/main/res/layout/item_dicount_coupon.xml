<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_12"
        android:background="@color/background_gray">
    </View>
    <RelativeLayout
        android:id="@+id/id_layout_back"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@drawable/dicount_coupon_xh">
       <TextView
           android:id="@+id/id_scope"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_marginRight="@dimen/margin_25"
           android:layout_marginTop="@dimen/margin_40"
           android:text="使用范围"
           android:textSize="@dimen/text_20"
           />
        <TextView
            android:id="@+id/id_use_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_25"
            android:layout_below="@+id/id_scope"
            android:layout_marginTop="@dimen/margin_20"
            android:text="限制使用"
            android:textSize="@dimen/text_20"
            />
        <TextView
            android:id="@+id/id_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10"
            android:text="结束时间"
            android:textSize="@dimen/text_14"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_toLeftOf="@+id/id_end_date"
            android:layout_marginRight="@dimen/margin_10"
            android:text="--"
            android:textSize="@dimen/text_14"/>
        <TextView
            android:id="@+id/id_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_toLeftOf="@+id/text2"
            android:layout_marginRight="@dimen/margin_10"
            android:text="开始时间"
            android:textSize="@dimen/text_14"/>
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_25"
            android:text="¥"
            android:textSize="@dimen/text_20"
            android:textColor="@color/colorOrange"/>
        <TextView
            android:id="@+id/id_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text3"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_18"
            android:text="10"
            android:textSize="50sp"
            android:textColor="@color/colorOrange"/>

    </RelativeLayout>

</LinearLayout>