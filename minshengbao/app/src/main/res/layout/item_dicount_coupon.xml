<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background_gray"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="@dimen/margin_width5"
    android:paddingTop="@dimen/margin_width5"
    android:paddingLeft="@dimen/margin_width5"
    android:paddingRight="@dimen/margin_width5"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/id_layout_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width122"
        android:background="@drawable/dicount_coupon_2xh">
        <TextView
            android:id="@+id/id_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_width22"
            android:layout_marginTop="@dimen/margin_width15"
            android:layout_marginLeft="@dimen/margin_width15"
            android:text="@string/default_text"
            android:textStyle="bold"
            android:textColor="@color/yellow_text"/>
        <TextView
            android:id="@+id/id_effective_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_title_name"
            android:layout_marginTop="@dimen/margin_width6"
            android:layout_marginLeft="@dimen/margin_width15"
            android:textColor="@color/color_9e9e9e"
            android:text="@string/effective_date"
            android:textSize="@dimen/text_width12"/>
        <TextView
            android:id="@+id/id_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_title_name"
            android:layout_marginTop="@dimen/margin_width6"
            android:layout_toRightOf="@+id/id_effective_text"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginRight="@dimen/margin_width10"
            android:textColor="@color/color_9e9e9e"
            android:text="结束时间"
            android:textSize="@dimen/text_width12"/>
        <TextView
            android:id="@+id/id_use_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_effective_text"
            android:layout_marginTop="@dimen/margin_width6"
            android:layout_marginLeft="@dimen/margin_width15"
            android:textColor="@color/color_9e9e9e"
            android:text="@string/use_text"
            android:textSize="@dimen/text_width12"/>
       <TextView
           android:id="@+id/id_scope"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/id_effective_text"
           android:layout_marginTop="@dimen/margin_width6"
           android:layout_toRightOf="@+id/id_use_text"
           android:layout_marginLeft="@dimen/margin_width10"
           android:textColor="@color/color_9e9e9e"
           android:text="使用范围"
           android:textSize="@dimen/text_width12"
           />
        <TextView
            android:id="@+id/id_use_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_use_text"
            android:layout_marginTop="@dimen/margin_width6"
            android:layout_toRightOf="@+id/id_use_text"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width12"
            android:textColor="@color/color_9e9e9e"
            android:text="限制使用"
            android:textSize="@dimen/text_width12"
            />
        <TextView
            android:id="@+id/id_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_width15"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_width20"
            android:text="¥10"
            android:textStyle="bold"
            android:textSize="@dimen/text_width35"
            android:textColor="@color/yellow_text"/>
        <Button
            android:id="@+id/id_btn_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_width25"
            android:minWidth="@dimen/margin_width70"
            android:background="@drawable/selector_yellow_button"
            android:layout_below="@+id/id_amount"
            android:layout_marginTop="@dimen/margin_width8"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_width10"
            android:text="点击使用"
            android:textSize="@dimen/text_width12"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/id_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_btn_use"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_width20"
            android:text="@string/default_text"
            android:textSize="@dimen/text_width10"
            android:textColor="@color/red"/>
    </RelativeLayout>
</LinearLayout>