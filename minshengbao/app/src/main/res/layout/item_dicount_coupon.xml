<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background_gray"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="@dimen/margin_width5"
    android:paddingTop="@dimen/margin_width5"
    android:paddingLeft="@dimen/margin_width5"
    android:paddingRight="@dimen/margin_width5"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/id_layout_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/left_kaqun"
        >
            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
            <TextView
                android:id="@+id/id_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥10"
                android:textStyle="bold"
                android:textSize="@dimen/text_width35"
                android:textColor="@color/white"/>
         <TextView
            android:id="@+id/below_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥10"
             android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/text_12"
            android:textColor="@color/white"
             />
            </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
           >
            <TextView
                android:id="@+id/remain_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仅剩15天"
                android:textColor="@color/white"
                android:background="@color/red"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/margin_width90"
                android:paddingRight="@dimen/margin_width30"
                android:paddingTop="@dimen/dp5"
                android:paddingBottom="@dimen/dp5"
                android:transformPivotX="@dimen/margin_width120"
                android:transformPivotY="@dimen/margin_width60"
                android:textSize="@dimen/text_15"
                android:rotation="45"
                />
            <TextView
                android:id="@+id/id_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_width15"
                android:layout_marginTop="@dimen/margin_width15"
                android:text="@string/default_text"
                android:textColor="@color/yellow_text"
                android:textSize="@dimen/text_width22"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_effective_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_title_name"
                android:layout_marginLeft="@dimen/margin_width15"
                android:layout_marginTop="@dimen/margin_width6"
                android:textColor="@color/color_9e9e9e"
                android:textSize="@dimen/text_width12" />

            <TextView
                android:id="@+id/id_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_title_name"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginTop="@dimen/margin_width6"
                android:layout_toRightOf="@+id/id_effective_text"
                android:text="结束时间"
                android:textColor="@color/color_9e9e9e"
                android:textSize="@dimen/text_width12" />

            <RelativeLayout
                android:id="@+id/rlt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_effective_text"
                android:layout_marginLeft="@dimen/margin_width15"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_width6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/use"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="点击使用"
                    android:textColor="@color/color_9e9e9e"
                    android:textSize="@dimen/text_width12" />

                <TextView
                    android:id="@+id/id_scope"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_width2"
                    android:layout_toLeftOf="@id/use"
                    android:text="xxxxxxxxx"
                    android:textColor="@color/color_9e9e9e"
                    android:textSize="@dimen/text_width12" />
            </RelativeLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_below="@+id/rlt"
                android:layout_marginLeft="@dimen/margin_Modules"
                android:layout_marginRight="@dimen/margin_Modules"
                android:layout_marginTop="@dimen/margin_Modules"
                android:background="@color/shop_grey" />

            <TextView
                android:id="@+id/show_use_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_width6"
                android:text="使用说明"
                android:textColor="@color/color_9e9e9e"
                android:textSize="@dimen/text_width12" />

            <ImageView
                android:id="@+id/updown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/show_use_desc"
                android:layout_toRightOf="@id/show_use_desc"
                android:src="@drawable/shop_up_triangle" />

        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/use_desc"
        android:textSize="@dimen/text_15"
        android:textColor="#daa015"
        android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_Modules"
        android:layout_marginTop="@dimen/dp1"
        android:background="#ffedc2"
        android:visibility="visible"
        />
</LinearLayout>