<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF" >
        <ImageView
            android:layout_width="@dimen/margin_20"
            android:layout_height="@dimen/margin_21"
            android:src="@drawable/customer_xh"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginTop="@dimen/margin_6"
            android:layout_marginBottom="@dimen/margin_width10"
            android:layout_alignParentLeft="true"
            android:id="@+id/id_customerView" />
        <TextView
            android:id="@+id/id_customerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_customerView"
            android:layout_marginLeft="@dimen/margin_width10"
            android:textSize="@dimen/text_18"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/margin_6"
            android:layout_alignBottom="@+id/id_customerView"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="21dp"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/id_customerText"
            android:src="@drawable/address_xh"
            android:id="@+id/imageView8" />
        <TextView
            android:id="@+id/item_left_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView8"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_toLeftOf="@+id/id_delect_img"
            android:layout_marginRight="@dimen/margin_width10"
            android:textSize="@dimen/text_18"
            android:layout_below="@+id/id_customerText"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width10"
            android:textColor="#000000"
            />
        <ImageView
            android:id="@+id/id_delect_img"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_width10"
            android:src="@drawable/delect_addr_xh"
            />
    </RelativeLayout>

</LinearLayout>