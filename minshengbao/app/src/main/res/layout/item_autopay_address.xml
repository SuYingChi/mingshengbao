<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <ImageView
        android:id="@+id/id_customerView"
        android:layout_width="@dimen/margin_width30"
        android:layout_height="@dimen/margin_width30"
        android:src="@drawable/gas_customer_icon_xh"
        android:layout_marginLeft="@dimen/margin_width8"
        android:layout_marginStart="@dimen/margin_width8"
        android:layout_marginTop="@dimen/margin_width10"
        android:layout_marginBottom="@dimen/margin_width10"
        android:contentDescription="@string/picture_text"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_width6"
        android:layout_marginBottom="@dimen/margin_width6"
        android:layout_marginLeft="@dimen/margin_width10"
        android:layout_marginStart="@dimen/margin_width10"
        android:layout_toRightOf="@+id/id_customerView"
        android:layout_toEndOf="@+id/id_customerView">
        <TextView
            android:id="@+id/id_customerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/color_383838"
            android:layout_marginTop="@dimen/margin_width6"/>
        <TextView
            android:id="@+id/item_left_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:layout_toLeftOf="@+id/id_delect_img"
            android:layout_toStartOf="@+id/id_delect_img"
            android:layout_marginRight="@dimen/margin_width10"
            android:textSize="@dimen/text_width16"
            android:layout_below="@+id/id_customerText"
            android:layout_marginTop="@dimen/margin_width8"
            android:layout_marginBottom="@dimen/margin_width6"
            android:textColor="@color/color_383838"/>
        <ImageView
            android:id="@+id/id_delect_img"
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/picture_text"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:src="@drawable/delect_addr_xh"/>
    </RelativeLayout>
</RelativeLayout>