<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/id_map_layout"
    android:background="@drawable/shape_change_background">
    <View
        android:id="@+id/id_status_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_width20" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_width50"
        android:focusable="true"
        android:orientation="horizontal"
        android:focusableInTouchMode="true">
        <RelativeLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin_width14"
            android:paddingStart="@dimen/margin_width14"
            android:paddingEnd="@dimen/margin_width8"
            android:paddingRight="@dimen/margin_width8">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back2x"
                android:contentDescription="@string/picture_text"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/id_edit_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_width10"
            android:layout_toRightOf="@+id/layout_back"
            android:layout_toEndOf="@+id/layout_back"
            android:layout_toStartOf="@+id/id_cancel"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id_cancel"
            android:background="@drawable/shape_gray_border_transparent"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:minHeight="@dimen/margin_width40">
                <ImageView
                    android:id="@+id/id_search_img"
                    android:layout_width="14dp"
                    android:layout_height="@dimen/margin_20"
                    android:layout_marginStart="@dimen/margin_width5"
                    android:layout_marginLeft="@dimen/margin_width5"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/picture_text"
                    android:src="@drawable/server_addr_xh"/>
                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/id_search_img"
                    android:layout_toEndOf="@+id/id_search_img"
                    android:layout_marginLeft="@dimen/margin_width5"
                    android:layout_marginStart="@dimen/margin_width5"
                    android:layout_centerVertical="true"
                    android:inputType="textPersonName"
                    android:background="@null"
                    android:hint="请输入地址信息"
                    android:textColor="#ff444444"
                    android:textSize="@dimen/text_width16"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/id_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:text="@string/cancel_text"
            android:textColor="@color/white"
            android:textSize="@dimen/text_width16"/>
    </RelativeLayout>

</LinearLayout>