<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_5"
    android:background="#e2e2e2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_layout"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginTop="@dimen/margin_width10"
                android:text="交易号"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/black1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/id_trade_no"
                android:text="100.00"
                android:textColor="@color/black"
                android:textSize="@dimen/text_width16"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginTop="@dimen/margin_width10"
                />
            <TextView
                android:id="@+id/id_text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_text1"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginTop="@dimen/margin_width10"
                android:text="消费时间"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/black1"/>
            <TextView
                android:id="@+id/id_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin_width15"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_below="@+id/id_text1"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/black1"
                />
            <TextView
                android:id="@+id/id_text_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_below="@+id/id_text_time"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginBottom="@dimen/margin_width10"
                android:text="预存款余额"
                android:textColor="@color/black1"
                android:textSize="@dimen/text_width16"/>
            <TextView
                android:id="@+id/id_tv_blance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_below="@+id/id_text_time"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginBottom="@dimen/margin_width10"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/red"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>