<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_width="wrap_content"
    android:paddingEnd="@dimen/margin_width40"
    android:paddingStart="@dimen/margin_width40"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="@dimen/margin_width275"
        android:layout_height="@dimen/margin_width275"
        android:layout_gravity="center_horizontal"
        android:background="@color/transparent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/id_advertising_img"
            android:scaleType="fitXY"
            android:layout_width="@dimen/margin_width225"
            android:layout_height="@dimen/margin_width225"
            android:layout_marginStart="@dimen/margin_width20"
            android:layout_marginLeft="@dimen/margin_width20"
            android:layout_below="@+id/id_close_img"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_centerHorizontal="true"
            app:actualImageResource="@drawable/water_red_packet_ad"/>
        <ImageView
            android:id="@+id/id_close_img"
            android:layout_width="@dimen/margin_width25"
            android:layout_height="@dimen/margin_width25"
            android:contentDescription="@string/picture_text"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/cancel_dialog_h"/>
    </RelativeLayout>

</LinearLayout>