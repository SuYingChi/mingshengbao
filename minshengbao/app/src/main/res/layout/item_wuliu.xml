<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/margin_Modules"
    android:layout_marginRight="@dimen/margin_Modules"
    >
    <TextView
        android:id="@+id/time"
        style="@style/grey_small_text"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@color/shop_grey"
        android:padding="3dp"
        android:layout_marginTop="@dimen/margin_Modules"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_round_white"
        android:layout_marginTop="@dimen/margin_width20"
        >
        <TextView
            android:id="@+id/point"
            android:layout_width="@dimen/text_12"
            android:layout_height="@dimen/text_12"
            android:background="@drawable/shop_red_oval"
            android:gravity="center"
            android:visibility="visible" />
        <TextView
            android:id="@+id/title"
            style="@style/shopBlackTitleText"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="left"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="visible"
            >

            <ImageView
                android:id="@+id/iv"
                android:src="@drawable/gas_service"
                android:layout_width="@dimen/margin_width70"
                android:layout_height="@dimen/margin_width70"
                android:padding="@dimen/margin_5"
                />
            <TextView
                android:id="@+id/goodtv"
                style="@style/shopMsbcolorTitleText"
                android:layout_alignBottom="@id/iv"
                android:layout_toRightOf="@id/iv"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/text_15"
                android:text="112121212"
                android:textColor="@color/gray_black" />
            <TextView
                android:id="@+id/goodname"
                style="@style/shopMsbcolorTitleText"
                android:layout_alignTop="@id/iv"
                android:layout_toRightOf="@id/iv"
                android:textColor="@color/black"
                android:text="燃气服务"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/text_15"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_Modules"/>
</LinearLayout>