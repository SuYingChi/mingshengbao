<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width45"
        android:background="@color/white">
    <TextView
        android:id="@+id/id_bottle_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_width10"
        android:layout_marginStart="@dimen/margin_width10"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_width15"
        android:layout_marginTop="@dimen/margin_width15"
        android:textSize="@dimen/text_width16"
        android:textColor="@color/color_383838"
        android:textStyle="bold"
        android:text="@string/steel_bottle_type1"/>
    <TextView
        android:id="@+id/id_bottle_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/id_five_amount"
        android:layout_toStartOf="@+id/id_five_amount"
        android:layout_toRightOf="@+id/id_bottle_type"
        android:layout_toEndOf="@+id/id_bottle_type"
        android:layout_marginStart="@dimen/margin_width20"
        android:layout_marginLeft="@dimen/margin_width20"
        android:visibility="gone"
        android:text="@string/default_value0"/>
    <TextView
        android:id="@+id/id_five_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/margin_width10"
        android:layout_marginEnd="@dimen/margin_width10"
        android:textSize="@dimen/text_width16"
        android:textColor="@color/colorOrange"
        android:text="@string/default_value0"/>
    </RelativeLayout>
</LinearLayout>