<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/margin_Modules"
    android:background="@color/white"
    >
<ImageView
    android:id="@+id/iv"
    android:layout_width="@dimen/margin_width50"
    android:layout_height="@dimen/margin_width50"
    android:layout_marginRight="@dimen/dp5"
    />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/msb_color"
        android:textSize="@dimen/text_12"
        android:text="XXXX"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_12"
        android:text="的团"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/margin_Modules"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12"
            android:text="还差" />
            <TextView
                android:id="@+id/leftnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/msb_color"
                android:textSize="@dimen/text_12"
                android:text="XXXX" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12"
            android:text="人拼成" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hour"
                android:textSize="@dimen/text_12"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_12"
                android:textColor="@color/black"
                android:text="小时"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/minute"
                android:textSize="@dimen/text_12"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_12"
                android:textColor="@color/black"
                android:text="分钟"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/second"
                android:textSize="@dimen/text_12"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_12"
                android:textColor="@color/black"
                android:text="秒"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/cantuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="参团"
        android:textSize="@dimen/text_14"
        android:textColor="@color/white"
        android:background="@drawable/btn_pay"
        />
</LinearLayout>