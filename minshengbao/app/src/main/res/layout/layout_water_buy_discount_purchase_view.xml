<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/id_coupon_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width40"
        android:background="@color/yellow_more_light">
        <TextView
            android:id="@+id/id_coupon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/color_383838"
            android:text="@string/discount_text"/>
        <TextView
            android:id="@+id/id_coupon_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="end"
            android:layout_toLeftOf="@+id/id_forward1"
            android:layout_toStartOf="@+id/id_forward1"
            android:layout_toRightOf="@+id/id_coupon_text"
            android:layout_toEndOf="@+id/id_coupon_text"
            android:layout_marginEnd="@dimen/margin_width10"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginLeft="@dimen/margin_width15"
            android:layout_marginStart="@dimen/margin_width15"
            android:textSize="@dimen/text_width14"
            android:textColor="@color/red"
            android:text="@string/default_text"/>
        <ImageView
            android:id="@+id/id_forward1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/picture_text"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_width10"
            android:layout_marginRight="@dimen/margin_width10"
            android:src="@drawable/forward_2x"
            android:tint="@color/yellow_gray"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/id_layout_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width50"
        android:baselineAligned="false"
        android:background="@color/transparent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_weight="0.65"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="@dimen/margin_width50">
            <TextView
                android:id="@+id/id_real_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:textSize="@dimen/text_width14"
                android:textColor="@color/colorOrange"
                android:text="@string/real_pay_amount"/>
            <TextView
                android:id="@+id/id_discount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/id_real_amount"
                android:layout_toEndOf="@+id/id_real_amount"
                android:layout_marginLeft="@dimen/margin_width15"
                android:layout_marginStart="@dimen/margin_width15"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginEnd="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_width14"
                android:textColor="@color/app_text"
                android:text="@string/discount_text"/>
        </RelativeLayout>
        <com.msht.minshengbao.custom.ButtonUI.ButtonM
            android:id="@+id/id_btn_pay"
            android:layout_weight="0.35"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_width50"
            android:gravity="center"
            android:text="@string/immediately_pay"
            app:backGroundImage="@drawable/shape_change_blue_bg"
            app:backColorPress="#F4D6CE"
            app:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>