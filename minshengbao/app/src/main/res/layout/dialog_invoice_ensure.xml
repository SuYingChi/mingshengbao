<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:padding="@dimen/margin_width40"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_layout"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_width15"
                android:layout_marginBottom="@dimen/margin_width15"
                android:src="@drawable/invoice_picture_xh"
                android:contentDescription="@string/picture_text"/>
            <TextView
                android:id="@+id/id_invoice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/default_text"
                android:textSize="@dimen/text_width20"
                android:textColor="@color/color_383838"/>
            <ImageView
                android:id="@+id/id_close_cancel"
                android:layout_width="@dimen/margin_width20"
                android:layout_height="@dimen/margin_width20"
                android:contentDescription="@string/picture_text"
                android:layout_marginTop="@dimen/margin_width5"
                android:layout_marginRight="@dimen/margin_width5"
                android:layout_marginEnd="@dimen/margin_width3"
                android:layout_gravity="end"
                android:src="@drawable/close_roundel_xh"/>
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_width10"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width20"
                android:layout_marginStart="@dimen/margin_width20"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/color_9e9e9e"
                android:text="@string/Email"/>
            <TextView
                android:id="@+id/id_tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_383838"
                android:textSize="@dimen/text_width16"
                android:layout_toEndOf="@+id/id_email_text"
                android:layout_toRightOf="@+id/id_email_text"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginBottom="@dimen/margin_width10"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <include layout="@layout/layout_line_interval"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/id_invoice_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_width20"
                android:layout_marginStart="@dimen/margin_width20"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/color_9e9e9e"
                android:text="@string/invoice_type"/>
            <TextView
                android:id="@+id/id_invoice_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_383838"
                android:textSize="@dimen/text_width16"
                android:layout_toEndOf="@+id/id_invoice_text"
                android:layout_toRightOf="@+id/id_invoice_text"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:text="@string/default_text"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/id_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_width20"
                android:layout_marginStart="@dimen/margin_width20"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/color_9e9e9e"
                android:text="@string/invoice_name"/>
            <TextView
                android:id="@+id/id_invoice_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_383838"
                android:textSize="@dimen/text_width16"
                android:layout_toEndOf="@+id/id_name_text"
                android:layout_toRightOf="@+id/id_name_text"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:text="@string/default_text"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/id_taxpayer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_width20"
                android:layout_marginStart="@dimen/margin_width20"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/color_9e9e9e"
                android:text="@string/taxpayer_No"/>
            <TextView
                android:id="@+id/id_taxpayer_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_383838"
                android:textSize="@dimen/text_width16"
                android:layout_toEndOf="@+id/id_taxpayer_text"
                android:layout_toRightOf="@+id/id_taxpayer_text"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:text="@string/default_text"/>
        </RelativeLayout>
        <Button
            android:id="@+id/id_btn_ensure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_width35"
            android:minWidth="@dimen/margin_width150"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_width25"
            android:layout_marginLeft="@dimen/margin_width70"
            android:layout_marginEnd="@dimen/margin_width70"
            android:layout_marginRight="@dimen/margin_width70"
            android:layout_marginStart="@dimen/margin_width70"
            android:background="@drawable/selector_yellow_button"
            android:textColor="@color/white"
            android:textSize="@dimen/text_width14"
            android:text="@string/ensure_send"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_width15"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/id_ensure_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_width10"
                android:layout_marginTop="@dimen/margin_width6"
                android:layout_centerHorizontal="true"
                android:text="@string/please_ensure_email"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/id_ensure_text"
                android:layout_marginTop="@dimen/margin_width5"
                android:textSize="@dimen/text_width10"
                android:text="@string/email_tip_explain"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>