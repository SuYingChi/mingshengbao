<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/id_function_img"
            android:layout_width="@dimen/margin_width38"
            android:layout_height="@dimen/margin_width38"
            android:layout_centerHorizontal="true"
            android:src="@drawable/top_shopmall_xh" />
    </RelativeLayout>
    <TextView
        android:id="@+id/id_function_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_width5"
        android:text="民生商城"
        android:textSize="@dimen/text_width14"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="#FF535353"/>
</LinearLayout>