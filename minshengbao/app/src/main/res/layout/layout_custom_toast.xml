<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_transparent_corner_bg"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/id_top_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/picture_text"
        android:layout_marginBottom="@dimen/margin_width5"
        android:layout_marginTop="@dimen/margin_width8"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_width5"
        android:layout_marginTop="@dimen/margin_width5"
        android:background="@color/transparent">
        <ImageView
            android:id="@+id/id_left_icon"
            android:layout_width="@dimen/margin_width25"
            android:layout_height="@dimen/margin_width25"
            android:contentDescription="@string/picture_text"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_width10"
            android:layout_marginLeft="@dimen/margin_width10"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/id_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/id_left_icon"
            android:layout_toRightOf="@+id/id_left_icon"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:textColor="@color/white"
            android:textSize="@dimen/text_width14"
            android:text="@string/default_text"/>
    </RelativeLayout>

</LinearLayout>