<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gasservirce_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.functionActivity.GasService.GasServiceDetailActivity">
    <include layout="@layout/layout_header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_10"
                android:background="@color/background_gray"  />

            <RelativeLayout
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/id_img_type"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_15"/>
                <TextView
                    android:id="@+id/id_tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/id_img_type"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_18"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:textColor="#414141" />
                <Button
                    android:id="@+id/id_btn_dealwith"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_30"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_15"
                    android:textSize="@dimen/text_16"
                    android:visibility="gone"
                    android:textColor="@color/colorOrange"
                    android:background="@drawable/shape_orange_corner_boder_inwithte"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_10"
                android:background="@color/background_gray" />
            <com.msht.minshengbao.ViewUI.widget.ListViewForScrollView
                android:id="@+id/id_detail_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.msht.minshengbao.ViewUI.widget.ListViewForScrollView>
            <include layout="@layout/layout_line_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15">
                <Button
                    android:id="@+id/id_cancel"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="取消工单"
                    android:visibility="gone"
                    android:textSize="@dimen/text_16"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:background="@drawable/selector_touch_button_change"/>
                <Button
                    android:id="@+id/id_evaluate"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/margin_45"
                    android:textColor="@color/white"
                    android:text="立即评价"
                    android:textSize="@dimen/text_16"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:background="@drawable/selector_touch_button_change"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
