<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/id_re_mywallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/id_function_img"
            android:layout_width="@dimen/margin_width32"
            android:layout_height="@dimen/margin_width32"
            android:layout_centerHorizontal="true"
            android:src="@drawable/mywallet_xh"/>
        <TextView
            android:id="@+id/id_function_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/id_function_img"
            android:layout_marginTop="@dimen/margin_8"
            android:text="我的钱包"
            android:textColor="@color/title_tv"
            android:textSize="@dimen/text_width14"/>
    </RelativeLayout>
</LinearLayout>