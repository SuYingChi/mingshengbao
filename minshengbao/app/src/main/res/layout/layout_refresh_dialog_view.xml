<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_custom_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/indeterminate_drawable"
        android:indeterminateDuration="1800" />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_width10"
        android:paddingRight="@dimen/margin_width10"
        android:text="@string/loading_text"
        android:textColor="@color/white"
        android:textSize="@dimen/text_width16" />
</LinearLayout>