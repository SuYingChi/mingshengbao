<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:padding="@dimen/margin_width6"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/invoice_background_m">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_width35">
            <TextView
                android:id="@+id/id_orderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width15"
                android:layout_marginStart="@dimen/margin_width15"
                android:layout_marginEnd="@dimen/margin_width10"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_toStartOf="@+id/id_time"
                android:layout_toLeftOf="@+id/id_time"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_width14"
                android:textColor="@color/color_383838"/>
            <TextView
                android:id="@+id/id_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/margin_width15"
                android:layout_marginRight="@dimen/margin_width15"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/color_383838"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_parent_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width15"
                android:layout_marginStart="@dimen/margin_width15"
                android:textSize="@dimen/text_width18"
                android:textColor="@color/color_383838"/>
            <TextView
                android:id="@+id/id_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_parent_category"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width15"
                android:layout_marginStart="@dimen/margin_width15"
                android:layout_marginBottom="@dimen/margin_width15"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/title_tv"/>
            <TextView
                android:id="@+id/id_tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/id_unit"
                android:layout_toStartOf="@+id/id_unit"
               android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_width3"
                android:layout_marginEnd="@dimen/margin_width3"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginBottom="@dimen/margin_width10"
                android:textSize="@dimen/text_width25"
                android:textColor="@color/colorOrange"
                />
            <TextView
                android:id="@+id/id_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/margin_width30"
                android:layout_marginEnd="@dimen/margin_width30"
                android:layout_alignBaseline="@+id/id_tv_money"
                android:layout_marginBottom="@dimen/margin_width10"
                android:text="@string/RMB_YUAN"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/colorOrange"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>