<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.FunctionView.fragmeht.IcCard">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/id_btn_scan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width50"
                android:layout_marginLeft="@dimen/margin_width30"
                android:layout_marginRight="@dimen/margin_width30"
                android:layout_marginBottom="@dimen/margin_width20"
                android:background="@drawable/selector_touch_button_change"
                android:minHeight="@dimen/margin_width45"
                android:text="扫一扫"
                android:textColor="@color/white"
                android:textSize="@dimen/text_width18" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/id_img_view"
                    android:layout_width="@dimen/margin_width320"
                    android:layout_height="@dimen/margin_width320"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="@dimen/margin_width30"
                    android:layout_marginLeft="@dimen/margin_width30"
                    android:layout_marginTop="@dimen/margin_width50"
                    android:background="@mipmap/gas_iccard_xh" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
