<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_launch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launch_xh"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.LaunchActivity">
    <FrameLayout
        android:id="@+id/id_frame_layout"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/id_logo_top"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fresco:failureImage="@drawable/logo_top"/>
        <TextView
            android:id="@+id/id_tv_time"
            android:layout_marginTop="@dimen/margin_width15"
            android:layout_marginRight="@dimen/margin_width10"
            android:background="@drawable/shape_transparent_button"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_width20"
            android:textColor="@color/white"
            android:textSize="@dimen/text_width12"
            android:text="3ç§’"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/id_logo_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_buttom_xh"
        android:visibility="gone"/>
</LinearLayout>
