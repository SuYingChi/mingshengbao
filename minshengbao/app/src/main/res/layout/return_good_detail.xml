<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/msb_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="?actionBarSize"
                android:layout_height="match_parent"
                android:padding="@dimen/dp14"
                android:src="@drawable/back2x" />

            <TextView
                style="@style/shopMsbcolorTitleText"
                android:layout_centerInParent="true"
                android:text="退货详情"
                android:textColor="@color/white" />
        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                style="@style/shopMsbcolorTitleText"
                android:layout_width="match_parent"
                android:layout_gravity="top"
                android:background="@color/shop_grey"
                android:text="退款详情"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/shopMsbcolorTitleText"
                    android:text="退款总金额"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_amount"
                    style="@style/shopMsbcolorTitleText"
                    android:text="" />
            </LinearLayout>

            <TextView
                style="@style/shopMsbcolorTitleText"
                android:layout_gravity="left"
                android:text="退款详情"
                android:textColor="@color/black" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcl"
                style="@style/rcl" />

            <TextView
                android:id="@+id/tvpz"
                style="@style/shopMsbcolorTitleText"
                android:layout_gravity="left"
                android:text="凭证上传"
                android:textColor="@color/black" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcl2"
                style="@style/rcl" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/shopMsbcolorTitleText"
                    android:text="退款原因:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/reason"
                    style="@style/shopMsbcolorTitleText"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/shopMsbcolorTitleText"
                    android:text="退款说明:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/detail"
                    style="@style/shopMsbcolorTitleText"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/shopMsbcolorTitleText"
                    android:text="退款金额:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/amount2"
                    style="@style/shopMsbcolorTitleText"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/shopMsbcolorTitleText"
                    android:text="申请件数:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/num"
                    style="@style/shopMsbcolorTitleText"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/shopMsbcolorTitleText"
                    android:text="退款编号:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/sn"
                    style="@style/shopMsbcolorTitleText"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>
            -->

            <TextView
                style="@style/shopMsbcolorTitleText"
                android:layout_width="match_parent"
                android:layout_gravity="top"
                android:background="@color/shop_grey"
                android:text="商家审核"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/shopMsbcolorTitleText"
                    android:text="审核状态"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/state"
                    style="@style/shopMsbcolorTitleText"
                    android:textColor="@color/shop_grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/shopMsbcolorTitleText"
                    android:text="商家备注"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/seller_message"
                    style="@style/shopMsbcolorTitleText"
                    android:textColor="@color/shop_grey" />
            </LinearLayout>

            <TextView
                style="@style/shopMsbcolorTitleText"
                android:layout_width="match_parent"
                android:layout_gravity="top"
                android:background="@color/shop_grey"
                android:text="财务处理"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/shopMsbcolorTitleText"
                    android:text="处理状态"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/caiwu_state"
                    style="@style/shopMsbcolorTitleText"
                    android:textColor="@color/shop_grey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/shopMsbcolorTitleText"
                    android:layout_width="match_parent"
                    android:layout_gravity="top"
                    android:background="@color/shop_grey"
                    android:text="退款详细"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/shopMsbcolorTitleText"
                        android:text="退款方式"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/pay_method"
                        style="@style/shopMsbcolorTitleText"
                        android:textColor="@color/shop_grey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/shopMsbcolorTitleText"
                        android:text="在线退款金额"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/online_refund"
                        style="@style/shopMsbcolorTitleText"
                        android:textColor="@color/shop_grey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/shopMsbcolorTitleText"
                        android:text="返还预存款金额"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/pd_amount"
                        style="@style/shopMsbcolorTitleText"
                        android:textColor="@color/shop_grey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/shopMsbcolorTitleText"
                        android:text="返还优惠券金额"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/rcb_amount"
                        style="@style/shopMsbcolorTitleText"
                        android:textColor="@color/shop_grey" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>