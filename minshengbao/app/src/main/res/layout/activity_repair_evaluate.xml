<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_rpair_evaluate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.functionActivity.repairService.RepairEvaluate">
    <include layout="@layout/layout_header"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/margin_45">
        <TextView
            android:id="@+id/id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:text="订单编号："
            android:textSize="@dimen/text_16"
            android:textColor="@color/black1"/>
        <TextView
            android:id="@+id/id_orderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_text"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:textSize="@dimen/text_18"
            />
        <TextView
            android:id="@+id/id_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:textColor="@color/colorOrange"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/line_gray"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_70">
        <ImageView
            android:id="@+id/id_img_type"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/id_img_type"
            android:layout_marginLeft="@dimen/margin_15">
            <TextView
                android:id="@+id/id_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_18"
                android:textColor="#414141"
                />
            <TextView
                android:id="@+id/id_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_tv_type"
                android:layout_marginTop="@dimen/margin_10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/id_tv_amount"
                android:layout_marginRight="@dimen/margin_5"
                android:text="价位:"
                android:textSize="@dimen/text_16"
                android:textColor="@color/title_tv"
                />
            <TextView
                android:id="@+id/id_tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"
                android:textColor="@color/title_tv"
                android:textSize="@dimen/text_16"/>
            <TextView
                android:id="@+id/id_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_tv_amount"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"
                android:text="2164164164"
                android:textSize="@dimen/text_14"/>
        </RelativeLayout>
    </RelativeLayout>
    <include layout="@layout/layout_line_gray"/>
    <RelativeLayout
        android:id="@+id/id_layout_star"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/id_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_18"
            android:textColor="@color/title_tv"
            android:text="总体评价"/>
        <com.msht.minshengbao.ViewUI.RatingBar
            android:id="@+id/id_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="30dp"
            hedgehog:clickable="true"
            hedgehog:halfstart="true"
            hedgehog:starCount="5"
            hedgehog:starEmpty="@drawable/star_empty"
            hedgehog:starFill="@drawable/star_half"
            hedgehog:starHalf="@drawable/star_full"
            hedgehog:starImageHeight="50dp"
            hedgehog:starImageWidth="60dp"
            hedgehog:starImagePadding="15dp">
        </com.msht.minshengbao.ViewUI.RatingBar>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"
        android:background="@color/background_gray"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/margin_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="评语"
            android:textColor="#444444"
            android:textSize="@dimen/text_18"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <EditText
            android:id="@+id/id_tv_evaluation"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:paddingLeft="@dimen/margin_15"
            android:paddingTop="@dimen/margin_5"
            android:gravity="left|top"
            android:background="@null"
            android:maxLength="120"
            android:hint="请输入您对本次服务的评语"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_below="@+id/id_tv_evaluation"
            android:layout_marginBottom="@dimen/margin_6"
            android:text="最多120字符"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/id_btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_45"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:textSize="@dimen/text_16"
            android:text="提交评价"
            android:textColor="@color/white"
            android:background="@drawable/selector_touch_button_change"/>

    </RelativeLayout>

</LinearLayout>
