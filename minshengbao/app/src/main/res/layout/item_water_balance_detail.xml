<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/margin_width5"
    android:background="@color/background_gray"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_touch_background"
        android:minHeight="@dimen/margin_width45">
        <TextView
            android:id="@+id/id_tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:layout_marginTop="@dimen/margin_width10"
            android:gravity="start"
            android:layout_toStartOf="@+id/id_tv_amount"
            android:layout_toLeftOf="@+id/id_tv_amount"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/color_383838"
            android:text="@string/default_text"/>
        <TextView
            android:id="@+id/id_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_tv_type"
            android:layout_alignBaseline="@+id/id_payType"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width10"
            android:textColor="@color/color_9e9e9e"
            android:textSize="@dimen/text_width12"
            android:text="@string/default_text"/>
        <TextView
            android:id="@+id/id_tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:layout_marginRight="@dimen/margin_width10"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/text_width18"
            android:text="@string/default_text"/>
        <TextView
            android:id="@+id/id_payType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/id_tv_amount"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width10"
            android:textColor="@color/color_9e9e9e"
            android:textSize="@dimen/text_width16"
            android:text="@string/default_text"/>

    </RelativeLayout>
</LinearLayout>