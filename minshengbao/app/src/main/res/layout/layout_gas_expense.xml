<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/id_re_detail"
        android:layout_width="match_parent"
        android:background="@drawable/selector_touch_background"
        android:layout_height="@dimen/margin_width45">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_centerVertical="true"
            android:text="预存款明细"
            android:textSize="@dimen/text_width16"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_width10"
            android:src="@drawable/forward_2x"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/id_layout_nodata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_80"
            android:text="没有查询到欠费信息"
            android:textSize="@dimen/text_width18"
            />
        <RelativeLayout
            android:id="@+id/id_re1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/id_text5"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/id_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:text="投保燃气险"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/text_width18"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_toRightOf="@+id/id_text4"
                android:layout_marginLeft="@dimen/margin_25"
                android:text="让您更安心"
                android:textColor="@color/black1"
                android:textSize="@dimen/text_width18"
                android:textStyle="bold"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>