<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_Modules"
        android:paddingBottom="@dimen/margin_Modules"
        android:background="@color/white"
        android:gravity="center_horizontal"
        >
        <View
            style="@style/shopTitleLine"/>
        <View
            style="@style/shopTitleLinePoint"
           />
        <TextView
            android:id="@+id/title"
            style="@style/shopMsbcolorTitleText"
            />
        <View
            style="@style/shopTitleLinePoint"
            />
        <View
            style="@style/shopTitleLine"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/ImageViewSquare"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:gravity="left" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImageViewRectangle1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/ImageViewRectangle2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>