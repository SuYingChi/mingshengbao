<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.FunctionView.GasService.IcCardExpense">
    <include layout="@layout/layout_header" />

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width10"
                android:background="@color/background_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/id_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginTop="@dimen/margin_width12"
                    android:text="用户号："
                    android:textSize="@dimen/text_width16" />

                <TextView
                    android:id="@+id/id_customerNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/margin_width12"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:textColor="@color/title_tv"
                    android:textSize="@dimen/text_width16" />

                <TextView
                    android:id="@+id/id_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_text1"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:text="地址："
                    android:textSize="@dimen/text_width16" />

                <TextView
                    android:id="@+id/id_address_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/id_text1"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_marginTop="@dimen/margin_width12"
                    android:layout_toRightOf="@+id/id_text2"
                    android:layout_marginLeft="@dimen/margin_width20"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/title_tv"
                    android:textSize="@dimen/text_width16" />

                <TextView
                    android:id="@+id/id_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_text2"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:text="单价："
                    android:textSize="@dimen/text_width16" />

                <TextView
                    android:id="@+id/id_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/id_text2"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:textColor="@color/title_tv"
                    android:textSize="@dimen/text_width16" />

                <TextView
                    android:id="@+id/id_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_text3"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:text="上次日期："
                    android:textSize="@dimen/text_width16" />

                <TextView
                    android:id="@+id/id_last_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/id_text3"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:textColor="@color/title_tv"
                    android:textSize="@dimen/text_width16" />

                <TextView
                    android:id="@+id/id_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_text4"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:layout_marginBottom="@dimen/margin_width12"
                    android:text="上次充值金额："
                    android:textSize="@dimen/text_width16" />

                <TextView
                    android:id="@+id/id_last_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/id_text4"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_marginBottom="@dimen/margin_width12"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:textColor="@color/title_tv"
                    android:textSize="@dimen/text_width16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width10"
                android:background="@color/background_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/margin_width45">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_width10"
                        android:text="本次充值金额"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_width18" />

                    <TextView
                        android:id="@+id/id_tv_rechargeAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_width10"
                        android:textColor="@color/deep_Orange"
                        android:textSize="@dimen/text_width18" />
                </RelativeLayout>

                <include layout="@layout/layout_line_gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/margin_width45">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_width10"
                        android:text="充值燃气体积："
                        android:textSize="@dimen/text_width16" />

                    <TextView
                        android:id="@+id/id_rechargeGas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_width10"
                        android:textSize="@dimen/text_width16" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width10"
                android:background="@color/background_gray" />

            <include layout="@layout/layout_pay_way" />
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/id_btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width45"
        android:background="@drawable/selector_rectangle_change_button"
        android:text="确认支付"
        android:textColor="@color/white"
        android:textSize="@dimen/text_width18"/>
</LinearLayout>
