<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/margin_Modules"
    android:layout_marginRight="@dimen/margin_Modules"
    >
    <TextView
        android:id="@+id/time"
        style="@style/grey_small_text"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@color/shop_grey"
        android:padding="3dp"
        android:layout_marginTop="@dimen/margin_Modules"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_round_white"
        android:layout_marginTop="@dimen/margin_width20"
        >
        <TextView
            android:id="@+id/point"
            android:layout_width="@dimen/text_12"
            android:layout_height="@dimen/text_12"
            android:background="@drawable/shop_red_oval"
            android:gravity="center"
            android:visibility="visible" />
        <TextView
            android:id="@+id/title"
            style="@style/shopBlackTitleText"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="left"
            />
        <TextView
            android:id="@+id/desc"
            style="@style/shopBlackTitleText"
            android:layout_gravity="left"
            android:textColor="@color/shop_grey"
            android:singleLine="true"
            android:ellipsize="end"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_Modules"/>
</LinearLayout>