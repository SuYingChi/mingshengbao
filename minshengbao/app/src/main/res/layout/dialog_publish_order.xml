<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/margin_width15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_layout"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_50">
            <TextView
                android:id="@+id/id_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="确认信息"
                android:textSize="@dimen/text_20"
                android:textColor="@color/black1"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginLeft="@dimen/margin_15"
                android:text="维修项目："
                android:textSize="@dimen/text_16"
                android:textColor="@color/title_tv"/>
            <TextView
                android:id="@+id/id_maintype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_toRightOf="@+id/id_text1"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="00012345"
                android:textSize="@dimen/text_16"
                android:textColor="@color/title_tv"/>
            <TextView
                android:id="@+id/id_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_text1"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginLeft="@dimen/margin_15"
                android:text="姓        名："
                android:textSize="@dimen/text_16"
                android:textColor="@color/title_tv"/>
            <TextView
                android:id="@+id/id_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_maintype"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_toRightOf="@+id/id_text2"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="00012345"
                android:textSize="@dimen/text_16"
                android:textColor="@color/title_tv"/>
            <TextView
                android:id="@+id/id_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_text2"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginLeft="@dimen/margin_15"
                android:text="电话号码："
                android:textSize="@dimen/text_16"
                android:textColor="@color/title_tv"/>
            <TextView
                android:id="@+id/id_phoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_name"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_toRightOf="@+id/id_text3"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="000123459123456789"
                android:textSize="@dimen/text_16"
                android:textColor="@color/title_tv"/>
            <TextView
                android:id="@+id/id_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_text3"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="地        址："
                android:textSize="@dimen/text_16"
                android:textColor="@color/title_tv"/>
            <TextView
                android:id="@+id/id_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_phoneNo"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_toRightOf="@+id/id_text4"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="000123459123456789"
                android:textSize="@dimen/text_16"
                android:textColor="@color/title_tv"/>
        </RelativeLayout>
        <include layout="@layout/layout_line_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/id_cancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_5"
                android:background="@drawable/selector_touch_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="取消"
                    android:textSize="@dimen/text_20"
                    android:textColor="@color/title_tv"/>
            </RelativeLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line_gray"/>
            <RelativeLayout
                android:id="@+id/id_ensure"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_height="match_parent"
                android:background="@drawable/selector_touch_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="确定"
                    android:textSize="@dimen/text_20"
                    android:textColor="@color/colorOrange"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>