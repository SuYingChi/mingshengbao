<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_width20">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_width60"
            android:background="@color/transparent_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_white_layout">
            <TextView
                android:id="@+id/id_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width50"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="@color/color_383838"
                android:textSize="@dimen/text_width18"
                android:text="@string/default_text"/>
            <TextView
                android:id="@+id/id_tv_contents1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginTop="@dimen/margin_width15"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/color_9e9e9e"
                android:textSize="@dimen/text_width14"
                android:text="@string/default_text"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/id_tv_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/color_9e9e9e"
                android:textSize="@dimen/text_width14"
                android:text="@string/default_text"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/margin_width25"
                android:background="@color/line_gray"/>
            <LinearLayout
                android:id="@+id/id_btn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/id_left_button"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_width45"
                    android:background="@drawable/prompt_dialog_btn_left_selector"
                    android:textSize="@dimen/text_width18"
                    android:textColor="@color/colorOrange"
                    android:text="取消"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/light_gray"/>
                <Button
                    android:id="@+id/id_right_button"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_width45"
                    android:background="@drawable/prompt_dialog_btn_right_selector"
                    android:textSize="@dimen/text_width18"
                    android:textColor="@color/color_383838"
                    android:text="继续下单"/>
            </LinearLayout>
            <Button
                android:id="@+id/id_btn_ensure"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width45"
                android:background="@drawable/prompt_dialog_btn_single_selector"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/text_width18"
                android:text="@string/i_know"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/id_dialog_img"
        android:layout_width="@dimen/margin_width126"
        android:layout_height="@dimen/margin_width89"
        android:src="@drawable/water_bucket_xh"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_width15"/>
</FrameLayout>