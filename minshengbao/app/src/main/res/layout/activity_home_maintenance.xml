<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".functionActivity.repairService.HomeMaintenanceActivity">
    <include layout="@layout/layout_header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width10"
                android:background="@color/background"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/margin_width10"
                android:paddingBottom="@dimen/margin_width20"
                android:minHeight="@dimen/margin_width20">
                <com.msht.minshengbao.custom.widget.MyNoScrollGridView
                    android:id="@+id/id_function_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:numColumns="4"
                    android:horizontalSpacing="@dimen/margin_width8"
                    android:verticalSpacing="@dimen/margin_width20">
                </com.msht.minshengbao.custom.widget.MyNoScrollGridView>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width10"
                android:background="@color/background"/>
            <WebView
                android:id="@+id/id_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </WebView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>