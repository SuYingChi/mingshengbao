<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >
  <RelativeLayout
      android:background="@drawable/red_voucher"
      android:layout_width="match_parent"
      android:padding="@dimen/margin_width5"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_width15"
        android:layout_marginTop="@dimen/dp5"
        android:text="@string/default_text"
        android:textColor="@color/msb_color"
        android:textSize="@dimen/text_width22"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/use_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amount"
        android:layout_marginLeft="@dimen/margin_width15"
        android:layout_marginTop="@dimen/margin_width6"
        android:text="@string/default_text"
        android:textColor="@color/msb_color"
        android:textSize="@dimen/text_width12" />

    <TextView
        android:id="@+id/time_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/use_limit"
        android:layout_marginLeft="@dimen/margin_width15"
        android:layout_marginTop="@dimen/margin_width6"
        android:text="@string/default_text"
        android:textColor="@color/msb_color"
        android:textSize="@dimen/text_width12" />

    <TextView
        android:id="@+id/get_voucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp5"
        android:text="立即领取"
        android:textColor="@color/msb_color"
        android:textSize="@dimen/text_18"
        android:textStyle="bold" />
  </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_Modules"/>
</LinearLayout>
