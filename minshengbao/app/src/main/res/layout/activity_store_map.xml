<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.FunctionActivity.Electricvehicle.StoreMap">
    <include layout="@layout/layout_header" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.amap.api.maps.MapView
            android:id="@+id/id_mapView"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <android.support.v7.widget.CardView
            android:id="@+id/id_card_view"
            android:layout_width="@dimen/margin_width45"
            android:layout_height="@dimen/margin_width45"
            android:layout_marginRight="@dimen/margin_width15"
            android:layout_marginBottom="@dimen/margin_width15"
            android:layout_gravity="bottom|right"
            app:cardCornerRadius="@dimen/margin_width8"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/margin_width3">
            <ImageView
                android:id="@+id/id_button_img"
                android:layout_width="@dimen/margin_width30"
                android:layout_height="@dimen/margin_width30"
                android:layout_gravity="center"
                android:src="@drawable/setlocation_xh"/>
        </android.support.v7.widget.CardView>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width60"
        android:background="@color/white">
        <ImageView
            android:id="@+id/id_img"
            android:layout_width="@dimen/margin_width20"
            android:layout_height="@dimen/margin_width20"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginTop="@dimen/margin_width10"
            android:src="@drawable/store_address_xh" />
        <TextView
            android:id="@+id/id_store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_img"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_toLeftOf="@+id/id_tv_distance"
            android:text="店铺"
            android:textColor="@color/black1"
            android:textSize="@dimen/text_width18"/>
        <TextView
            android:id="@+id/id_tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_width15"
            android:layout_marginTop="@dimen/margin_width10"
            android:text="120m"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_width12"/>
        <TextView
            android:id="@+id/id_store_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_img"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width15"
            android:layout_below="@+id/id_store_name"
            android:layout_marginTop="@dimen/margin_width12"
            android:text="地址"
            android:textSize="@dimen/text_width16"/>

    </RelativeLayout>
</LinearLayout>
