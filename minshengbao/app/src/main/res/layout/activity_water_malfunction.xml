<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray"
    tools:context=".functionActivity.waterApp.WaterMalfunctionActivity">
    <include layout="@layout/layout_white_header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_width5"
            android:paddingRight="@dimen/margin_width6"
            android:paddingLeft="@dimen/margin_width6"
            android:background="@color/background_gray"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width45"
                android:background="@color/white">
                <EditText
                    android:id="@+id/id_et_equipmentNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:layout_centerVertical="true"
                    android:inputType="phone"
                    android:background="@null"
                    android:hint="@string/please_input_equipmentNo"
                    android:textColor="@color/title_tv"
                    android:textSize="@dimen/text_width16"/>
                <ImageView
                    android:id="@+id/id_scan_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/picture_text"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_marginEnd="@dimen/margin_width10"
                    android:src="@mipmap/scan_pic"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width10"
                android:minHeight="@dimen/margin_width45"
                android:background="@color/white">
                <TextView
                    android:id="@+id/id_tv_estate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:layout_centerVertical="true"
                    android:inputType="textPersonName"
                    android:background="@null"
                    android:hint="@string/equipment_estate"
                    android:textColor="@color/title_tv"
                    android:textSize="@dimen/text_width16"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width150"
                android:layout_marginTop="@dimen/margin_width10"
                android:minHeight="@dimen/margin_width150"
                android:background="@color/white">
                <EditText
                    android:id="@+id/id_et_question"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_marginEnd="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:gravity="start|top"
                    android:inputType="textPersonName"
                    android:background="@null"
                    android:hint="@string/malfunction_question_describe"
                    android:textColor="@color/title_tv"
                    android:textSize="@dimen/text_width16"/>
                <TextView
                    android:id="@+id/id_tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_marginEnd="@dimen/margin_width10"
                    android:layout_marginBottom="@dimen/margin_width6"
                    android:textColor="@color/color_9e9e9e"
                    android:maxLength="200"
                    android:textSize="@dimen/text_width14"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width10"
                android:background="@color/white"
                android:minHeight="@dimen/margin_width40">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_9e9e9e"
                    android:text="@string/upload_picture"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width100"
                android:paddingLeft="@dimen/margin_width10"
                android:paddingRight="@dimen/margin_width10"
                android:paddingBottom="@dimen/margin_width10"
                android:background="@color/white">
                <com.msht.minshengbao.ViewUI.widget.MyNoScrollGridView
                    android:id="@+id/id_noScrollGridView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:horizontalSpacing="@dimen/margin_width10"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:verticalSpacing="@dimen/margin_width10" >
                </com.msht.minshengbao.ViewUI.widget.MyNoScrollGridView>
            </RelativeLayout>
           <Button
               android:id="@+id/id_button_send"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/margin_width40"
               android:minHeight="@dimen/margin_width45"
               android:background="@drawable/selector_change_blue_corner_background"
               android:textSize="@dimen/text_width18"
               android:textColor="@color/white"
               android:text="@string/ensure_send"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>