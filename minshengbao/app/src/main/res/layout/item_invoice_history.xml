<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:padding="@dimen/margin_width6">
    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/invoice_background_m">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_width35">
            <TextView
                android:id="@+id/id_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:text="状态："
                android:textSize="@dimen/text_width14"
                android:textColor="@color/title_tv"/>
            <TextView
                android:id="@+id/id_tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/id_text1"
                android:layout_toEndOf="@+id/id_text1"
                android:layout_marginLeft="@dimen/margin_width6"
                android:layout_marginStart="@dimen/margin_width6"
                android:text="已寄出"
                android:textSize="@dimen/text_width14"
                android:textColor="@color/title_tv"/>
            <TextView
                android:id="@+id/id_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginEnd="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:text="2016.12.08"
                android:textSize="@dimen/text_width14"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_title_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:text="发票抬头:"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/title_tv"/>
            <TextView
                android:id="@+id/id_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_title_type"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_marginBottom="@dimen/margin_width10"
                android:text="海南民生"
                android:textSize="@dimen/text_width16"
                />
            <TextView
                android:id="@+id/id_tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/margin_width30"
                android:layout_marginEnd="@dimen/margin_width30"
                android:layout_marginTop="@dimen/margin_width20"
                android:textSize="@dimen/text_width25"
                android:textColor="@color/title_tv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/id_tv_money"
                android:layout_toStartOf="@+id/id_tv_money"
                android:layout_marginRight="@dimen/margin_width3"
                android:layout_marginEnd="@dimen/margin_width3"
                android:layout_marginTop="@dimen/margin_width20"
                android:layout_alignBaseline="@+id/id_tv_money"
                android:text="¥"
                android:textSize="@dimen/text_width25"
                android:textColor="@color/title_tv"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>