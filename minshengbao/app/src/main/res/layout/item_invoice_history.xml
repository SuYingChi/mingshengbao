<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_6">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/invoice_background_m">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_35">
            <TextView
                android:id="@+id/id_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_centerVertical="true"
                android:text="状态："
                android:textSize="15sp"
                android:textColor="@color/title_tv"/>
            <TextView
                android:id="@+id/id_tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/id_text1"
                android:layout_marginLeft="@dimen/margin_6"
                android:text="已寄出"
                android:textSize="15sp"
                android:textColor="@color/title_tv"/>
            <TextView
                android:id="@+id/id_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_6"
                android:layout_centerVertical="true"
                android:text="2016.12.08"
                android:textSize="@dimen/text_14"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_box_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="发票抬头:"
                android:textSize="@dimen/text_16"
                android:textColor="@color/title_tv"/>
            <TextView
                android:id="@+id/id_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_box_type"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="海南民生"
                android:textSize="@dimen/text_16"
                />
            <TextView
                android:id="@+id/id_tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_30"
                android:layout_marginTop="@dimen/margin_10"
                android:text="50"
                android:textSize="@dimen/text_25"
                android:textColor="@color/title_tv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/id_tv_money"
                android:layout_marginRight="@dimen/margin_3"
                android:layout_marginTop="@dimen/margin_20"
                android:text="¥"
                android:textColor="@color/title_tv"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>