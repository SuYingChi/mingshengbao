<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gas_expense_query"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.functionActivity.GasService.GasExpenseQueryActivity">
    <include layout="@layout/layout_header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/item_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF" >
                <ImageView
                    android:layout_width="@dimen/margin_width20"
                    android:layout_height="@dimen/margin_width20"
                    android:src="@drawable/customer_xh"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:layout_marginBottom="@dimen/margin_width10"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/picture_text"
                    android:id="@+id/id_customerView" />
                <TextView
                    android:id="@+id/id_customerText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/id_customerView"
                    android:layout_toEndOf="@+id/id_customerView"
                    android:layout_marginLeft="@dimen/margin_width6"
                    android:layout_marginStart="@dimen/margin_width6"
                    android:textSize="@dimen/text_width18"
                    android:textColor="@color/color_383838"
                    android:layout_marginTop="@dimen/margin_6"
                    android:layout_alignBottom="@+id/id_customerView"
                    />
                <ImageView
                    android:layout_width="@dimen/margin_width20"
                    android:layout_height="@dimen/margin_width20"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/id_customerText"
                    android:contentDescription="@string/picture_text"
                    android:src="@drawable/address_xh"
                    android:id="@+id/imageView8" />
                <TextView
                    android:id="@+id/id_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_width18"
                    android:textColor="@color/color_383838"
                    android:layout_toRightOf="@+id/imageView8"
                    android:layout_toEndOf="@+id/imageView8"
                    android:layout_marginStart="@dimen/margin_width6"
                    android:layout_marginLeft="@dimen/margin_6"
                    android:layout_below="@+id/id_customerText"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:layout_marginBottom="@dimen/margin_width10"/>
            </RelativeLayout>
            <include layout="@layout/layout_line_gray"/>
            <LinearLayout
                android:id="@+id/id_layout_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/id_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_width10"
                        android:layout_marginStart="@dimen/margin_width10"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:text="@string/should_pay_fee"
                        android:textSize="@dimen/text_width20"
                        android:textColor="@color/black1"/>
                    <TextView
                        android:id="@+id/id_tv_bill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/margin_width10"
                        android:layout_marginRight="@dimen/margin_width10"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:textColor="@color/colorOrange"
                        android:text="@string/bill_detail"
                        android:textSize="@dimen/text_width20"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/id_debts"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_width20"
                        android:textStyle="bold"
                        android:layout_below="@+id/id_text1"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_width10"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/margin_width45">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_width20"
                        android:layout_marginStart="@dimen/margin_width20"
                        android:layout_centerVertical="true"
                        android:text="@string/total_gas_num"
                        android:textSize="@dimen/text_18"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/id_total_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/margin_width10"
                        android:layout_marginEnd="@dimen/margin_width10"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_width18"
                        />
                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/margin_45">
                    <TextView
                        android:id="@+id/id_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_width20"
                        android:layout_marginStart="@dimen/margin_width20"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:text="@string/gas_fee_text"
                        android:textSize="@dimen/text_18"
                        android:textColor="@color/color_9e9e9e"/>
                    <TextView
                        android:id="@+id/id_gas_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:layout_marginRight="@dimen/margin_width10"
                        android:layout_marginEnd="@dimen/margin_width10"
                        android:textColor="@color/black1"
                        android:textSize="@dimen/text_width16"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/gas_last_fee_text"
                        android:id="@+id/id_text3"
                        android:layout_below="@+id/id_text2"
                        android:layout_marginTop="@dimen/margin_width12"
                        android:layout_marginLeft="@dimen/margin_width20"
                        android:layout_marginStart="@dimen/margin_width20"
                        android:textSize="@dimen/text_width18"
                        android:textColor="@color/color_9e9e9e"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/id_lastfees"
                        android:layout_below="@+id/id_text2"
                        android:layout_marginTop="@dimen/margin_width12"
                        android:textColor="@color/black1"
                        android:textSize="@dimen/text_width18"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/margin_width10"
                        android:layout_marginEnd="@dimen/margin_width10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_width20"
                        android:layout_marginStart="@dimen/margin_width20"
                        android:layout_below="@+id/id_text3"
                        android:layout_marginTop="@dimen/margin_width12"
                        android:text="@string/deduct_gas_prestore_fee_text"
                        android:textSize="@dimen/text_18"
                        android:textColor="@color/color_9e9e9e"/>
                    <TextView
                        android:id="@+id/id_tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/margin_width10"
                        android:layout_marginEnd="@dimen/margin_width10"
                        android:layout_below="@+id/id_text3"
                        android:layout_marginTop="@dimen/margin_12"
                        android:layout_marginBottom="@dimen/margin_width12"
                        android:textColor="@color/black1"
                        android:textSize="@dimen/text_width18"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_width10"
                    android:background="@color/background_gray"/>
                <RelativeLayout
                    android:id="@+id/id_detail_layout"
                    android:layout_width="match_parent"
                    android:background="@drawable/selector_touch_background"
                    android:layout_height="@dimen/margin_width45">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_width10"
                        android:layout_marginStart="@dimen/margin_width10"
                        android:layout_centerVertical="true"
                        android:text="@string/gas_prestore_fee"
                        android:textColor="@color/color_383838"
                        android:textSize="@dimen/text_width16"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/picture_text"
                        android:layout_marginRight="@dimen/margin_width10"
                        android:layout_marginEnd="@dimen/margin_width10"
                        android:src="@drawable/forward_2x"/>
                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
                <RelativeLayout
                    android:id="@+id/id_re_voucher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/margin_width50">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_width10"
                        android:layout_marginStart="@dimen/margin_width10"
                        android:layout_centerVertical="true"
                        android:text="@string/coupon_text"
                        android:textSize="@dimen/text_width18"
                        android:textColor="@color/black1"/>
                    <TextView
                        android:id="@+id/id_tv_voucher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/id_img_forward"
                        android:layout_toStartOf="@+id/id_img_forward"
                        android:layout_marginRight="@dimen/margin_width6"
                        android:layout_marginEnd="@dimen/margin_width6"
                        android:textColor="@color/color_9e9e9e"
                        android:textSize="@dimen/text_width16"/>
                    <ImageView
                        android:id="@+id/id_img_forward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/margin_width6"
                        android:layout_marginEnd="@dimen/margin_width6"
                        android:contentDescription="@string/picture_text"
                        android:layout_centerVertical="true"
                        android:src="@drawable/forward_2x"/>
                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/margin_width50"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_width10"
                        android:layout_marginStart="@dimen/margin_width10"
                        android:layout_centerVertical="true"
                        android:text="@string/real_pay_amount"
                        android:textSize="@dimen/text_width18"
                        android:textColor="@color/black1"/>
                    <TextView
                        android:id="@+id/id_real_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/margin_width10"
                        android:layout_marginRight="@dimen/margin_width10"
                        android:textSize="@dimen/text_width18"
                        android:textStyle="bold"
                        android:textColor="@color/color_383838"/>
                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
            </LinearLayout>
            <include android:id="@+id/id_nodata_layout" layout="@layout/layout_gas_expense"
                android:visibility="gone"/>
            <RelativeLayout
                android:id="@+id/id_layout_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <Button
                    android:layout_marginLeft="@dimen/margin_width20"
                    android:layout_marginRight="@dimen/margin_width20"
                    android:layout_marginTop="@dimen/margin_width30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/immediately_pay_fee"
                    android:textSize="@dimen/text_width18"
                    android:id="@+id/id_btn_payfees"
                    android:background="@drawable/selector_touch_button_change"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_width20"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
