<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:contentInsetStart="0dp">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/msb_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="?actionBarSize"
            android:layout_height="match_parent"
            android:padding="@dimen/dp14"
            android:src="@drawable/back2x" />

        <TextView
            android:id="@+id/title"
            style="@style/shopMsbcolorTitleText"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="@color/white" />
    </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@color/nc_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shop_order_detail_wait_pay"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/state_desc"
                    style="@style/shopMsbcolorTitleText"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/margin_width30"
                    android:text="未付款"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tip"
                    style="@style/shopMsbcolorTitleText"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/margin_width30"
                    android:layout_marginRight="@dimen/margin_width100"
                    android:text="请于24小时内完成付款，逾期未付订单自动关闭"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width2"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    style="@style/image"
                    android:src="@drawable/shop_location" />

                <TextView
                    style="@style/shopMsbcolorTitleText"
                    android:text="收货地址"
                    android:textColor="@color/black" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width2"
                android:background="@color/white"
                android:padding="@dimen/margin_Modules">

                <TextView
                    android:id="@+id/name"
                    style="@style/grey_small_text" />

                <TextView
                    android:id="@+id/phone_num"
                    style="@style/grey_small_text"
                    android:layout_marginLeft="@dimen/margin_100"
                    android:layout_toRightOf="@id/name"

                    />

                <TextView
                    android:id="@+id/location"
                    style="@style/grey_small_text"
                    android:layout_below="@id/name"
                    android:layout_marginTop="@dimen/margin_Modules" />

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_site"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/image"
                        android:src="@drawable/shop_location" />

                    <TextView
                        style="@style/shopMsbcolorTitleText"
                        android:text="自提服务站"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_width2"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="@dimen/margin_Modules">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                    <TextView
                        android:id="@+id/sitename"
                        style="@style/grey_small_text" />
                    <TextView
                        android:id="@+id/site_phone"
                        android:layout_marginLeft="@dimen/margin_width35"
                        style="@style/grey_small_text" />
                    </LinearLayout>
                        <TextView
                            android:id="@+id/tv_site"
                            style="@style/grey_small_text"
                            android:text=""
                            />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width2"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    style="@style/image"
                    android:src="@drawable/shop_pay_method" />

                <TextView
                    style="@style/shopMsbcolorTitleText"
                    android:text="支付方式"
                    android:textColor="@color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/pay"
                style="@style/shopBlackTitleText"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_width2"
                android:background="@color/white"
                android:padding="@dimen/margin_Modules" />


            <LinearLayout
                android:id="@+id/ll_inv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    style="@style/image"
                    android:src="@drawable/shop_inv" />

                <TextView
                    style="@style/shopMsbcolorTitleText"
                    android:text="发票信息"
                    android:textColor="@color/black" />
            </LinearLayout>


            <TextView
                android:id="@+id/inv_info"
                style="@style/shopMsbcolorTitleText"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp1"
                android:background="@color/white"
                android:padding="@dimen/margin_Modules"
                android:textColor="@color/shop_grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/select_store"
                    style="@style/image"
                    android:src="@drawable/shop_store" />

                <TextView
                    android:id="@+id/store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_Modules"
                    android:layout_toRightOf="@id/select_store"
                    android:text=""
                    android:textColor="@color/black" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:overScrollMode="always"
                android:requiresFadingEdge="none"
                android:scrollbarStyle="insideOverlay" />
            <LinearLayout
                android:id="@+id/ll_zengping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/zengpingName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_Modules"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_width16"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_width2"
                >

                <TextView
                    style="@style/shopMsbcolorTitleText"
                    android:text="优惠"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/youhui"
                    style="@style/shopMsbcolorTitleText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/shopMsbcolorTitleText"
                    android:text="买家留言"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/message"
                    style="@style/shopMsbcolorTitleText"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/shop_grey"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width2"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/shopMsbcolorTitleText"
                    android:text="运费"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/delivery"
                    style="@style/shopMsbcolorTitleText"
                    android:text="￥0.00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp1"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/shopMsbcolorTitleText"
                    android:text="小计"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/good_num"
                    style="@style/shopMsbcolorTitleText"
                    android:textSize="@dimen/text_15"
                    android:text="" />

                <TextView
                    android:id="@+id/total"
                    style="@style/shopMsbcolorTitleText"
                    android:text="共计：￥0.00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_Modules"
                android:background="@color/white"
                android:baselineAligned="false"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/kefu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/shopMsbcolorTitleText"
                        android:drawableLeft="@drawable/order_detai_kefu"
                        android:text="联系客服"
                        android:textSize="@dimen/text_15"
                        android:textColor="@color/nc_text" />
                </LinearLayout>
                <View
                    android:layout_width="@dimen/dp1"
                    android:layout_height="match_parent"
                    android:background="@color/nc_bg"
                    />
                <LinearLayout
                    android:id="@+id/call"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/shopMsbcolorTitleText"
                        android:drawableLeft="@drawable/shop_call"
                        android:text="拨打电话"
                        android:textSize="@dimen/text_15"
                        android:textColor="@color/nc_text" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/margin_Modules"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/shopMsbcolorTitleText"
                        android:layout_gravity="left"
                        android:text="订单编号："
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/order_num"
                        style="@style/shopMsbcolorTitleText"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_creat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        style="@style/shopMsbcolorTitleText"
                        android:layout_gravity="left"
                        android:text="创建时间："
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/creat_time"
                        style="@style/shopMsbcolorTitleText"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        style="@style/shopMsbcolorTitleText"
                        android:layout_gravity="left"
                        android:text="付款时间："
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/payment_time"
                        style="@style/shopMsbcolorTitleText"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_shipping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        style="@style/shopMsbcolorTitleText"
                        android:layout_gravity="left"
                        android:text="发货时间："
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/shipping_time"
                        style="@style/shopMsbcolorTitleText"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_finish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        style="@style/shopMsbcolorTitleText"
                        android:layout_gravity="left"
                        android:text="完成时间："
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/finnshed_time"
                        style="@style/shopMsbcolorTitleText"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/margin_Modules">
       <!-- <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></View>-->
    </LinearLayout>
</LinearLayout>