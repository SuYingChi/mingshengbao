<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_Modules"
        >

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/margin_width100"
            android:layout_height="@dimen/margin_width100"
            />

        <TextView
            android:id="@+id/name"
            style="@style/shopMsbcolorTitleText"
            android:layout_alignTop="@id/iv"
            android:layout_toRightOf="@id/iv"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/text"
            style="@style/shopMsbcolorTitleText"
            android:layout_alignBottom="@id/iv"
            android:layout_toRightOf="@id/iv"
            android:maxLines="2"
            android:textColor="@color/black" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcl1"
        style="@style/rcl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et"
        style="@style/editText"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/margin_Modules"
        android:gravity="top"
        android:hint="已经用了一段时间了，你觉得宝贝怎么样呢"
        android:maxLength="150"
        />

    <TextView
        android:id="@+id/wordNum"
        style="@style/shopMsbcolorTitleText"
        android:layout_gravity="right"
        android:text="80/150"
        android:textColor="@color/shop_grey" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcl_grid"
        style="@style/rcl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>