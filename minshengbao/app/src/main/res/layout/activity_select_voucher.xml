<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_voucher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.functionActivity.Public.SelectVoucherActivity">
    <include layout="@layout/layout_header"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/id_view_voucher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null">
        </ListView>
        <RelativeLayout
            android:id="@+id/id_re_nodata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/id_img"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_70"
                android:src="@drawable/voucher_h"/>
            <TextView
                android:id="@+id/id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/id_img"
                android:layout_marginTop="@dimen/margin_5"
                android:text="亲，您还未有代金券哦！"
                android:textSize="@dimen/text_16"/>
            <RelativeLayout
                android:id="@+id/id_re_share"
                android:layout_below="@+id/id_text"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <TextView
                    android:id="@+id/id_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="分享好友可获取代金券"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/black1"/>
                <Button
                    android:id="@+id/id_btn_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/margin_45"
                    android:text="去分享"
                    android:textSize="@dimen/text_18"
                    android:textColor="@color/white"
                    android:layout_below="@+id/id_text1"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_65"
                    android:layout_marginRight="@dimen/margin_65"
                    android:background="@drawable/selector_touch_button_change"/>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
