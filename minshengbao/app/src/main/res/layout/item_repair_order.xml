<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:padding="@dimen/margin_5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray">
    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_touch_background"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="@dimen/margin_45">
            <TextView
                android:id="@+id/id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_centerVertical="true"
                android:text="订单编号："
                android:textSize="@dimen/text_16"
                android:textColor="@color/black1"/>
            <TextView
                android:id="@+id/id_orderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/id_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:textSize="@dimen/text_18"
                />
            <TextView
                android:id="@+id/id_tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_centerVertical="true"
                android:textColor="@color/colorOrange"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/line_gray"/>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_80">
            <ImageView
                android:id="@+id/id_img_type"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_15"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/id_img_type"
                android:layout_marginLeft="@dimen/margin_10">
                <TextView
                    android:id="@+id/id_tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_18"
                    android:text="rghhtf"
                    android:textColor="#414141"
                    />
                <TextView
                    android:id="@+id/id_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_tv_type"
                    android:layout_marginTop="@dimen/margin_6"
                    android:text="huashang "/>
            </RelativeLayout>
            <TextView
                android:id="@+id/id_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_5"
                android:text="2017-12-25"
                android:textSize="@dimen/text_14"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/id_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"
                android:textSize="@dimen/text_14"/>
            <Button
                android:id="@+id/id_btn_evalute"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_15"
                android:layout_below="@+id/id_tv_time"
                android:layout_marginTop="@dimen/margin_25"
                android:textColor="@color/white"
                android:background="@drawable/selector_touch_button_change"
                android:text="去评价"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>