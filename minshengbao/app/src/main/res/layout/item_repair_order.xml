<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:padding="@dimen/margin_5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray">
    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_touch_background"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="@dimen/margin_width45">
            <TextView
                android:id="@+id/id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:text="@string/orderNo_text"
                android:textSize="@dimen/text_width18"
                android:textColor="@color/black1"/>
            <TextView
                android:id="@+id/id_orderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/id_text"
                android:layout_toEndOf="@+id/id_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:textSize="@dimen/text_width18"/>
            <TextView
                android:id="@+id/id_tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginEnd="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:textColor="@color/colorOrange"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/line_gray"/>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_width80">
            <ImageView
                android:id="@+id/id_img_type"
                android:layout_width="@dimen/margin_width45"
                android:layout_height="@dimen/margin_width45"
                android:contentDescription="@string/picture_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_width15"
                android:layout_marginStart="@dimen/margin_width15"/>
            <RelativeLayout
                android:id="@+id/id_category_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/id_img_type"
                android:layout_toEndOf="@+id/id_img_type"
                android:layout_toLeftOf="@+id/id_create_time"
                android:layout_toStartOf="@+id/id_create_time"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10">
                <TextView
                    android:id="@+id/id_tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_width18"
                    android:textColor="#414141" />
                <TextView
                    android:id="@+id/id_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_tv_type"
                    android:textSize="@dimen/text_width14"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/margin_width6" />
            </RelativeLayout>
            <TextView
                android:id="@+id/id_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/id_category_layout"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/margin_width15"
                android:layout_marginEnd="@dimen/margin_width15"
                android:layout_marginTop="@dimen/margin_width10"
                android:textSize="@dimen/text_width14"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/id_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginEnd="@dimen/margin_width10"
                android:textSize="@dimen/text_width14"/>
            <Button
                android:id="@+id/id_btn_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width25"
                android:minWidth="@dimen/margin_width60"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginEnd="@dimen/margin_width10"
                android:layout_marginBottom="@dimen/margin_width15"
                android:layout_below="@+id/id_tv_time"
                android:layout_marginTop="@dimen/margin_width25"
                android:textColor="@color/white"
                android:background="@drawable/selector_touch_button_change"
                android:text="@string/go_evaluate"
                android:textSize="@dimen/text_width12"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>