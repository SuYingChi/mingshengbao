<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".functionActivity.fragment.RepairInvoiceFragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/id_view_invoice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null">
        </com.jcodecraeer.xrecyclerview.XRecyclerView>
        <include layout="@layout/layout_no_data_view"
            android:id="@+id/id_noData_view"
            android:visibility="gone"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/line_gray"/>
    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/margin_width70">
        <CheckBox
            android:id="@+id/id_box_allselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_width12"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:text="@string/all_select"
            android:textSize="@dimen/text_width16"/>
        <TextView
            android:id="@+id/id_tv_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_box_allselect"
            android:layout_toLeftOf="@+id/id_btn_next"
            android:layout_toStartOf="@+id/id_btn_next"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width10"
            android:text="已选0个订单共00.00元（满400包邮）"
            android:textSize="@dimen/text_width14"/>
        <Button
            android:id="@+id/id_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_width35"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_orange_corner_button"
            android:text="@string/next_step"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_width16"/>
    </RelativeLayout>
</LinearLayout>