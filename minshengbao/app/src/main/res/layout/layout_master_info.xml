<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/id_re_master">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_width10"
        android:background="@color/background_gray" />
    <RelativeLayout
        android:id="@+id/id_relauout_master"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_touch_background"
        android:minHeight="@dimen/margin_width48">
        <TextView
            android:id="@+id/id_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_centerVertical="true"
            android:text="接单师傅"
            android:textColor="@color/title_tv"
            android:textSize="@dimen/text_width16"/>
        <TextView
            android:id="@+id/id_master"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id_img_forward"
            android:layout_marginRight="@dimen/margin_10"
            android:text="师傅名"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/colorOrange"/>
        <ImageView
            android:id="@+id/id_img_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_6"
            android:layout_centerVertical="true"
            android:src="@drawable/forward_m"/>
    </RelativeLayout>
    <include layout="@layout/layout_line_gray"/>
    <RelativeLayout
        android:id="@+id/id_re_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_touch_background"
        android:minHeight="@dimen/margin_48">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_centerVertical="true"
            android:text="师傅电话"
            android:textColor="@color/title_tv"
            android:textSize="@dimen/text_width16"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_6"
            android:layout_centerVertical="true"
            android:src="@drawable/forward_m"/>
    </RelativeLayout>
    <include layout="@layout/layout_line_gray"/>
</LinearLayout>