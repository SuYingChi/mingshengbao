<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/margin_20"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@drawable/shape_white_layout">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:minHeight="@dimen/margin_45"
           android:background="@drawable/shape_top_right_left_corner">
           <TextView
               android:id="@+id/id_tv_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:text="请输入燃气用户号"
               android:textSize="@dimen/text_20"
               android:textColor="@color/white"
               />
       </RelativeLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="0.5dp"
           android:background="@color/colorOrange"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <EditText
               android:id="@+id/id_et_customer"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:minHeight="@dimen/margin_35"
               android:gravity="center"
               android:hint="查看纸质账单或拨打963666"
               android:layout_marginRight="@dimen/margin_15"
               android:layout_marginLeft="@dimen/margin_15"
               android:layout_marginTop="@dimen/margin_35"
               android:layout_marginBottom="@dimen/margin_35"
               android:background="@drawable/shape_white_border_rectangle"/>
       </RelativeLayout>
       <include layout="@layout/layout_line_gray"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <RelativeLayout
               android:id="@+id/id_re_cancel"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:minHeight="@dimen/margin_45">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true"
                   android:text="取消"
                   android:textSize="@dimen/text_18"
                   android:textColor="@color/colorOrange"/>
               </RelativeLayout>
           <View
               android:layout_width="0.8dp"
               android:layout_height="match_parent"
               android:background="@color/line_gray"/>
           <RelativeLayout
               android:id="@+id/id_re_next"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:minHeight="@dimen/margin_45">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true"
                   android:text="下一步"
                   android:textSize="@dimen/text_18"
                   android:textColor="@color/colorOrange"/>
           </RelativeLayout>
       </LinearLayout>
   </LinearLayout>

</LinearLayout>