<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_publish_success"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray"
    tools:context="com.msht.minshengbao.functionActivity.repairService.PublishSuccessActivity">
   <include layout="@layout/layout_header"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/id_img_success"
            android:layout_width="@dimen/margin_100"
            android:layout_height="@dimen/margin_100"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_100"
            android:contentDescription="@string/picture_text"
            android:src="@drawable/publish_success_xh"/>
        <TextView
            android:id="@+id/id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/id_img_success"
            android:layout_marginTop="@dimen/margin_5"
            android:text="订单提交成功"
            android:textSize="@dimen/text_width18"
            android:textColor="@color/colorOrange"/>
        <TextView
            android:id="@+id/id_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/id_title"
            android:layout_marginTop="@dimen/margin_15"
            android:textColor="@color/color_9e9e9e"
            android:text="请耐心等待"
            android:textSize="@dimen/text_width16"
            />
        <TextView
            android:id="@+id/id_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/id_text1"
            android:layout_marginTop="@dimen/margin_3"
            android:text="会有工作人员跟您联系"
            android:textColor="@color/color_9e9e9e"
            android:textSize="@dimen/text_width16"
            />
    </RelativeLayout>
</LinearLayout>
