<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/margin_6"
    android:layout_height="wrap_content"
    android:background="@color/gray_black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_layout"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginTop="@dimen/margin_width10"
                android:text="缴费金额"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/black1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/id_amonut"
                android:text="100.00"
                android:textColor="@color/black"
                android:textSize="@dimen/text_width20"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginTop="@dimen/margin_width10"
                />
            <TextView
                android:id="@+id/id_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_text1"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginTop="@dimen/margin_width10"
                android:text="缴费渠道"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/black1"/>
            <TextView
                android:id="@+id/id_pay_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin_width15"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_below="@+id/id_text1"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/black1"
                />
            <TextView
                android:id="@+id/id_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_below="@+id/id_text2"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginBottom="@dimen/margin_width10"
                android:text="缴费时间"
                android:textColor="@color/black1"
                android:textSize="@dimen/text_width16"/>
            <TextView
                android:id="@+id/id_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_below="@+id/id_text2"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginBottom="@dimen/margin_width10"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/black1"/>
            <TextView
                android:id="@+id/id_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_below="@+id/id_text3"
                android:layout_marginBottom="@dimen/margin_width10"
                android:text="写卡状态"
                android:textColor="@color/black1"
                android:textSize="@dimen/text_width16"/>
            <TextView
                android:id="@+id/id_writecard_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_below="@+id/id_text3"
                android:layout_marginBottom="@dimen/margin_width10"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/black1"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>