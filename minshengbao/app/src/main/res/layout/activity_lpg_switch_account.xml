<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".functionActivity.LPGActivity.LpgSwitchAccountActivity">
    <include layout="@layout/layout_header"/>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@color/background_gray"
        android:layout_height="0dp">
    <com.msht.minshengbao.ViewUI.PullRefresh.LoadMoreListView
        android:id="@+id/id_user_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.msht.minshengbao.ViewUI.PullRefresh.LoadMoreListView>
    </RelativeLayout>
   <com.msht.minshengbao.ViewUI.ButtonUI.ButtonM
       android:id="@+id/id_btn_create"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:minHeight="@dimen/margin_width45"
       android:gravity="center"
       android:textSize="@dimen/text_width16"
       android:textColor="@color/white"
       android:text="@string/update_new_user"
       app:backGroundImage="@drawable/shape_change_background"
       app:backColorPress="#F4D6CE"
       app:fillet="true"
       app:shape="rectangle"
       app:textColor="@android:color/white"/>
</LinearLayout>