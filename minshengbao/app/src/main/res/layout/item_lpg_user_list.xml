<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background_gray"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/id_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_width15"
            android:layout_marginStart="@dimen/margin_width10"
            android:layout_marginLeft="@dimen/margin_width10"
            android:textSize="@dimen/text_width14"
            android:textColor="@color/title_tv"
            android:text="@string/phone_number"/>
        <TextView
            android:id="@+id/id_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/id_phone_text"
            android:layout_toRightOf="@+id/id_phone_text"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:layout_marginTop="@dimen/margin_width15"
            android:layout_marginRight="@dimen/margin_width10"
            android:textSize="@dimen/text_width14"
            android:textColor="@color/title_tv"
            android:text="@string/default_text"/>
        <TextView
            android:id="@+id/id_tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width15"
            android:layout_toStartOf="@+id/id_radio_isLastLogin"
            android:layout_toLeftOf="@+id/id_radio_isLastLogin"
            android:layout_below="@+id/id_phone_text"
            android:layout_marginTop="@dimen/margin_width10"
            android:textColor="@color/title_tv"
            android:textSize="@dimen/text_width14"
            android:text="@string/default_text"/>
        <RadioButton
            android:id="@+id/id_radio_isLastLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/margin_width25"
            android:minHeight="@dimen/margin_width25"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:button="@drawable/selector_radio_check"/>
        <ImageView
            android:id="@+id/id_delete_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/picture_text"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:src="@drawable/delect_addr_xh"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>