<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:id="@+id/select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin_Modules"
            android:paddingRight="@dimen/margin_Modules"
            android:drawableLeft="@drawable/item_carlist_selected"
            android:button="@null"
            android:checked="false" />
    <RelativeLayout
        android:background="@drawable/dicount_coupon_2xh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_width15"
            android:layout_marginTop="@dimen/dp5"
            android:text="@string/default_text"
            android:textColor="@color/msb_color"
            android:textSize="@dimen/text_width22"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amount"
            android:layout_marginLeft="@dimen/margin_width15"
            android:layout_marginTop="@dimen/margin_width6"
            android:text="@string/default_text"
            android:textColor="@color/black"
            android:textSize="@dimen/text_width12" />

        <TextView
            android:id="@+id/user_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_limit"
            android:layout_marginLeft="@dimen/margin_width15"
            android:layout_marginTop="@dimen/margin_width6"
            android:text="@string/default_text"
            android:textColor="@color/black"
            android:textSize="@dimen/text_width12" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp5"
            android:text="xx"
            android:textColor="@color/msb_color"
            android:textSize="@dimen/text_width22"
            android:textStyle="bold" />
    </RelativeLayout>
    </LinearLayout>>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_Modules"/>
</LinearLayout>
