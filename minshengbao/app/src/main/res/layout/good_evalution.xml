<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nc_bg"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_Modules"
        android:paddingTop="@dimen/margin_Modules">

        <RadioButton
            android:id="@+id/all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:layout_weight="1"
            android:background="@drawable/selector_evaluation_radiobutton"
            android:button="@null"
            android:checked="true"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp4"
            android:text="全部评价"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12" />


        <RadioButton
            android:id="@+id/good"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp5"
            android:layout_weight="1"
            android:background="@drawable/selector_evaluation_radiobutton"
            android:button="@null"
            android:checked="false"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp4"
            android:text="好评"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12" />


        <RadioButton
            android:id="@+id/mid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp5"
            android:layout_weight="1"
            android:background="@drawable/selector_evaluation_radiobutton"
            android:button="@null"
            android:checked="false"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp4"
            android:text="中评"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12" />


        <RadioButton
            android:id="@+id/poor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp5"
            android:layout_weight="1"
            android:background="@drawable/selector_evaluation_radiobutton"
            android:button="@null"
            android:checked="false"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp4"
            android:text="差评"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12" />


        <RadioButton
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp5"
            android:layout_weight="1"
            android:background="@drawable/selector_evaluation_radiobutton"
            android:button="@null"
            android:checked="false"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp4"
            android:text="追加评价"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12" />

    </RadioGroup>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableHeaderTranslationContent="true"
        app:srlEnableOverScrollBounce="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_Modules">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:overScrollMode="always"
                android:requiresFadingEdge="none"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical" />
            <ImageView
                android:id="@+id/layoutEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/empty_evaluation"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/tv_no_data"
                style="@style/shopBlackTitleText"
                android:text="居然一条评论都没有，你来写写吧！"
                android:layout_below="@id/layoutEmpty"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_Modules"
                android:visibility="invisible"
                />
        </RelativeLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>