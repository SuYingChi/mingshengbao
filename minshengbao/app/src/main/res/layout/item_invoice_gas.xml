<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray"
    android:padding="@dimen/margin_width6">
    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/invoice_background_m">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <RadioButton
                android:id="@+id/id_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_width15"
                android:layout_marginStart="@dimen/margin_width15"
                android:layout_marginRight="@dimen/margin_width15"
                android:layout_marginEnd="@dimen/margin_width15"
                android:layout_centerVertical="true"
                android:button="@drawable/selector_circle_checked"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/transparent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width35">
                <TextView
                    android:id="@+id/id_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:layout_toStartOf="@+id/id_tv_orderNo"
                    android:layout_toLeftOf="@+id/id_tv_orderNo"
                    android:layout_centerVertical="true"
                    android:gravity="start"
                    android:textSize="@dimen/text_width14"
                    android:textColor="@color/title_tv"/>
                <TextView
                    android:id="@+id/id_tv_orderNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_width16"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/id_gas_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_12"
                    android:textSize="@dimen/text_width16"
                    android:textColor="@color/title_tv"/>
                <TextView
                    android:id="@+id/id_tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_gas_num"
                    android:layout_marginTop="@dimen/margin_width8"
                    android:layout_marginBottom="@dimen/margin_width10"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/text_width20"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/id_tv_amount"
                    android:layout_toEndOf="@+id/id_tv_amount"
                    android:layout_toRightOf="@+id/id_tv_amount"
                    android:layout_marginStart="@dimen/margin_width3"
                    android:layout_marginLeft="@dimen/margin_width3"
                    android:text="@string/RMB_YUAN"
                    android:textColor="@color/colorOrange"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>