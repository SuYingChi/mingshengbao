    <RelativeLayout
        android:id="@+id/rlt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/close"
        >
        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/margin_width80"
            android:layout_height="@dimen/margin_width80"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/margin_Modules"
            android:layout_marginLeft="@dimen/margin_Modules" />

        <TextView
            android:id="@+id/dialog_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/text_width18"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_name"
            android:layout_alignLeft="@id/dialog_name"
            android:layout_alignRight="@id/dialog_name"
            android:orientation="vertical">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >
            <TextView
                android:id="@+id/dialog_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="38.00"
                android:textColor="@color/msb_color"
                android:textSize="@dimen/text_width18" />
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content"
                   android:background="@color/red"
                   android:layout_marginLeft="@dimen/margin_Modules"
                   >

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/day"
                       android:textSize="@dimen/text_14"
                       android:textColor="@color/white"
                       android:text="XX"
                       android:padding="2dp"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/text_14"
                       android:textColor="@color/white"
                       android:text="天"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/hour"
                       android:padding="2dp"
                       android:textSize="@dimen/text_14"
                       android:textColor="@color/white"
                       android:text="XX"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/text_14"
                       android:textColor="@color/white"
                       android:text="小时"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/minute"
                       android:padding="2dp"
                       android:textSize="@dimen/text_14"
                       android:text="XX"
                       android:textColor="@color/white"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/text_14"
                       android:textColor="@color/white"
                       android:text="分钟"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/second"
                       android:padding="2dp"
                       android:textSize="@dimen/text_14"
                       android:text="XX"
                       android:textColor="@color/white"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/text_14"
                       android:textColor="@color/white"
                       android:text="秒"
                       />
               </LinearLayout>
           </LinearLayout>
            <TextView
                android:id="@+id/dialog_remain_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="库存量"
                android:textColor="@color/black"
                android:textSize="@dimen/text_15"

                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/llguige"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlt"
        android:orientation="vertical">

        <TextView
            android:id="@+id/guigeName"
            style="@style/shopBlackTitleText"
            android:layout_gravity="left"
            android:textSize="@dimen/text_15"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/guigercl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rlt_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/llguige"
        android:paddingBottom="@dimen/margin_Modules"
        >
        <TextView
            android:id="@+id/tvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_Modules"
            android:layout_centerVertical="true"
            android:text="购买数量"
            android:textColor="@color/black"
            android:textSize="@dimen/text_width18" />

        <include
            layout="@layout/num_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_Modules"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
        <TextView
            android:id="@+id/buy_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/margin_Modules"
            android:text="立即购买"
            android:textColor="@color/white"
            android:layout_below="@id/rlt_bottom"
            android:textSize="@dimen/text_width18" />
    <!-- </android.support.v4.widget.NestedScrollView>-->
</RelativeLayout>