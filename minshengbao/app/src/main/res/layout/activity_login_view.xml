<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:fitsSystemWindows="true"
    android:background="@mipmap/loginback_xh"
    tools:context="com.msht.minshengbao.functionActivity.myActivity.LoginActivity">
    <ImageView
        android:id="@+id/id_back"
        android:layout_width="@dimen/margin_width30"
        android:layout_height="@dimen/margin_width30"
        android:layout_marginTop="@dimen/margin_width10"
        android:contentDescription="@string/picture_text"
        android:background="@android:color/transparent"
        android:layout_marginLeft="@dimen/margin_width5"
        android:layout_marginStart="@dimen/margin_width5"
        android:src="@drawable/back2x"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_width50"
        android:layout_marginLeft="@dimen/margin_width50"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/margin_width120"
            android:layout_height="@dimen/margin_width120"
            android:contentDescription="@string/picture_text"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_width120"
            android:src="@drawable/minshengbao2x"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_width35"
            android:background="@drawable/shape_white_corner_layout">
            <ImageView
                android:layout_width="@dimen/margin_width30"
                android:layout_height="@dimen/margin_width30"
                android:layout_centerVertical="true"
                android:contentDescription="@string/picture_text"
                android:layout_marginTop="@dimen/margin_width6"
                android:layout_marginBottom="@dimen/margin_width6"
                android:layout_marginLeft="@dimen/margin_width5"
                android:layout_marginStart="@dimen/margin_width5"
                android:id="@+id/image3"
                android:src="@drawable/signup_username_icon2x"/>
            <EditText
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginBottom="@dimen/margin_width10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="11"
                android:hint="@string/my_phone"
                android:textSize="@dimen/text_width16"
                android:textColorHint="@color/white"
                android:textColor="#ffffffff"
                android:background="@null"
                android:id="@+id/id_et_usename"
                android:layout_toRightOf="@+id/image3"
                android:layout_toEndOf="@+id/image3"
                android:layout_marginLeft="@dimen/margin_width5"
                android:layout_marginStart="@dimen/margin_width5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_width5"
            android:background="@drawable/shape_white_corner_layout">
            <ImageView
                android:layout_marginTop="@dimen/margin_width6"
                android:layout_marginBottom="@dimen/margin_width6"
                android:layout_width="@dimen/margin_width30"
                android:layout_height="@dimen/margin_width30"
                android:contentDescription="@string/picture_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_width5"
                android:layout_marginStart="@dimen/margin_width5"
                android:id="@+id/image4"
                android:src="@drawable/signup_password_icon2x"/>
            <EditText
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginBottom="@dimen/margin_width10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="@string/password_text"
                android:textSize="@dimen/text_width16"
                android:textColorHint="@color/white"
                android:textColorHighlight="@color/white"
                android:id="@+id/id_et_password"
                android:background="@null"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/margin_width5"
                android:layout_marginStart="@dimen/margin_width5"
                android:layout_toRightOf="@+id/image4"
                android:layout_toEndOf="@+id/image4"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_width40">
            <TextView
                android:id="@+id/id_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#fc0303" />
        </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_width45"
            android:text="@string/my_login"
            android:textColor="@color/white"
            android:id="@+id/id_button_login"
            android:textSize="@dimen/text_width16"
            android:background="@drawable/shape_redorange_corners_button"
            android:shadowColor="#ffffff"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_width40">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width40"
                android:text="@string/my_register"
                android:textSize="@dimen/text_width16"
                android:textColor="#ffffffff"
                android:id="@+id/id_button_register"
                android:background="@drawable/shape_white_corner_layout" />
            <Button
                android:id="@+id/id_button_findpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width40"
                android:text="@string/find_password"
                android:textSize="@dimen/text_width16"
                style="button"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginEnd="@dimen/margin_width10"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shape_white_corner_layout"
                android:layout_alignTop="@+id/id_button_register"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_width40"
            android:orientation="horizontal">
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_width1"
                android:background="@color/white"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_width16"
                android:text="@string/other_login"/>
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_width1"
                android:background="@color/white"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/id_weiChat_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_width20"
            android:contentDescription="@string/picture_text"
            android:src="@drawable/weichat_white_xh"/>
    </LinearLayout>
</RelativeLayout>
