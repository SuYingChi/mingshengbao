<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@mipmap/loginback_xh"
    tools:context="com.msht.minshengbao.FunctionView.Myview.LoginView">
    <ImageView
        android:id="@+id/id_gobackimg"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@android:color/transparent"
        android:layout_marginLeft="2dp"
        android:src="@drawable/back2x"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@+id/linearLayout">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/minshengbao2x"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="220dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">
        <RelativeLayout
            android:layout_marginRight="@dimen/margin_width50"
            android:layout_marginLeft="@dimen/margin_width50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_corner_layout">
            <ImageView
                android:layout_width="@dimen/margin_width30"
                android:layout_height="@dimen/margin_width30"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/margin_6"
                android:layout_marginBottom="@dimen/margin_6"
                android:layout_marginLeft="@dimen/margin_5"
                android:id="@+id/image3"
                android:src="@drawable/signup_username_icon2x"/>
            <EditText
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:hint="手机号"
                android:textSize="@dimen/text_16"
                android:textColorHint="@color/white"
                android:textColor="#ffffffff"
                android:background="@null"
                android:id="@+id/id_et_usename"
                android:layout_toRightOf="@+id/image3"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#10ffffff" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_width50"
            android:layout_marginLeft="@dimen/margin_width50"
            android:background="@drawable/shape_white_corner_layout">
            <ImageView
                android:layout_marginTop="@dimen/margin_6"
                android:layout_marginBottom="@dimen/margin_6"
                android:layout_width="@dimen/margin_width30"
                android:layout_height="@dimen/margin_width30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_5"
                android:id="@+id/image4"
                android:src="@drawable/signup_password_icon2x"/>
            <EditText
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="密码"
                android:textSize="@dimen/text_16"
                android:textColorHint="@color/white"
                android:textColorHighlight="@color/white"
                android:id="@+id/id_et_password"
                android:background="@null"
                android:textColor="#ffffffff"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_toRightOf="@+id/image4"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginRight="@dimen/margin_width50"
            android:layout_marginLeft="@dimen/margin_width50"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_width45">
            <TextView
                android:id="@+id/id_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#fc0303" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_width50"
            android:layout_marginLeft="@dimen/margin_width50">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width45"
                android:text="@string/my_login"
                android:textColor="@color/white"
                android:id="@+id/id_button_login"
                android:textSize="@dimen/text_width18"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_redorange_corners_button"
                android:shadowColor="#ffffff"
                android:clickable="true" />
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginRight="@dimen/margin_width50"
        android:layout_marginLeft="@dimen/margin_width50"
        android:layout_below="@+id/linearLayout"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_width40"
            android:text="@string/my_register"
            android:textSize="@dimen/text_16"
            android:textColor="#ffffffff"
            android:id="@+id/id_button_register"
            android:background="@drawable/shape_white_corner_layout"
            android:layout_alignParentBottom="true"
            />
        <Button
            android:id="@+id/id_button_findpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_width40"
            android:text="找回密码"
            android:textSize="@dimen/text_16"
            style="button"
            android:textColor="#ffffffff"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_white_corner_layout"
            android:layout_alignTop="@+id/id_button_register"
            />
    </RelativeLayout>
</RelativeLayout>
