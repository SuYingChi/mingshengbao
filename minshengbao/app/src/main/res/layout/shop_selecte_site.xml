<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!--
       分页重新请求数据到上次页的数据并刷新，不能加这两行 会自动滚到顶部，有嵌套recycleview时候才需要这两行
       android:focusable="true"
       android:focusableInTouchMode="true"-->
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/msb_color"
        app:contentInsetStart="0dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/msb_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="?actionBarSize"
                android:layout_height="match_parent"
                android:padding="@dimen/dp14"
                android:src="@drawable/back2x" />

            <TextView
                android:id="@+id/title"
                style="@style/shopMsbcolorTitleText"
                android:layout_centerInParent="true"
                android:text="自提门店"
                android:textColor="@color/white" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/total"
        style="@style/grey_small_text"
        android:layout_width="match_parent"
        android:background="@color/white"
        />
    <RelativeLayout
        android:id="@+id/rlt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_width2"
        android:background="@color/white"
        android:padding="@dimen/margin_Modules">
        <ImageView
            style="@style/image"
            android:id="@+id/im"
            android:src="@drawable/right_angle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/site_area"
            style="@style/grey_small_text"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:text="所有区域"
            android:layout_toLeftOf="@id/im"
            />

            <TextView
                android:id="@+id/tv_site"
                style="@style/grey_small_text"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="选择服务站区域"
                />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:overScrollMode="always"
            android:requiresFadingEdge="none"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical" />
    </RelativeLayout>

</LinearLayout>