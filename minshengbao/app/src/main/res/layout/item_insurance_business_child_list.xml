<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background_gray"
    android:paddingRight="@dimen/margin_width10"
    android:paddingLeft="@dimen/margin_width10"
    android:layout_marginBottom="@dimen/margin_width10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/id_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_layout"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/id_image"
            android:layout_width="@dimen/margin_width80"
            android:layout_height="@dimen/margin_width80"
            android:contentDescription="@string/picture_text"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width10"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_width20"
            android:layout_marginLeft="@dimen/margin_width20"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width10"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/id_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_width14"
                android:text="@string/default_text"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/id_enterprise_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/margin_width60"
                android:paddingLeft="@dimen/margin_width12"
                android:paddingRight="@dimen/margin_width12"
                android:gravity="center"
                android:layout_toEndOf="@+id/id_title"
                android:layout_toRightOf="@+id/id_title"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:background="@drawable/shape_orange_corner_boder_inwithte"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/text_width10"
                android:text="@string/default_text"/>
            <TextView
                android:id="@+id/id_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_width10"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_below="@+id/id_title"
                android:layout_marginTop="@dimen/margin_width15"
                android:textSize="@dimen/text_width12"
                android:textColor="@color/color_383838"
                android:text="@string/default_text"/>
            <TextView
                android:id="@+id/id_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOrange"
                android:layout_below="@+id/id_desc"
                android:layout_marginTop="@dimen/margin_width20"
                android:textSize="@dimen/text_width12"
                android:text="@string/default_text"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>