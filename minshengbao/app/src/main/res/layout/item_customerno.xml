<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_touch_background">
    <ImageView
        android:id="@+id/id_customerView"
        android:layout_width="@dimen/margin_width30"
        android:layout_height="@dimen/margin_width30"
        android:src="@drawable/gas_customer_icon_xh"
        android:layout_marginLeft="@dimen/margin_width10"
        android:layout_marginStart="@dimen/margin_width10"
        android:layout_marginTop="@dimen/margin_width10"
        android:layout_marginBottom="@dimen/margin_width10"
        android:contentDescription="@string/picture_text"
        android:layout_gravity="center_vertical"/>
    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/item_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_customerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/color_383838"
            android:text="@string/default_text"/>
        <TextView
            android:id="@+id/id_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/color_383838"
            android:layout_marginStart="@dimen/margin_width10"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_below="@+id/id_customerText"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width10"
            android:text="@string/default_text"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/id_btn_contast"
        android:layout_width="@dimen/margin_width25"
        android:layout_height="@dimen/margin_width25"
        android:contentDescription="@string/picture_text"
        android:layout_marginRight="@dimen/margin_width10"
        android:layout_marginEnd="@dimen/margin_width10"
        android:layout_gravity="center_vertical"
        android:background="@drawable/delect_addr_xh"
        android:visibility="gone"/>
</LinearLayout>