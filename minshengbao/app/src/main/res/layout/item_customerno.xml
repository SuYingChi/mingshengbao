<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent"
    android:background="@drawable/selector_touch_background">
    <RelativeLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF" >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="21dp"
            android:src="@drawable/customer_xh"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_6"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_alignParentLeft="true"
            android:id="@+id/id_customerimg" />
        <TextView
            android:id="@+id/id_customerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_customerimg"
            android:layout_marginLeft="@dimen/text_10"
            android:textSize="@dimen/text_18"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/margin_6"
            android:layout_alignBottom="@+id/id_customerimg"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="21dp"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/id_customerText"
            android:src="@drawable/address_xh"
            android:id="@+id/id_addressimg" />
        <TextView
            android:id="@+id/id_address_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_addressimg"
            android:layout_marginLeft="@dimen/text_10"
            android:layout_toLeftOf="@+id/id_btn_contast"
            android:layout_marginRight="@dimen/margin_3"
            android:textSize="@dimen/text_18"
            android:layout_below="@+id/id_customerText"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:textColor="#000000"
           />
        <ImageView
            android:id="@+id/id_btn_contast"
            android:layout_width="@dimen/margin_28"
            android:layout_height="@dimen/margin_30"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/delect_addr_xh"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>