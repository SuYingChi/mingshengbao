<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_findpassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.FunctionView.Myview.Findpassword">
    <include layout="@layout/layout_header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_marginBottom="@dimen/margin_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号"
                        android:textSize="@dimen/text_16"
                        android:textColor="#ff363636"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/View1" />
                    <EditText
                        android:id="@+id/id_et_phonenumber"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:hint="请填写注册时的手机号"
                        android:textColor="@color/title_tv"
                        android:textSize="@dimen/text_16"
                        android:ems="10"
                        android:background="@null"
                        android:layout_toRightOf="@+id/View1"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_centerVertical="true"
                        />
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/signup_username_delete2x"
                        android:layout_alignBottom="@+id/textView"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/text_20"
                        android:id="@+id/id_clear" />
                </RelativeLayout>
            </LinearLayout>
            <include layout="@layout/layout_line_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_marginBottom="@dimen/margin_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="验证码"
                        android:textSize="@dimen/text_16"
                        android:textColor="#ff363636"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/View2" />

                    <EditText
                        android:id="@+id/id_et_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:background="@null"
                        android:hint="输入你收到短信验证码"
                        android:textColor="@color/title_tv"
                        android:textSize="@dimen/text_16"
                        android:layout_toRightOf="@+id/View2"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_15" />
                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="获取验证码"
                        android:id="@+id/id_btn_getcode"
                        android:layout_marginRight="@dimen/margin_5"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shape_white_border_rectangle"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <include layout="@layout/layout_line_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_marginBottom="@dimen/margin_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新密码"
                        android:textSize="@dimen/text_16"
                        android:textColor="#ff363636"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/text2" />
                    />
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/password_gray"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/margin_20"
                        android:id="@+id/id_image_show" />

                    <EditText
                        android:id="@+id/id_et_newpassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:textSize="@dimen/text_16"
                        android:hint="请输入至少6位数的密码"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/text2"
                        android:layout_marginLeft="@dimen/margin_15"
                        />
                </RelativeLayout>
            </LinearLayout>
            <include layout="@layout/layout_line_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                >
                <Button
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_25"
                    android:text="重置密码"
                    android:textColor="#ffffffff"
                    android:id="@+id/id_btn_resetpsw"
                    android:textSize="@dimen/text_18"
                    android:background="@drawable/selector_orange_corner_button"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
