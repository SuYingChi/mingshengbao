<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_modify_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.functionActivity.myActivity.ModifyAddressActivity">
    <include layout="@layout/layout_header"/>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/id_customerNo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_touch_background"
            android:minHeight="@dimen/margin_width48">
            <TextView
                android:id="@+id/id_customerNo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gas_customerNo_text"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/color_383838"/>
            <EditText
                android:id="@+id/id_customerNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/id_customerNo_text"
                android:layout_toEndOf="@+id/id_customerNo_text"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:inputType="number"
                android:layout_toLeftOf="@+id/id_ensure_btn"
                android:layout_toStartOf="@+id/id_ensure_btn"
                android:background="@null"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/color_383838"/>
            <Button
                android:id="@+id/id_ensure_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/margin_width70"
                android:minHeight="@dimen/margin_width30"
                android:contentDescription="@string/picture_text"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginEnd="@dimen/margin_width10"
                android:background="@drawable/selector_touch_button_change"
                android:text="@string/ensure_text"
                android:textSize="@dimen/text_width14"
                android:textColor="@color/white"/>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_width10"
        android:background="@drawable/selector_touch_background"
        android:minHeight="@dimen/margin_width48">
        <TextView
            android:id="@+id/id_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connection_person"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/title_tv"/>
        <EditText
            android:id="@+id/id_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_toRightOf="@+id/id_text5"
            android:layout_toEndOf="@+id/id_text5"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:background="@null"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:hint="@string/please_input_connection_person"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/title_tv"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_width10"
        android:layout_marginRight="@dimen/margin_width10"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_touch_background"
        android:minHeight="@dimen/margin_width48">
        <TextView
            android:id="@+id/id_text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connection_phone"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/title_tv"/>
        <EditText
            android:id="@+id/id_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="phone"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:layout_toRightOf="@+id/id_text6"
            android:layout_toEndOf="@+id/id_text6"
            android:gravity="end"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:layout_centerVertical="true"
            android:hint="@string/please_input_connection_phone"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/title_tv"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_width10"
        android:layout_marginRight="@dimen/margin_width10"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>
    <RelativeLayout
        android:id="@+id/id_re_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_touch_background"
        android:minHeight="@dimen/margin_width48">
        <TextView
            android:id="@+id/id_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/city_text"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/title_tv"/>
        <TextView
            android:id="@+id/id_tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_text1"
            android:layout_toEndOf="@+id/id_text1"
            android:gravity="end"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:layout_toLeftOf="@+id/id_forward_img"
            android:layout_toStartOf="@+id/id_forward_img"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_centerVertical="true"
            android:hint="@string/city_default_text"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/title_tv"/>
        <ImageView
            android:id="@+id/id_forward_img"
            android:layout_width="@dimen/margin_16"
            android:layout_height="@dimen/margin_16"
            android:contentDescription="@string/picture_text"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:src="@drawable/forward_2x"/>
    </RelativeLayout>
        <include layout="@layout/layout_line_interval"/>
        <RelativeLayout
            android:id="@+id/id_map_address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_touch_background"
            android:minHeight="@dimen/margin_width48">
            <TextView
                android:id="@+id/id_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customer_address"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/title_tv"/>
            <TextView
                android:id="@+id/id_map_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/id_text2"
                android:layout_toEndOf="@+id/id_text2"
                android:gravity="end"
                android:layout_marginLeft="@dimen/margin_width20"
                android:layout_marginStart="@dimen/margin_width20"
                android:layout_toStartOf="@+id/id_forward_map"
                android:layout_toLeftOf="@+id/id_forward_map"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginEnd="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/title_tv"
                android:hint="@string/please_select_your_address"/>
            <ImageView
                android:id="@+id/id_forward_map"
                android:layout_width="@dimen/margin_16"
                android:layout_height="@dimen/margin_16"
                android:contentDescription="@string/picture_text"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_width10"
                android:src="@drawable/forward_2x"/>
        </RelativeLayout>
        <include layout="@layout/layout_line_interval"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/margin_width48">
        <TextView
            android:id="@+id/id_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/doorplate"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/title_tv"/>
        <EditText
            android:id="@+id/id_et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_text4"
            android:layout_toEndOf="@+id/id_text4"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:layout_marginRight="@dimen/margin_width10"
            android:gravity="end"
            android:inputType="textPersonName"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="@string/doorplate_default_text"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/title_tv"/>
    </RelativeLayout>
    <include layout="@layout/layout_line_gray"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/id_re_newaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width48"
        android:background="@drawable/selector_rectangle_change_button">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/save_text"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>
