<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_width="wrap_content"
    android:paddingEnd="@dimen/margin_width40"
    android:paddingStart="@dimen/margin_width40"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/transparent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/id_advertising_img"
            android:scaleType="fitXY"
            android:layout_width="@dimen/margin_width200"
            android:layout_height="@dimen/margin_width225"
            android:layout_marginStart="@dimen/margin_width20"
            android:layout_marginLeft="@dimen/margin_width20"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/id_close_img"
            android:layout_width="@dimen/margin_width30"
            android:layout_height="@dimen/margin_width30"
            android:contentDescription="@string/picture_text"
            android:layout_below="@+id/id_advertising_img"
            android:layout_marginTop="@dimen/margin_width20"
            android:layout_centerHorizontal="true"
            android:src="@drawable/close_cancel_xh"/>
    </RelativeLayout>
</LinearLayout>