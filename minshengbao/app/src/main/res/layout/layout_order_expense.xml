<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/id_li_costdetail"
    android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"
        android:background="@color/background_gray" />
    <include layout="@layout/layout_line_gray"/>
    <RelativeLayout
        android:id="@+id/id_re_expanse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_touch_background"
        android:minHeight="@dimen/margin_48">
        <ImageView
            android:id="@+id/id_img5"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:src="@drawable/order_expense_xh"/>
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/id_img5"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="订单费用"
            android:textColor="@color/title_tv"
            android:textSize="@dimen/text_16"
            />
        <TextView
            android:id="@+id/id_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/text10"
            android:layout_marginRight="@dimen/margin_10"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/text_16"/>
        <TextView
            android:id="@+id/text10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id_img_forward2"
            android:layout_marginRight="@dimen/margin_10"
            android:text="元"
            android:textSize="@dimen/text_16"/>
        <ImageView
            android:id="@+id/id_img_forward2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_6"
            android:layout_centerVertical="true"
            android:src="@drawable/forward_m"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"
        android:background="@color/background_gray" />
    <LinearLayout
        android:id="@+id/id_li_expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_48"
            android:background="@color/white">
            <ImageView
                android:id="@+id/id_img7"
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_15"
                android:src="@drawable/detect_fee_xh"/>
            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/id_img7"
                android:layout_marginLeft="@dimen/margin_12"
                android:text="上门检测费"
                android:textSize="@dimen/text_14"
                />
            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"
                android:text="元"
                android:textSize="@dimen/text_14"/>
            <TextView
                android:id="@+id/id_detect_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/text"
                android:layout_marginRight="3dp"
                android:text="50"
                android:textSize="@dimen/text_14"/>
        </RelativeLayout>
        <include layout="@layout/layout_line_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_48"
            android:background="@color/white">
            <ImageView
                android:id="@+id/id_img8"
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_15"
                android:src="@drawable/material_fee_xh"/>
            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/id_img8"
                android:layout_marginLeft="@dimen/margin_12"
                android:text="配件材料费"
                android:textSize="@dimen/text_14"
                />
            <TextView
                android:id="@+id/text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"
                android:text="元"
                android:textSize="@dimen/text_14"/>
            <TextView
                android:id="@+id/id_material_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/text8"
                android:layout_marginRight="3dp"
                android:text="50"
                android:textSize="@dimen/text_14"/>
        </RelativeLayout>
        <include layout="@layout/layout_line_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_48"
            android:background="@color/white">
            <ImageView
                android:id="@+id/id_img9"
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_15"
                android:src="@drawable/serve_fee_xh"/>
            <TextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/id_img9"
                android:layout_marginLeft="@dimen/margin_12"
                android:text="维修服务费"
                android:textSize="@dimen/text_14"
                />
            <TextView
                android:id="@+id/text9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_10"
                android:text="元"
                android:textSize="@dimen/text_14"/>
            <TextView
                android:id="@+id/id_serve_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/text9"
                android:layout_marginRight="3dp"
                android:text="50"
                android:textSize="@dimen/text_14"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_10"
            android:background="@color/background_gray" />
    </LinearLayout>
</LinearLayout>