<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/id_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_width15"
        android:layout_marginLeft="@dimen/margin_width15"
        android:layout_marginTop="@dimen/margin_width5"
        android:layout_marginBottom="@dimen/margin_width5"
        android:textColor="@color/color_383838"
        android:textSize="@dimen/text_width16"
        android:visibility="gone"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_child_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_width15"
        android:layout_marginStart="@dimen/margin_width15">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>