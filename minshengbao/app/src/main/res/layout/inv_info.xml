<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
   <!-- 当时用了immetionbar的 settitle 后，?actionBarSize会自动加上状态栏高度-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:contentInsetStart="0dp"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/msb_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="?actionBarSize"
            android:layout_height="match_parent"
            android:padding="@dimen/dp14"
            android:src="@drawable/back2x" />

        <TextView
            style="@style/shopMsbcolorTitleText"
            android:layout_centerInParent="true"
            android:text="管理发票信息"
            android:textColor="@color/white" />
    </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_Modules"
        android:paddingBottom="@dimen/margin_Modules"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="@dimen/margin_width122"
            android:layout_height="wrap_content"
            android:text="是否开据发票"
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="@dimen/text_width18"
            />
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_Modules"
            >

        <RadioButton
            android:id="@+id/no_need"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_Modules"
            android:layout_marginRight="@dimen/margin_Modules"
            android:background="@drawable/selector_evaluation_radiobutton"
            android:button="@null"
            android:checked="true"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/margin_Modules"
            android:paddingTop="@dimen/margin_Modules"
            android:paddingLeft="@dimen/margin_Modules"
            android:paddingRight="@dimen/margin_Modules"
            android:text="不需要开发票"
            android:textColor="@color/white"
            android:textSize="@dimen/text_width16" />


        <RadioButton
            android:id="@+id/need"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_evaluation_radiobutton"
            android:button="@null"
            android:checked="false"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/margin_Modules"
            android:paddingTop="@dimen/margin_Modules"
            android:paddingLeft="@dimen/margin_Modules"
            android:paddingRight="@dimen/margin_Modules"
            android:text="需要并填写发票信息"
            android:textColor="@color/nc_bg"
            android:textSize="@dimen/text_width16" />
        </RadioGroup>
    </LinearLayout>
   <FrameLayout
       android:id="@+id/container"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       />
    </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_Modules"
        android:paddingTop="@dimen/margin_Modules"
        android:textSize="@dimen/text_width18"
        android:text="确定"
        android:textColor="@color/white"
        android:background="@color/msb_color"
        />
</LinearLayout>