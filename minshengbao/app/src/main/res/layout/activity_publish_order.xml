<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_publish_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_change_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.functionActivity.repairService.PublishOrder">
    <include layout="@layout/layout_header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width10"
                android:background="@color/background_gray">
            </View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TextView
                    android:id="@+id/id_text1"
                    android:layout_marginTop="@dimen/margin_width15"
                    android:layout_marginBottom="@dimen/margin_width15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_centerVertical="true"
                    android:text="维修类型:"
                    android:textSize="@dimen/text_width18"
                    android:textColor="#ff323232"/>
                <TextView
                    android:id="@+id/id_tv_project_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_toRightOf="@+id/id_text1"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_width18"
                    android:textColor="@color/right_title"/>
                <ImageView
                    android:id="@+id/id_img"
                    android:layout_width="15dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/id_tv_project_type"
                    android:layout_marginLeft="@dimen/margin_width3"
                    android:src="@drawable/trigon_xh"/>
                <TextView
                    android:id="@+id/id_tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/id_img"
                    android:layout_marginLeft="@dimen/margin_width3"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_width18"
                    android:textColor="@color/right_title"/>
            </RelativeLayout>
            <include layout="@layout/layout_line_gray"/>
            <RelativeLayout
                android:id="@+id/id_re_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_touch_background"
                android:minHeight="@dimen/margin_width45">
                <TextView
                    android:id="@+id/id_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_centerVertical="true"
                    android:text="价格表"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/right_title"/>
                <TextView
                    android:id="@+id/id_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="超值价位"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/id_img_forward"
                    android:layout_marginRight="@dimen/margin_5"
                    />
                <ImageView
                    android:id="@+id/id_img_forward"
                    android:layout_width="@dimen/margin_width15"
                    android:layout_height="@dimen/margin_width15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:src="@drawable/forward_2x"
                    />
            </RelativeLayout>
            <include layout="@layout/layout_line_gray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width10"
                android:background="@color/background_gray"/>
            <include layout="@layout/layout_line_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_touch_background"
                android:minHeight="@dimen/margin_width40">
                <TextView
                    android:id="@+id/id_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_centerVertical="true"
                    android:text="选择地址"
                    android:textSize="@dimen/text_width16"
                    android:textColor="@color/right_title"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margin_width10"
                android:background="@color/light_gray"/>
            <RelativeLayout
                android:id="@+id/id_re_selectaddre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width70"
                android:background="@color/white">
                <TextView
                    android:id="@+id/id_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_width12"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/margin_width18"
                    android:textSize="@dimen/text_width16"/>
                <TextView
                    android:id="@+id/id_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_width12"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_toLeftOf="@+id/id_img_forward2"
                    android:gravity="end"
                    android:background="@null"
                    android:inputType="number"
                    android:layout_marginLeft="@dimen/margin_width15"
                    android:textSize="@dimen/text_width16"/>
                <TextView
                    android:id="@+id/id_tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_width12"
                    android:layout_below="@+id/id_tv_name"
                    android:gravity="end"
                    android:layout_marginBottom="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_toLeftOf="@+id/id_img_forward2"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:textSize="@dimen/text_width16"/>
                <ImageView
                    android:id="@+id/id_img_forward2"
                    android:layout_width="@dimen/margin_15"
                    android:layout_height="@dimen/margin_15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_10"
                    android:src="@drawable/forward_2x"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margin_width10"
                android:background="@color/background_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width45"
                android:background="@color/white">
                <TextView
                    android:id="@+id/id_recommand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:text="推荐码"
                    android:textColor="@color/right_title"
                    android:textSize="@dimen/text_width16"/>
                <EditText
                    android:id="@+id/id_et_recommand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/id_recommand"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:textSize="@dimen/text_width16"
                    android:textColor="@color/title_tv"
                    android:hint="可输入您的推荐码"/>

            </RelativeLayout>
            <include layout="@layout/layout_line_gray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_10"
                android:background="@color/background_gray"/>
            <include layout="@layout/layout_line_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width50"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/id_appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:text="预约时间"
                    android:textSize="@dimen/text_width16"
                    android:textColor="@color/right_title"/>
                <TextView
                    android:id="@+id/id_data"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/id_appointment"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:gravity="center"
                    android:hint="选择预约日期"
                    android:focusable="false"
                    android:textSize="@dimen/text_width16"
                    android:textColor="#ff323232"
                    android:background="#f8f8f8" />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/id_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#f8f8f8"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_toRightOf="@+id/id_data"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:gravity="center"
                    android:hint="选择预约时间"
                    android:textSize="@dimen/text_width16"
                    android:textColor="#ff323232"/>
            </LinearLayout>
            <include layout="@layout/layout_line_gray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width10"
                android:background="@color/background_gray">
            </View>
            <include layout="@layout/layout_line_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TextView
                    android:id="@+id/id_text2"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:text="问题描述"
                    android:textSize="@dimen/text_width16"
                    android:textColor="@color/right_title"/>
                <com.msht.minshengbao.ViewUI.widget.MultiLineChooseLayout
                    android:id="@+id/id_multiChoose"
                    style="@style/MultiLineChooseItemTags.FlowLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_below="@+id/id_text2"
                    android:layout_marginTop="@dimen/margin_width10">
                </com.msht.minshengbao.ViewUI.widget.MultiLineChooseLayout>
                <EditText
                    android:id="@+id/id_et_info"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_width80"
                    android:layout_below="@+id/id_multiChoose"
                    android:hint="您还可以输入140个字"
                    android:padding="@dimen/margin_width5"
                    android:layout_margin="@dimen/margin_width10"
                    android:textSize="@dimen/text_width16"
                    android:maxLength="150"
                    android:background="@drawable/shape_white_border_rectangle"
                    android:gravity="left|top"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width10"
                android:background="@color/background_gray">
            </View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width50"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/id_img1"
                    android:layout_width="@dimen/margin_width25"
                    android:layout_height="@dimen/margin_width25"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_width12"
                    android:src="@drawable/send_img_h"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/id_img1"
                    android:layout_marginLeft="@dimen/margin_width18"
                    android:layout_centerVertical="true"
                    android:text="上传维修部位照片"
                    android:textColorHighlight="@color/black1"
                    android:textSize="@dimen/text_width16"/>
            </RelativeLayout>
            <include layout="@layout/layout_line_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <GridView
                    android:id="@+id/noScrollgridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_width5"
                    android:horizontalSpacing="@dimen/margin_width3"
                    android:numColumns="4"
                    android:scrollbars="none"
                    android:verticalSpacing="@dimen/margin_width5" >
                </GridView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/noScrollgridview"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_width15"
                    android:text="最多只能上传4张图片"
                    android:textSize="@dimen/text_width14"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_width10"
                android:background="@color/white">
                <Button
                    android:id="@+id/id_btn_sendorder"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_width45"
                    android:layout_marginTop="@dimen/margin_width15"
                    android:layout_marginRight="@dimen/margin_width20"
                    android:layout_marginLeft="@dimen/margin_width20"
                    android:layout_marginBottom="@dimen/margin_width10"
                    android:background="@drawable/selector_touch_button_change"
                    android:text="提交订单"
                    android:textSize="@dimen/text_width16"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
