<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_publish_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.functionActivity.repairService.PublishOrderActivity">
    <include layout="@layout/layout_header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width10"
                android:background="@color/background_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TextView
                    android:id="@+id/id_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginTop="@dimen/margin_width15"
                    android:layout_marginBottom="@dimen/margin_width15"
                    android:text="@string/repair_type"
                    android:textColor="#ff323232"
                    android:textSize="@dimen/text_width18" />

                <TextView
                    android:id="@+id/id_tv_project_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_width12"
                    android:layout_marginLeft="@dimen/margin_width12"
                    android:layout_toEndOf="@+id/id_text1"
                    android:layout_toRightOf="@+id/id_text1"
                    android:background="@null"
                    android:textColor="@color/right_title"
                    android:textSize="@dimen/text_width18" />

                <ImageView
                    android:id="@+id/id_img"
                    android:layout_width="15dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_width3"
                    android:layout_marginLeft="@dimen/margin_width3"
                    android:layout_toEndOf="@+id/id_tv_project_type"
                    android:layout_toRightOf="@+id/id_tv_project_type"
                    android:contentDescription="@string/picture_text"
                    android:src="@drawable/trigon_xh" />

                <TextView
                    android:id="@+id/id_tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_width3"
                    android:layout_marginLeft="@dimen/margin_width3"
                    android:layout_toEndOf="@+id/id_img"
                    android:layout_toRightOf="@+id/id_img"
                    android:textColor="@color/right_title"
                    android:textSize="@dimen/text_width18" />
            </RelativeLayout>
            <include layout="@layout/layout_line_gray" />
            <RelativeLayout
                android:id="@+id/id_re_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_touch_background"
                android:minHeight="@dimen/margin_width45">
                <TextView
                    android:id="@+id/id_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:text="@string/price_table"
                    android:textColor="@color/right_title"
                    android:textSize="@dimen/text_16" />
                <TextView
                    android:id="@+id/id_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_width15"
                    android:layout_marginRight="@dimen/margin_width5"
                    android:layout_toStartOf="@+id/id_img_forward"
                    android:layout_toLeftOf="@+id/id_img_forward"
                    android:hint="@string/overflow_price" />
                <ImageView
                    android:id="@+id/id_img_forward"
                    android:layout_width="@dimen/margin_width15"
                    android:layout_height="@dimen/margin_width15"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_width10"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:contentDescription="@string/picture_text"
                    android:src="@drawable/forward_2x" />
            </RelativeLayout>

            <include layout="@layout/layout_line_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width10"
                android:background="@color/background_gray" />

            <include layout="@layout/layout_line_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_touch_background"
                android:minHeight="@dimen/margin_width40">

                <TextView
                    android:id="@+id/id_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:text="@string/please_select_address"
                    android:textColor="@color/right_title"
                    android:textSize="@dimen/text_width16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:id="@+id/id_re_selectaddre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="@dimen/margin_width70">

                <TextView
                    android:id="@+id/id_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_width18"
                    android:layout_marginLeft="@dimen/margin_width18"
                    android:layout_marginTop="@dimen/margin_width12"
                    android:layout_marginEnd="@dimen/margin_width10"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:background="@null"
                    android:textSize="@dimen/text_width16" />

                <EditText
                    android:id="@+id/id_et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_width15"
                    android:layout_marginLeft="@dimen/margin_width15"
                    android:layout_marginTop="@dimen/margin_width12"
                    android:layout_marginEnd="@dimen/margin_width10"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_toStartOf="@+id/id_img_forward2"
                    android:layout_toLeftOf="@+id/id_img_forward2"
                    android:layout_toEndOf="@+id/id_tv_name"
                    android:layout_toRightOf="@+id/id_tv_name"
                    android:background="@null"
                    android:gravity="end"
                    android:inputType="phone"
                    android:textSize="@dimen/text_width16" />

                <TextView
                    android:id="@+id/id_tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_tv_name"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginTop="@dimen/margin_width12"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_marginBottom="@dimen/margin_width10"
                    android:layout_toStartOf="@+id/id_img_forward2"
                    android:layout_toLeftOf="@+id/id_img_forward2"
                    android:gravity="end"
                    android:textSize="@dimen/text_width16" />

                <ImageView
                    android:id="@+id/id_img_forward2"
                    android:layout_width="@dimen/margin_15"
                    android:layout_height="@dimen/margin_15"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_width10"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:contentDescription="@string/picture_text"
                    android:src="@drawable/forward_2x" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:background="@color/background_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width45"
                android:background="@color/white">

                <TextView
                    android:id="@+id/id_recommand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:text="@string/recommend_code"
                    android:textColor="@color/right_title"
                    android:textSize="@dimen/text_width16" />

                <EditText
                    android:id="@+id/id_et_recommand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_width10"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_toEndOf="@+id/id_recommand"
                    android:layout_toRightOf="@+id/id_recommand"
                    android:background="@null"
                    android:gravity="end"
                    android:hint="@string/please_input_recommend_code"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColor="@color/title_tv"
                    android:textSize="@dimen/text_width16" />
            </RelativeLayout>

            <include layout="@layout/layout_line_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_10"
                android:background="@color/background_gray" />

            <include layout="@layout/layout_line_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width50"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:text="@string/appointment_time"
                    android:textColor="@color/right_title"
                    android:textSize="@dimen/text_width16" />

                <TextView
                    android:id="@+id/id_data"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_weight="1"
                    android:background="#f8f8f8"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="@string/select_appointment_date"
                    android:textColor="#ff323232"
                    android:textSize="@dimen/text_width16" />

                <TextView
                    android:id="@+id/id_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_weight="1"
                    android:background="#f8f8f8"
                    android:gravity="center"
                    android:hint="@string/select_appointment_time"
                    android:textColor="#ff323232"
                    android:textSize="@dimen/text_width16" />
            </LinearLayout>
            <include layout="@layout/layout_line_gray" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width10"
                android:background="@color/background_gray">
            </View>
            <include layout="@layout/layout_line_gray" />
            <RelativeLayout
                android:id="@+id/id_question_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_touch_background"
                android:minHeight="@dimen/margin_width45">
                <TextView
                    android:id="@+id/id_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:background="@color/white"
                    android:text="@string/question_describe"
                    android:textColor="@color/right_title"
                    android:textSize="@dimen/text_width16" />
                <TextView
                    android:id="@+id/id_tv_describe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="end"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginEnd="@dimen/margin_width10"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_toStartOf="@+id/id_forward"
                    android:layout_toLeftOf="@+id/id_forward"
                    android:layout_toEndOf="@+id/id_text2"
                    android:layout_toRightOf="@+id/id_text2"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:textColor="@color/color_9e9e9e"
                    android:textSize="@dimen/text_width16"
                    android:hint="@string/please_select_question_describe"/>
                <ImageView
                    android:id="@+id/id_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/margin_width10"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/picture_text"
                    android:src="@drawable/forward_2x" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width10"
                android:background="@color/background_gray">
            </View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width50"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/id_img1"
                    android:layout_width="@dimen/margin_width25"
                    android:layout_height="@dimen/margin_width25"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_width12"
                    android:layout_marginLeft="@dimen/margin_width12"
                    android:contentDescription="@string/picture_text"
                    android:src="@drawable/send_img_h" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_width18"
                    android:layout_marginLeft="@dimen/margin_width18"
                    android:layout_toEndOf="@+id/id_img1"
                    android:layout_toRightOf="@+id/id_img1"
                    android:text="@string/upload_picture"
                    android:textColorHighlight="@color/black1"
                    android:textSize="@dimen/text_width16" />
            </RelativeLayout>
            <include layout="@layout/layout_line_gray" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <com.msht.minshengbao.custom.widget.MyNoScrollGridView
                    android:id="@+id/noScrollgridview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:horizontalSpacing="@dimen/margin_width3"
                    android:numColumns="4"
                    android:scrollbars="none"
                    android:verticalSpacing="@dimen/margin_width5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/noScrollgridview"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_width15"
                    android:layout_marginBottom="@dimen/margin_width10"
                    android:text="@string/upload_most_four_picture"
                    android:textSize="@dimen/text_width14" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_width20">
                <Button
                    android:id="@+id/id_btn_sendorder"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_width45"
                    android:layout_marginLeft="@dimen/margin_width20"
                    android:layout_marginTop="@dimen/margin_width15"
                    android:layout_marginRight="@dimen/margin_width20"
                    android:layout_marginBottom="@dimen/margin_width10"
                    android:background="@drawable/selector_touch_button_change"
                    android:text="@string/send_order"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_width16" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
