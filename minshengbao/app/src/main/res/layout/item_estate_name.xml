<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width60">
        <ImageView
            android:id="@+id/id_map_img"
            android:layout_width="@dimen/margin_width14"
            android:layout_height="@dimen/margin_width20"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginLeft="@dimen/margin_width10"
            android:src="@drawable/server_addr_xh"/>
        <TextView
            android:id="@+id/id_estate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_toRightOf="@+id/id_map_img"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_toLeftOf="@+id/id_checkBox"
            android:layout_marginLeft="@dimen/margin_width10"
            android:textColor="@color/color_383838"
            android:text="标题"
            android:textSize="@dimen/text_width16"/>
        <TextView
            android:id="@+id/id_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_estate"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_toRightOf="@+id/id_map_img"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width10"
            android:textSize="@dimen/text_width14"
            android:textColor="@color/title_tv"
            android:text="@string/default_text"/>
        <RadioButton
            android:id="@+id/id_RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_width10"/>
    </RelativeLayout>

</LinearLayout>