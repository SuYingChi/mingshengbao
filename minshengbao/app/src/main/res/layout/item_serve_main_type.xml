<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width45">
        <ImageView
            android:id="@+id/id_serve_img"
            android:layout_width="@dimen/margin_width20"
            android:layout_height="@dimen/margin_width20"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_width15"
            android:src="@drawable/all_gasserve_xh"/>
        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/id_serve_img"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="民生商城"
            android:textSize="@dimen/text_16"
            android:textColor="@color/app_text"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_second_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_width10"
        android:layout_marginRight="@dimen/margin_width10"
        android:layout_marginTop="@dimen/margin_width5">
    </android.support.v7.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_width15"/>
</LinearLayout>