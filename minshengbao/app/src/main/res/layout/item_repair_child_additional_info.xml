<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/id_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/margin_width90"
        android:layout_marginTop="@dimen/margin_width5"
        android:layout_marginBottom="@dimen/margin_width5"
        android:textColor="@color/app_text"
        android:textSize="@dimen/text_width12"/>
    <TextView
        android:id="@+id/id_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/id_category_name"
        android:layout_toRightOf="@+id/id_category_name"
        android:layout_marginLeft="@dimen/margin_width10"
        android:layout_marginStart="@dimen/margin_width10"
        android:layout_marginTop="@dimen/margin_width5"
        android:layout_marginBottom="@dimen/margin_width5"
        android:textColor="@color/app_text"
        android:textSize="@dimen/text_width12"/>
</RelativeLayout>