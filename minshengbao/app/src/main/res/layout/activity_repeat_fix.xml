<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_repeat_fix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.FunctionActivity.repairService.RepeatFix">
   <include layout="@layout/layout_header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/layout_order_header_info"/>
            <include layout="@layout/layout_line_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/id_img1"
                    android:layout_width="@dimen/margin_20"
                    android:layout_height="22dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:src="@drawable/customer_xh"/>
                <TextView
                    android:id="@+id/id_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_toRightOf="@+id/id_img1"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:textSize="@dimen/text_16"/>
                <ImageView
                    android:id="@+id/id_img2"
                    android:layout_width="@dimen/margin_20"
                    android:layout_height="22dp"
                    android:layout_below="@+id/id_img1"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:src="@drawable/address_xh"/>
                <TextView
                    android:id="@+id/id_tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_phone"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_toRightOf="@+id/id_img2"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:paddingBottom="@dimen/margin_10"
                    android:textSize="@dimen/text_16"/>
            </RelativeLayout>
            <include layout="@layout/layout_line_gray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_10"
                android:background="@color/background_gray"/>
            <include layout="@layout/layout_line_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/id_appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="预约时间"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/right_title"/>
                <TextView
                    android:id="@+id/id_data"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/id_appointment"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:gravity="center"
                    android:hint="选择预约日期"
                    android:focusable="false"
                    android:textSize="@dimen/text_16"
                    android:textColor="#ff323232"
                    android:background="#f8f8f8" />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/id_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#f8f8f8"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_toRightOf="@+id/id_data"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:gravity="center"
                    android:hint="选择预约时间"
                    android:textSize="@dimen/text_16"
                    android:textColor="#ff323232"/>
            </LinearLayout>
            <include layout="@layout/layout_line_gray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_10"
                android:background="@color/background_gray">
            </View>
            <include layout="@layout/layout_line_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TextView
                    android:id="@+id/id_text2"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:text="问题描述"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/right_title"/>
                <com.msht.minshengbao.ViewUI.widget.MultiLineChooseLayout
                    android:id="@+id/id_multiChoose"
                    style="@style/MultiLineChooseItemTags.FlowLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_below="@+id/id_text2"
                    android:layout_marginTop="@dimen/margin_10">
                </com.msht.minshengbao.ViewUI.widget.MultiLineChooseLayout>
                <EditText
                    android:id="@+id/id_et_info"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/id_multiChoose"
                    android:hint="您还可以输入140个字"
                    android:padding="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:textSize="@dimen/text_16"
                    android:maxLength="150"
                    android:background="@drawable/shape_white_border_rectangle"
                    android:gravity="left|top"/>
            </RelativeLayout>
            <include layout="@layout/layout_line_gray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_10"
                android:background="@color/background_gray">
            </View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_centerVertical="true"
                    android:text="上传维修部位照片"
                    android:textColorHighlight="@color/black1"
                    android:textSize="@dimen/text_18"/>
            </RelativeLayout>
            <include layout="@layout/layout_line_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <GridView
                    android:id="@+id/noScrollgridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:horizontalSpacing="3dp"
                    android:numColumns="4"
                    android:scrollbars="none"
                    android:verticalSpacing="5dp" >
                </GridView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/noScrollgridview"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_15"
                    android:text="最多只能上传4张图片"
                    android:textSize="@dimen/text_16"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@color/white">
                <Button
                    android:id="@+id/id_btn_send"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:background="@drawable/selector_touch_button_change"
                    android:text="提交订单"
                    android:textSize="@dimen/text_18"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
