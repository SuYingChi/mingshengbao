<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.msht.minshengbao.FunctionView.fragmeht.HomeFragment">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/id_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.msht.minshengbao.ViewUI.widget.MyScrollview
        android:id="@+id/id_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.msht.minshengbao.ViewUI.ImageCycleView
                android:id="@+id/ad_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_banner">
            </com.msht.minshengbao.ViewUI.ImageCycleView>
            <LinearLayout
                android:id="@+id/id_layout_havedata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:paddingBottom="@dimen/margin_20"
                    android:minHeight="@dimen/margin_20">
                    <com.msht.minshengbao.ViewUI.widget.MyNoScrollGridView
                        android:id="@+id/id_function_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:numColumns="4"
                        android:verticalSpacing="@dimen/margin_20">
                    </com.msht.minshengbao.ViewUI.widget.MyNoScrollGridView>
                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_8"
                    android:background="@color/background_gray"/>
                <include layout="@layout/layout_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_width45"
                    android:background="@color/white" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_6"
                        android:layout_centerInParent="true"
                        android:text="专题活动"
                        android:textSize="@dimen/text_width18"
                        android:textColor="#ff4f4f4f"/>

                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    >
                    <RelativeLayout
                        android:id="@+id/id_layout_leftimg"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/margin_widthHight"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        android:background="@mipmap/specialtopic_left">
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/id_layout_homegastools"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/margin_widthHight"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/id_righttop_img"
                            android:layout_weight="1.0"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/specialtopic_righttop_xh"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_10"
                            android:background="@color/white"/>
                        <ImageView
                            android:id="@+id/id_rightbottom_img"
                            android:layout_weight="1.0"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/specialtopic_rightbottom_xh"/>
                    </LinearLayout>
                </LinearLayout>
                <include layout="@layout/layout_line_gray"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_8"
                    android:background="@color/background_gray"/>
                <include layout="@layout/layout_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_width45"
                    android:background="@color/white" >
                    <View
                        android:id="@+id/id_view1"
                        android:layout_width="@dimen/margin_3"
                        android:layout_height="@dimen/margin_width18"
                        android:background="@color/colorOrange"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/id_view1"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_centerVertical="true"
                        android:text="热门推荐"
                        android:textSize="@dimen/text_width18"
                        android:textColor="#ff4f4f4f"/>

                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
                <RelativeLayout
                    android:id="@+id/id_layout_air"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    >
                    <RelativeLayout
                        android:id="@+id/id_layout_lenterns"
                        android:layout_width="@dimen/margin_imgHight"
                        android:layout_height="@dimen/margin_imgHight"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_5"
                        android:background="@mipmap/home_hotrecommend_xh">
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/margin_100"
                        android:layout_toRightOf="@+id/id_layout_lenterns"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_10"
                        >
                        <TextView
                            android:id="@+id/id_hot_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="空调清洗"
                            android:textSize="@dimen/text_width16"
                            android:textColor="#ff4f4f4f"/>
                        <TextView
                            android:id="@+id/id_hot_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/id_hot_text1"
                            android:layout_marginTop="@dimen/margin_10"
                            android:text="赶走细菌，呼吸新的空气！"
                            android:textSize="@dimen/text_width14"
                            android:textColor="#ff4f4f4f"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/id_hot_text2"
                            android:layout_marginTop="@dimen/margin_8"
                            android:text="明码标价，价格透明公开，统一收费标准"
                            android:textSize="@dimen/text_width14"
                            android:textColor="#ff4f4f4f"/>
                    </RelativeLayout>
                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
                <RelativeLayout
                    android:id="@+id/id_layout_over"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    >
                    <RelativeLayout
                        android:id="@+id/id_layout_gasover"
                        android:layout_width="@dimen/margin_imgHight"
                        android:layout_height="@dimen/margin_imgHight"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_5"
                        android:background="@mipmap/home_hot_gasover_2xh">
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/id_layout_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/margin_100"
                        android:layout_toRightOf="@+id/id_layout_gasover"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_10">
                        <TextView
                            android:id="@+id/id_hot_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="油烟机清洗"
                            android:textSize="@dimen/text_width16"
                            android:textColor="#ff4f4f4f"/>
                        <TextView
                            android:id="@+id/id_hot_text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/id_hot_text3"
                            android:layout_marginTop="@dimen/margin_10"
                            android:text="解放你的双手，还你一个洁净空间！"
                            android:textSize="@dimen/text_width14"
                            android:textColor="#ff4f4f4f"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/id_hot_text4"
                            android:layout_marginTop="@dimen/margin_8"
                            android:text="明码标价，价格透明公开，统一收费标准"
                            android:textSize="@dimen/text_width14"
                            android:textColor="#ff4f4f4f"/>
                    </RelativeLayout>
                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_10"
                    android:background="@color/background_gray"/>
                <include layout="@layout/layout_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minHeight="@dimen/margin_width45"
                    android:background="@color/white">
                    <View
                        android:id="@+id/id_view2"
                        android:layout_width="@dimen/margin_3"
                        android:layout_height="@dimen/margin_width18"
                        android:background="@color/colorOrange"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="热门维修"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/id_view2"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:textSize="@dimen/text_width18"
                        android:textColor="#ff4f4f4f"
                        android:id="@+id/textView" />

                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:paddingBottom="@dimen/margin_10">
                    <com.msht.minshengbao.ViewUI.widget.MyNoScrollGridView
                        android:id="@+id/id_hot_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:numColumns="3"
                        android:verticalSpacing="@dimen/margin_20">
                    </com.msht.minshengbao.ViewUI.widget.MyNoScrollGridView>
                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_gray"
                    android:minHeight="@dimen/margin_45">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="专业专注，用心做好每一次服务!"
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/colorOrange"/>

                </RelativeLayout>
            </LinearLayout>
            <include android:id="@+id/id_not_open" layout="@layout/layout_notopen_city"
                android:visibility="gone"/>
        </LinearLayout>
    </com.msht.minshengbao.ViewUI.widget.MyScrollview>
    </android.support.v4.widget.SwipeRefreshLayout>
    <!--    标题栏  -->
    <LinearLayout
        android:id="@+id/id_li_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_50"
        android:orientation="vertical"
        android:background="@android:color/transparent">
        <View
            android:id="@+id/id_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_20" />
        <RelativeLayout
            android:id="@+id/id_re_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_50"
            android:background="@android:color/transparent">
            <RelativeLayout
                android:id="@+id/id_re_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/id_tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_18"
                    android:text="海口"/>
                <ImageView
                    android:layout_width="@dimen/margin_12"
                    android:layout_height="@dimen/margin_12"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/id_tv_city"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:src="@drawable/downward_xh"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/id_tv_naviga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="民生宝"
                android:textSize="@dimen/text_18"
                android:textColor="@android:color/transparent"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
