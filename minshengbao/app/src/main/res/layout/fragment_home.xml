<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.msht.minshengbao.functionActivity.fragment.HomeFragment">
    <com.msht.minshengbao.ViewUI.widget.VerticalSwipeRefreshLayout
        android:id="@+id/id_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.msht.minshengbao.ViewUI.widget.MyScrollview
        android:id="@+id/id_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.msht.minshengbao.ViewUI.ImageCycleView
                        android:id="@+id/ad_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_width200">
                    </com.msht.minshengbao.ViewUI.ImageCycleView>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_width75"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="@dimen/margin_20"
                        android:minHeight="@dimen/margin_20">
                        <com.msht.minshengbao.ViewUI.widget.MyNoScrollGridView
                            android:id="@+id/id_function_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:numColumns="5"
                            android:verticalSpacing="@dimen/margin_width15">
                        </com.msht.minshengbao.ViewUI.widget.MyNoScrollGridView>
                    </RelativeLayout>
                </LinearLayout>
                <android.support.v7.widget.CardView
                    android:id="@+id/id_card_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_width20"
                    android:layout_marginRight="@dimen/margin_width20"
                    android:layout_marginTop="@dimen/margin_width174"
                    android:layout_gravity="center_horizontal"
                    android:minHeight="@dimen/margin_width20"
                    app:cardCornerRadius="@dimen/margin_width8"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="@dimen/margin_width5"
                    android:visibility="gone">
                    <com.msht.minshengbao.ViewUI.widget.MyNoScrollGridView
                        android:id="@+id/id_topmodule_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_width10"
                        android:layout_marginLeft="@dimen/margin_width10"
                        android:layout_marginTop="@dimen/margin_width7"
                        android:layout_marginBottom="@dimen/margin_width12"
                        android:layout_gravity="center_horizontal"
                        android:numColumns="4"
                        android:verticalSpacing="@dimen/margin_width15">
                    </com.msht.minshengbao.ViewUI.widget.MyNoScrollGridView>
                </android.support.v7.widget.CardView>
            </FrameLayout>
            <include layout="@layout/layout_marquee_view" android:id="@+id/id_marquee_layout"/>
            <LinearLayout
                android:id="@+id/id_layout_havedata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include layout="@layout/layout_line_gray"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_width10"
                    android:background="@color/background_gray"/>
                <include layout="@layout/layout_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_width45"
                    android:background="@color/white" >
                    <View
                        android:id="@+id/id_view0"
                        android:layout_width="@dimen/margin_width3"
                        android:layout_height="@dimen/margin_width18"
                        android:background="@color/colorOrange"
                        android:layout_marginLeft="@dimen/margin_width10"
                        android:layout_marginStart="@dimen/margin_width10"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/id_view0"
                        android:layout_toEndOf="@+id/id_view0"
                        android:layout_marginLeft="@dimen/margin_width10"
                        android:layout_marginStart="@dimen/margin_width10"
                        android:layout_centerVertical="true"
                        android:text="@string/special_topic_activity"
                        android:textSize="@dimen/text_width18"
                        android:textColor="#ff4f4f4f"/>
                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.msht.minshengbao.ViewUI.CardVMZBanner.MZBannerView
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_width160"
                        android:layout_marginTop="@dimen/margin_width12"
                        android:layout_marginBottom="@dimen/margin_width12"
                        app:open_mz_mode="true"
                        app:canLoop="true"
                        app:middle_page_cover="true"
                        app:indicatorAlign="center"
                        app:indicatorPaddingTop="@dimen/margin_width10"
                        app:indicatorPaddingLeft="@dimen/margin_width10"
                        app:indicatorPaddingBottom="@dimen/margin_width10">
                    </com.msht.minshengbao.ViewUI.CardVMZBanner.MZBannerView>
                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_width10"
                    android:background="@color/background_gray"/>
                <include layout="@layout/layout_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_width45"
                    android:background="@color/white" >
                    <View
                        android:id="@+id/id_view1"
                        android:layout_width="@dimen/margin_width3"
                        android:layout_height="@dimen/margin_width18"
                        android:background="@color/colorOrange"
                        android:layout_marginLeft="@dimen/margin_width10"
                        android:layout_marginStart="@dimen/margin_width10"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/id_view1"
                        android:layout_toEndOf="@+id/id_view1"
                        android:layout_marginStart="@dimen/margin_width10"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_centerVertical="true"
                        android:text="@string/hot_recommend"
                        android:textSize="@dimen/text_width18"
                        android:textColor="#ff4f4f4f"/>

                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
                <RelativeLayout
                    android:id="@+id/id_layout_air"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    >
                    <RelativeLayout
                        android:id="@+id/id_layout_lenterns"
                        android:layout_width="@dimen/margin_imgHight"
                        android:layout_height="@dimen/margin_imgHight"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_5"
                        android:background="@mipmap/home_hotrecommend_xh">
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/margin_100"
                        android:layout_toRightOf="@+id/id_layout_lenterns"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_10"
                        >
                        <TextView
                            android:id="@+id/id_hot_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="空调清洗"
                            android:textSize="@dimen/text_width16"
                            android:textColor="#ff4f4f4f"/>
                        <TextView
                            android:id="@+id/id_hot_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/id_hot_text1"
                            android:layout_marginTop="@dimen/margin_10"
                            android:text="高温杀毒，杜绝尘螨！"
                            android:textSize="@dimen/text_width14"
                            android:textColor="#ff4f4f4f"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/id_hot_text2"
                            android:layout_marginTop="@dimen/margin_8"
                            android:text="明码标价给您最优惠的选择"
                            android:textSize="@dimen/text_width14"
                            android:textColor="#ff4f4f4f"/>
                    </RelativeLayout>
                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
                <RelativeLayout
                    android:id="@+id/id_layout_over"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    >
                    <RelativeLayout
                        android:id="@+id/id_layout_gasover"
                        android:layout_width="@dimen/margin_imgHight"
                        android:layout_height="@dimen/margin_imgHight"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_5"
                        android:background="@mipmap/home_hot_gasover_2xh">
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/id_layout_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/margin_100"
                        android:layout_toRightOf="@+id/id_layout_gasover"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_10">
                        <TextView
                            android:id="@+id/id_hot_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="燃气灶维修"
                            android:textSize="@dimen/text_width16"
                            android:textColor="#ff4f4f4f"/>
                        <TextView
                            android:id="@+id/id_hot_text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/id_hot_text3"
                            android:layout_marginTop="@dimen/margin_10"
                            android:text="修的放心，用的舒心！"
                            android:textSize="@dimen/text_width14"
                            android:textColor="#ff4f4f4f"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/id_hot_text4"
                            android:layout_marginTop="@dimen/margin_8"
                            android:text="以最快的速度给您最好的服务"
                            android:textSize="@dimen/text_width14"
                            android:textColor="#ff4f4f4f"/>
                    </RelativeLayout>
                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_10"
                    android:background="@color/background_gray"/>
                <include layout="@layout/layout_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:minHeight="@dimen/margin_width45"
                    android:background="@color/white">
                    <View
                        android:id="@+id/id_view2"
                        android:layout_width="@dimen/margin_3"
                        android:layout_height="@dimen/margin_width18"
                        android:background="@color/colorOrange"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="热门维修"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/id_view2"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:textSize="@dimen/text_width18"
                        android:textColor="#ff4f4f4f"
                        android:id="@+id/textView" />

                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:paddingBottom="@dimen/margin_10">
                    <com.msht.minshengbao.ViewUI.widget.MyNoScrollGridView
                        android:id="@+id/id_hot_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:numColumns="3"
                        android:verticalSpacing="@dimen/margin_20">
                    </com.msht.minshengbao.ViewUI.widget.MyNoScrollGridView>
                </RelativeLayout>
                <include layout="@layout/layout_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_gray"
                    android:minHeight="@dimen/margin_45">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="专业专注，用心做好每一次服务!"
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/colorOrange"/>
                </RelativeLayout>
            </LinearLayout>
            <include android:id="@+id/id_not_open" layout="@layout/layout_notopen_city"
                android:visibility="gone"/>
        </LinearLayout>
    </com.msht.minshengbao.ViewUI.widget.MyScrollview>
    </com.msht.minshengbao.ViewUI.widget.VerticalSwipeRefreshLayout>
    <!--    标题栏  -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:contentInsetStart="0dp"
        >
    <LinearLayout
        android:id="@+id/id_li_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent">
        <RelativeLayout
            android:id="@+id/id_re_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_width50"
            android:background="@android:color/transparent">
            <RelativeLayout
                android:id="@+id/id_city_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_oval_back_button"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/id_tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_width16"
                    android:maxWidth="@dimen/margin_width80"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="海口"/>
                <ImageView
                    android:layout_width="@dimen/margin_width10"
                    android:layout_height="@dimen/margin_width10"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/id_tv_city"
                    android:layout_toEndOf="@+id/id_tv_city"
                    android:layout_marginLeft="@dimen/margin_width5"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:src="@drawable/downward_xh"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/id_tv_naviga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="民生宝"
                android:textSize="@dimen/text_18"
                android:textColor="@android:color/transparent"/>
        </RelativeLayout>
    </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <com.msht.minshengbao.ViewUI.widget.DragImageView
        android:id="@+id/id_floating_view"
        android:layout_width="@dimen/margin_width60"
        android:layout_height="@dimen/margin_width60"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="@dimen/margin_width10"
        android:layout_marginRight="@dimen/margin_width10"
        android:layout_marginBottom="@dimen/margin_width10"
        android:visibility="gone"
        app:actualImageResource="@drawable/floating_advertising_xh"
        app:failureImage="@drawable/floating_advertising_xh"
        />
</FrameLayout>
