<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/iv"
        style="@style/image"
        android:layout_width="@dimen/margin_width70"
        android:layout_height="@dimen/margin_width70" />
    <TextView
        android:id="@+id/vhint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv"
        android:layout_marginTop="@dimen/margin_Modules"
        android:gravity="center"
        android:background="@drawable/shop_red_oval"
        android:textSize="@dimen/text_10"
        android:textColor="@color/white"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/price"
        style="@style/shopMsbcolorTitleText"
        android:layout_alignBottom="@id/iv"
        android:layout_toRightOf="@id/iv"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/text_12"
        android:textColor="@color/msb_color" />
    <TextView
        android:id="@+id/time"
        style="@style/shopMsbcolorTitleText"
        android:layout_alignTop="@id/iv"
        android:layout_alignParentRight="true"
        android:textColor="@color/black"
        android:textSize="@dimen/text_12"
        />
    <TextView
        android:id="@+id/name"
        style="@style/shopMsbcolorTitleText"
        android:layout_alignTop="@id/iv"
        android:layout_toRightOf="@id/iv"
        android:layout_toLeftOf="@id/time"
        android:textColor="@color/black"
        android:singleLine="true"
        android:textSize="@dimen/text_12"
        />
</RelativeLayout>