<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recharge_value"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.functionActivity.MyActivity.RechargeValueActivity">
    <include layout="@layout/layout_header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_gray"
            android:paddingLeft="@dimen/margin_width10"
            android:paddingRight="@dimen/margin_width10"
            android:paddingTop="@dimen/margin_width10"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_width5"
                android:background="@color/white">
                <TextView
                    android:id="@+id/id_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_marginLeft="@dimen/margin_width15"
                    android:text="充值金额"
                    android:textColor="@color/black1"
                    android:textSize="@dimen/text_width16"
                    />
                <TextView
                    android:id="@+id/id_rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_text1"
                    android:layout_marginTop="@dimen/margin_width20"
                    android:textSize="@dimen/text_width40"
                    android:layout_marginLeft="@dimen/margin_width15"
                    android:textColor="@color/black"
                    android:text="¥"/>
                <EditText
                    android:id="@+id/id_et_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_text1"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_toRightOf="@+id/id_rmb"
                    android:layout_marginTop="@dimen/margin_width20"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_width40"/>
                <View
                    android:id="@+id/id_line"
                    android:layout_below="@+id/id_rmb"
                    android:layout_marginTop="@dimen/margin_width15"
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginRight="@dimen/margin_width20"
                    android:background="@color/line_black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_below="@+id/id_line"
                    android:layout_marginTop="@dimen/margin_width12"
                    android:layout_marginBottom="@dimen/margin_width20"
                    android:text="(充值后可使用账户余额进行缴燃气费)"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width10"
                android:background="@color/background_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@color/white"
                android:layout_above="@+id/id_img"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="选择支付方式："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_width16"
                    />
            </RelativeLayout>
            <include layout="@layout/layout_line_gray" />
            <com.msht.minshengbao.ViewUI.widget.ListViewForScrollView
                android:id="@+id/id_payway_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.msht.minshengbao.ViewUI.widget.ListViewForScrollView>
            <include layout="@layout/layout_line_gray" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_width10">
                <Button
                    android:id="@+id/id_btn_recharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/margin_width44"
                    android:layout_marginTop="@dimen/margin_width40"
                    android:layout_marginLeft="@dimen/margin_width20"
                    android:layout_marginRight="@dimen/margin_width20"
                    android:layout_marginBottom="@dimen/margin_width35"
                    android:background="@drawable/selector_touch_button_change"
                    android:text="立即充值"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_width18"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
