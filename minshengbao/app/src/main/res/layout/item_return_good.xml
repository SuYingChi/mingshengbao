<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/margin_Modules"
    >

<include
    android:id="@+id/head"
    layout="@layout/item_shop_order_child_list_head"/>
    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/margin_width122"
        android:layout_height="@dimen/margin_width122"
        android:layout_marginBottom="@dimen/margin_Modules"
        android:layout_below="@+id/head"
        android:layout_marginTop="@dimen/margin_Modules"
        android:layout_toRightOf="@id/select" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/close"
        android:layout_toRightOf="@id/iv"
        android:layout_alignTop="@id/iv"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dp5"
        android:textColor="@color/black"
        android:textSize="@dimen/text_width18" />
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/shop_grey"
        android:layout_below="@id/iv"
        />
    <RelativeLayout
        android:id="@+id/rlt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginLeft="@dimen/margin_Modules"
        android:layout_marginTop="@dimen/margin_Modules"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time"
            style="@style/shopMsbcolorTitleText"
            android:textSize="@dimen/text_14"
            android:textColor="@color/black"
            android:text=""
            />

        <TextView
            android:id="@+id/tv_amount"
            style="@style/shopMsbcolorTitleText"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/num"
            style="@style/shopMsbcolorTitleText"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_amount"
            />
        <TextView
            style="@style/shopMsbcolorTitleText"
            android:textSize="@dimen/text_14"
            android:textColor="@color/black"
            android:text="退款金额："
            android:layout_toLeftOf="@id/tv_amount"
            />
        <TextView
            style="@style/shopMsbcolorTitleText"
            android:textSize="@dimen/text_14"
            android:textColor="@color/black"
            android:text="退货数量："
            android:layout_toLeftOf="@id/num"
            android:layout_alignTop="@id/num"
            />
    </RelativeLayout>
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/shop_grey"
        android:layout_below="@id/rlt"
        />
    <TextView
        style="@style/shopMsbcolorTitleText"
        android:text="退货详情"
        android:textColor="@color/black"
        android:background="@drawable/btn_refund"
        android:layout_below="@id/line2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_Modules"
        />
</RelativeLayout>