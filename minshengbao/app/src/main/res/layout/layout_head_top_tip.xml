<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/id_re_head"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="@dimen/margin_width50"
    android:background="@color/yellow_more_light">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_width10"
        android:layout_marginStart="@dimen/margin_width10"
        android:background="@color/transparent">
        <TextView
            android:layout_weight="1"
            android:id="@+id/id_tip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow_gray"
            android:layout_marginEnd="@dimen/margin_width10"
            android:layout_marginRight="@dimen/margin_width10"
            android:textSize="@dimen/text_width14"
            android:text="@string/principle_text"/>
        <TextView
            android:id="@+id/id_look_detail"
            android:layout_marginEnd="@dimen/margin_width10"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/yellow_more_gray"
            android:text="@string/look_detail"/>
    </LinearLayout>
</RelativeLayout>