<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_20">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_white_layout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45"
            android:background="@drawable/shape_top_right_left_corner">
            <TextView
                android:id="@+id/id_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_20"
                android:textColor="@color/white"
                android:text="确认地址"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/item_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:background="#FFFFFF" >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="21dp"
                android:src="@drawable/customer_xh"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginTop="@dimen/margin_6"
                android:layout_marginBottom="@dimen/margin_width10"
                android:layout_alignParentLeft="true"
                android:id="@+id/id_customerView" />
            <TextView
                android:id="@+id/id_customerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/id_customerView"
                android:layout_marginLeft="@dimen/margin_15"
                android:textSize="@dimen/text_18"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/margin_6"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="21dp"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/id_customerView"
                android:src="@drawable/address_xh"
                android:id="@+id/imageView8" />
            <TextView
                android:id="@+id/item_left_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView8"
                android:layout_marginLeft="@dimen/margin_15"
                android:textSize="@dimen/text_18"
                android:layout_below="@+id/id_customerView"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginBottom="@dimen/margin_width10"
                android:textColor="#000000"
                />
        </RelativeLayout>
        <include layout="@layout/layout_line_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_5"
            android:paddingRight="@dimen/margin_5">
            <Button
                android:id="@+id/id_cancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_45"
                android:background="@color/white"
                android:text="取消"
                android:textSize="@dimen/text_18"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line_gray"/>
            <Button
                android:id="@+id/id_btn_ensure"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_45"
                android:background="@color/white"
                android:text="确定"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_18"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>