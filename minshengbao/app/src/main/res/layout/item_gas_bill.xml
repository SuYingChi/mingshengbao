<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/margin_5"
    android:background="#e2e2e2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_layout"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginTop="@dimen/margin_width10"
                android:text="应缴金额"
                android:textSize="@dimen/text_16"
                android:textColor="@color/black1"/>
            <TextView
                android:id="@+id/id_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginTop="@dimen/margin_width10"
                android:textColor="@color/black1"
                android:textSize="@dimen/text_16"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/id_debts"
                android:textColor="@color/black"
                android:textSize="@dimen/text_20"
                android:textStyle="bold"
                android:layout_below="@+id/id_text1"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/id_total_num"
                android:textColor="@color/black1"
                android:textSize="@dimen/text_16"
                android:layout_below="@+id/id_debts"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_width10"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/line_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_45">
            <TextView
                android:id="@+id/id_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:text="燃气费"
                android:textSize="@dimen/text_18"
                />
            <TextView
                android:id="@+id/id_gas_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_width10"
                android:textColor="@color/black1"
                android:textSize="@dimen/text_18"/>
            <TextView
                android:id="@+id/id_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="违约金"
                android:layout_below="@+id/id_text2"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_marginLeft="@dimen/margin_20"
                android:textSize="@dimen/text_18"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0.00"
                android:id="@+id/id_lastfees"
                android:textColor="@color/black1"
                android:textSize="@dimen/text_18"
                android:layout_below="@+id/id_text2"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_below="@+id/id_text3"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_marginBottom="@dimen/margin_width10"
                android:text="扣除燃气预存款："
                android:textSize="@dimen/text_18"/>
            <TextView
                android:id="@+id/id_tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_text3"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_width10"
                android:textSize="@dimen/text_18"
                android:text="1212"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>