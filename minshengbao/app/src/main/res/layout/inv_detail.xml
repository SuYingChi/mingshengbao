<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/margin_Modules"
    >
    <TextView
        android:id="@+id/tv1"
        android:layout_width="@dimen/margin_width122"
        android:layout_height="wrap_content"
        android:text="申请人类型"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:textColor="@color/black"
        android:textSize="@dimen/text_width18" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_Modules"
            android:layout_marginRight="@dimen/margin_Modules"
            android:background="@drawable/selector_evaluation_radiobutton"
            android:button="@null"
            android:checked="true"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/margin_3"
            android:paddingLeft="@dimen/margin_Modules"
            android:paddingRight="@dimen/margin_Modules"
            android:paddingTop="@dimen/margin_3"
            android:text="个人"
            android:textColor="@color/white"
            android:textSize="@dimen/text_width18" />


        <RadioButton
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_evaluation_radiobutton"
            android:button="@null"
            android:checked="false"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/margin_3"
            android:paddingLeft="@dimen/margin_Modules"
            android:paddingRight="@dimen/margin_Modules"
            android:paddingTop="@dimen/margin_3"
            android:text="单位"
            android:textColor="@color/nc_bg"
            android:textSize="@dimen/text_width18" />
    </RadioGroup>
</LinearLayout>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>