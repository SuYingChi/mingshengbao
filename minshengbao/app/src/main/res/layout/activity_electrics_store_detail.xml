<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.functionActivity.Electricvehicle.ElectricsStoreDetailActivity">
    <include layout="@layout/layout_header" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_gray"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">
                <com.msht.minshengbao.ViewUI.widget.BannerLayout
                    android:id="@+id/id_banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_width320"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dp"
                    app:autoPlayDuration="5000"
                    app:indicatorMargin="15dp"
                    app:indicatorPosition="centerBottom"
                    app:isAutoPlay="false"
                    app:indicatorShape="oval"
                    app:indicatorSpace="5dp"
                    app:scrollDuration="900"
                    app:selectedIndicatorColor="@color/color_red"
                    app:selectedIndicatorHeight="8dp"
                    app:selectedIndicatorWidth="8dp"
                    app:unSelectedIndicatorColor="#99ffffff"
                    app:unSelectedIndicatorHeight="8dp"
                    app:unSelectedIndicatorWidth="8dp">
                </com.msht.minshengbao.ViewUI.widget.BannerLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width5"
                android:background="@color/background_gray"/>
            <RelativeLayout
                android:id="@+id/id_re_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width50"
                android:background="@color/white">
                <TextView
                    android:id="@+id/id_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_toLeftOf="@+id/id_phone_img"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:textColor="@color/title_tv"
                    android:textSize="@dimen/text_width18"
                    android:text="店铺"/>
                <ImageView
                    android:id="@+id/id_phone_img"
                    android:layout_width="@dimen/margin_width25"
                    android:layout_height="@dimen/margin_width25"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_width15"
                    android:src="@drawable/store_phone_xh"/>
            </RelativeLayout>
            <include layout="@layout/layout_line_gray"/>
            <RelativeLayout
                android:id="@+id/id_re_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width50"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/id_address_img"
                    android:layout_width="@dimen/margin_width20"
                    android:layout_height="@dimen/margin_width20"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_centerVertical="true"
                    android:src="@drawable/store_address_xh"/>
                <TextView
                    android:id="@+id/id_tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/id_address_img"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_toLeftOf="@+id/id_forward_img"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:text="地址"
                    android:textSize="@dimen/text_width14"
                    android:textColor="@color/title_tv"/>
                <ImageView
                    android:id="@+id/id_forward_img"
                    android:layout_width="@dimen/margin_width20"
                    android:layout_height="@dimen/margin_width20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:src="@drawable/forward_2x"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
