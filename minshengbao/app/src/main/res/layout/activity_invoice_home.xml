<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical"
    tools:context=".functionActivity.Invoice.InvoiceHomeActivity">
    <include layout="@layout/layout_header"/>
    <RelativeLayout
        android:id="@+id/gas_invoice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width50"
        android:background="@drawable/selector_touch_background"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:gravity="start"
            android:layout_toLeftOf="@+id/id_forward_img"
            android:layout_toStartOf="@+id/id_forward_img"
            android:layout_centerVertical="true"
           android:text="@string/gas_invoice_apply"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/color_383838"/>
        <ImageView
            android:id="@+id/id_forward_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_width10"
            android:layout_marginRight="@dimen/margin_width10"
            android:contentDescription="@string/picture_text"
            android:src="@drawable/forward_2x"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_width10"
        android:background="@color/background_gray" />
    <include layout="@layout/layout_line_gray"/>
    <RelativeLayout
        android:id="@+id/repair_invoice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width50"
        android:background="@drawable/selector_touch_background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:gravity="start"
            android:layout_toLeftOf="@+id/id_forward_img1"
            android:layout_toStartOf="@+id/id_forward_img1"
            android:layout_centerVertical="true"
            android:text="@string/repair_invoice_apply"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/color_383838"/>
        <ImageView
            android:id="@+id/id_forward_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_width10"
            android:layout_marginRight="@dimen/margin_width10"
            android:contentDescription="@string/picture_text"
            android:src="@drawable/forward_2x"/>
    </RelativeLayout>
</LinearLayout>