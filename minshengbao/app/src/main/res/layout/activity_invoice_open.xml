<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_invoice_open"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.FunctionActivity.Invoice.InvoiceOpen">
    <include layout="@layout/layout_header"/>
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.msht.minshengbao.ViewUI.PullRefresh.XListView
            android:id="@+id/id_view_invoice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null">
        </com.msht.minshengbao.ViewUI.PullRefresh.XListView>
        <include layout="@layout/layout_nodata_view"
            android:id="@+id/id_nodata_view"
            android:visibility="gone"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/line_gray"/>
    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/margin_70">
        <CheckBox
            android:id="@+id/id_box_allselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="全选"/>
        <TextView
            android:id="@+id/id_tv_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_box_allselect"
            android:layout_toLeftOf="@+id/id_btn_next"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:text="已选0个订单共00.00元（满400包邮）"/>
        <Button
            android:id="@+id/id_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_35"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_orange_corner_button"
            android:text="下一步"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_16"/>
    </RelativeLayout>
</LinearLayout>
