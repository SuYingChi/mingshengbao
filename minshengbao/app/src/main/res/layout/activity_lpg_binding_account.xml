<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".FunctionActivity.LPGActivity.BindingAccountActivity">
    <include layout="@layout/layout_header"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_width15"
        android:textColor="@color/color_9e9e9e"
        android:text="@string/hit_input_text"
        android:textSize="@dimen/text_width14"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_width15"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_width45">
            <TextView
                android:id="@+id/id_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginBottom="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:textColor="@color/color_383838"
                android:textSize="@dimen/text_width16"
                android:text="@string/phone_number"/>
            <EditText
                android:id="@+id/id_et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:inputType="phone"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_toRightOf="@+id/id_phone_text"
                android:layout_toEndOf="@+id/id_phone_text"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginEnd="@dimen/margin_width10"
                android:background="@null"
                android:hint="@string/please_input_phone"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_width1"
            android:background="@color/light_gray"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:layout_marginRight="@dimen/margin_width10"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_width45">
            <TextView
                android:id="@+id/id_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/margin_width10"
                android:layout_marginBottom="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:textColor="@color/color_383838"
                android:textSize="@dimen/text_width16"
                android:text="@string/verification_code"/>
            <EditText
                android:id="@+id/id_et_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:inputType="phone"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_toRightOf="@+id/id_code_text"
                android:layout_toEndOf="@+id/id_code_text"
                android:layout_toLeftOf="@+id/id_btn_code"
                android:layout_toStartOf="@+id/id_btn_code"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginEnd="@dimen/margin_width10"
                android:background="@null"
                android:hint="@string/please_input_code"/>

            <Button
                android:id="@+id/id_btn_code"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_width35"
                android:layout_marginEnd="@dimen/margin_width5"
                android:layout_marginRight="@dimen/margin_width5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shape_white_border_rectangle"
                android:layout_centerVertical="true"
                android:text="@string/get_verification_code"
                android:textSize="@dimen/text_width12"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/id_btn_ensure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width40"
        android:layout_marginRight="@dimen/margin_width20"
        android:layout_marginEnd="@dimen/margin_width20"
        android:layout_marginLeft="@dimen/margin_width20"
        android:layout_marginStart="@dimen/margin_width20"
        android:background="@drawable/selector_touch_button_change"
        android:layout_marginTop="@dimen/margin_width45"
        android:textSize="@dimen/text_width16"
        android:textColor="@color/white"
        android:text="@string/ensure_binding"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center_horizontal">
        <TextView
            android:id="@+id/id_btn_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/id_hit_text"
            android:layout_marginBottom="@dimen/margin_width10"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/text_width16"
            android:text="@string/new_customer_button"/>
        <TextView
            android:id="@+id/id_hit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_width14"
            android:layout_marginBottom="@dimen/margin_width25"
            android:layout_alignParentBottom="true"
            android:text="@string/connection_service"
            android:textColor="@color/title_tv"/>
    </RelativeLayout>
</LinearLayout>