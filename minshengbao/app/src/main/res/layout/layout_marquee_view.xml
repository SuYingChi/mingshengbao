<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_width10"
        android:background="@color/background_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/margin_width50"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/margin_width70"
            android:layout_height="@dimen/margin_width18"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_width10"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginLeft="@dimen/margin_width15"
            android:layout_marginStart="@dimen/margin_width15"
            android:contentDescription="@string/picture_text"
            android:src="@drawable/msb_headline_xh"/>
        <com.msht.minshengbao.ViewUI.widget.MarqueeView
            android:id="@+id/id_marqueeView"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_width15"
            android:layout_marginLeft="@dimen/margin_width15"
            android:layout_marginRight="@dimen/margin_width20"
            android:layout_marginEnd="@dimen/margin_width20"
            app:mvAnimDuration="1000"
            app:mvDirection="bottom_to_top"
            app:mvInterval="3000"
            app:mvTextColor="@color/color_383838"
            app:mvTextSize="@dimen/text_width12"
            app:mvSingleLine="true">
        </com.msht.minshengbao.ViewUI.widget.MarqueeView>
        <View
            android:id="@+id/id_view3"
            android:layout_width="@dimen/margin_width2"
            android:layout_height="@dimen/margin_width18"
            android:background="@color/color_383838"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/id_headLine_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_width15"
            android:layout_marginEnd="@dimen/margin_width15"
            android:layout_marginStart="@dimen/margin_width8"
            android:layout_marginLeft="@dimen/margin_width8"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_width12"
            android:textColor="@color/color_383838"
            android:text="@string/msb_more"/>
    </LinearLayout>
</LinearLayout>