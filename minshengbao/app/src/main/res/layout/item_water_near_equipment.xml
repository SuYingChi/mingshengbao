<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/id_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white">
        <TextView
            android:id="@+id/id_communityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:layout_toStartOf="@+id/id_distance_text"
            android:layout_toLeftOf="@+id/id_distance_text"
            android:textColor="@color/black1"
            android:textSize="@dimen/text_width16"/>
        <TextView
            android:id="@+id/id_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_communityName"
            android:layout_margin="@dimen/margin_width10"
            android:textColor="@color/color_383838"
            android:textSize="@dimen/text_width14"/>
        <TextView
            android:id="@+id/id_distance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/id_tv_distance"
            android:layout_toStartOf="@+id/id_tv_distance"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width5"
            android:layout_marginRight="@dimen/margin_width5"
            android:textSize="@dimen/text_width12"
            android:textColor="@color/color_383838"
            android:text="@string/distance_with_you"/>
        <TextView
            android:id="@+id/id_tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:textSize="@dimen/text_width12"
            android:textColor="@color/blue_end"/>
    </RelativeLayout>
</LinearLayout>