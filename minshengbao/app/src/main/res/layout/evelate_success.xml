<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:contentInsetStart="0dp">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/msb_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="?actionBarSize"
            android:layout_height="match_parent"
            android:padding="@dimen/dp14"
            android:src="@drawable/back2x" />

        <TextView
            android:id="@+id/title"
            style="@style/shopMsbcolorTitleText"
            android:layout_centerInParent="true"
            android:text="评价成功"
            android:textColor="@color/white" />
    </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <ImageView
        android:id="@+id/iv"
        style="@style/image"
        android:src="@drawable/shop_evelate_success"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_width30"
        />
    <TextView
        android:id="@+id/tv"
        style="@style/shopMsbcolorTitleText"
        android:text="评价成功"
        android:textColor="@color/black"
        />
    <TextView
        style="@style/shopMsbcolorTitleText"
        android:text="再看看还有什么喜欢的"
        android:textColor="@color/shop_grey"
        android:layout_marginTop="@dimen/margin_Modules"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
    <TextView
        android:id="@+id/order"
        style="@style/shopMsbcolorTitleText"
        android:text="查看订单"
        android:textColor="@color/msb_color"
        android:background="@drawable/btn_refund"
        android:layout_marginRight="@dimen/margin_width30"
        />
    <TextView
        android:id="@+id/return_home"
        style="@style/shopMsbcolorTitleText"
        android:text="返回首页"
        android:textColor="@color/msb_color"
        android:background="@drawable/btn_refund"
        android:layout_marginLeft="@dimen/margin_width30"
        />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/margin_Modules"
            android:paddingBottom="@dimen/margin_Modules"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_Modules"
            >
            <View
                style="@style/shopTitleLine"/>
            <View
                style="@style/shopTitleLinePoint"
                />
            <TextView
                style="@style/shopMsbcolorTitleText"
                android:text="猜你喜欢"
                />
            <View
                style="@style/shopTitleLinePoint"
                />
            <View
                style="@style/shopTitleLine"/>
        </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcl"
        style="@style/rcl"
        />
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>