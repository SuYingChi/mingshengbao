<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_width10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_width5"
            android:background="@drawable/shape_top_right_left_corner">
            <TextView
                android:id="@+id/id_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginTop="@dimen/margin_width5"
                android:textSize="@dimen/text_width14"
                android:textColor="@color/white"
                android:text="@string/default_text"/>
            <TextView
                android:id="@+id/id_water_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_order_time"
                android:layout_marginTop="@dimen/margin_width15"
                android:layout_marginLeft="@dimen/margin_width10"
                android:textSize="@dimen/text_width18"
                android:textColor="@color/white"
                android:text="@string/default_text"/>
            <TextView
                android:id="@+id/id_bucket_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_order_time"
                android:layout_marginTop="@dimen/margin_width15"
                android:layout_marginBottom="@dimen/margin_width5"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_width18"
                android:textColor="@color/white"
                android:text="@string/default_text"/>
            <TextView
                android:id="@+id/id_bucket_flat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_water_volume"
                android:layout_marginLeft="@dimen/margin_width25"
                android:layout_marginBottom="@dimen/margin_width15"
                android:textSize="@dimen/text_width12"
                android:textColor="@color/white"
                android:text="@string/default_text"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_width5"
            android:background="@color/white">
            <TextView
                android:id="@+id/id_order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width15"
                android:layout_marginLeft="@dimen/margin_width10"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/color_383838"
                android:text="订单号："/>
            <TextView
                android:id="@+id/id_tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_order_no"
                android:layout_marginTop="@dimen/margin_width15"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginBottom="@dimen/margin_width10"
                android:textSize="@dimen/margin_width16"
                android:textColor="@color/color_383838"
                android:text="地址："/>
            <ImageView
                android:id="@+id/id_phone_img"
                android:layout_width="@dimen/margin_width25"
                android:layout_height="@dimen/margin_width25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_width10"
                android:src="@drawable/shape_phone_xh"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginLeft="@dimen/margin_width10"
            android:background="@color/background_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_width50"
            android:background="@drawable/prompt_dialog_btn_single_normal">
            <TextView
                android:id="@+id/id_total_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/color_383838"
                android:layout_marginLeft="@dimen/margin_width15"
                android:textSize="@dimen/text_width18"
                android:text="@string/total_text"/>
            <TextView
                android:id="@+id/id_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/text_width20"
                android:layout_toRightOf="@+id/id_total_text"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:text="@string/default_value0"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/id_total_amount"
                android:layout_marginLeft="@dimen/margin_width5"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/color_383838"
                android:text="元"/>
            <TextView
                android:id="@+id/id_tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_width10"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/colorOrange"
                android:text="@string/default_text"/>
            <TextView
                android:id="@+id/id_cancel_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:layout_toLeftOf="@+id/id_tv_status"
                android:layout_marginRight="@dimen/margin_width10"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/color_9e9e9e"
                android:text="@string/cancel_order"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>