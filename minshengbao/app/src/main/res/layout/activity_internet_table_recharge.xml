                    android:textSize="@dimen/text_width16"
                    android:textColor="@color/color_383838"
                    android:text="@string/gas_fee_text"/>
                <TextView
                    android:id="@+id/id_gas_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_width10"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/text_width16"
                    android:text="@string/default_text"/>
            </RelativeLayout>
            <Button
                android:id="@+id/id_btn_recharge"
                android:layout_marginLeft="@dimen/margin_width45"
                android:layout_marginRight="@dimen/margin_width45"
                android:layout_marginTop="@dimen/margin_width45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recharge"
                android:textSize="@dimen/text_width18"
                android:background="@drawable/selector_touch_button_change"
                android:layout_marginBottom="@dimen/margin_width20"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width45"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@color/background_gray">
        <TextView
            android:id="@+id/id_recharge_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorOrange"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_width14"
            android:text="@string/recharge_record"/>
        <View
            android:layout_width="@dimen/margin_width1"
            android:layout_height="@dimen/margin_width20"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_width8"
            android:layout_marginLeft="@dimen/margin_width8"
            android:layout_marginEnd="@dimen/margin_width8"
            android:layout_marginRight="@dimen/margin_width8"
            android:background="@color/colorOrange"/>
        <TextView
            android:id="@+id/id_price_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorOrange"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_width14"
            android:text="@string/gas_price_explain"/>
    </LinearLayout>
