<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray"
    tools:context=".functionActivity.WaterApp.WaterFriendShareActivity">

    <include layout="@layout/layout_white_header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_gray"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_width40"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginEnd="@dimen/margin_width10"
                android:padding="@dimen/margin_width5"
                android:background="@color/background_gray">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/picture_text"
                    android:scaleType="fitCenter"
                    android:src="@drawable/purified_water"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_width40"
                android:orientation="horizontal"
                android:background="@color/background_gray">
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/margin_width1"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_marginEnd="@dimen/margin_width10"
                    android:background="@color/black_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_9e9e9e"
                    android:textSize="@dimen/text_width16"
                    android:text="@string/select_share_way"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/margin_width1"
                    android:layout_marginStart="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:background="@color/black_gray"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_gray"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_marginRight="@dimen/margin_width10"
                android:baselineAligned="true"
                android:layout_marginEnd="@dimen/margin_width10"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/background_gray">
                    <ImageView
                        android:id="@+id/id_weiXin_share"
                        android:layout_width="@dimen/margin_width56"
                        android:layout_height="@dimen/margin_width56"
                        android:contentDescription="@string/picture_text"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/weixin_share_xh"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/id_weiXin_share"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:layout_marginBottom="@dimen/margin_width10"
                        android:textColor="@color/color_383838"
                        android:textSize="@dimen/text_width16"
                        android:text="@string/wei_xin"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/background_gray">
                    <ImageView
                        android:id="@+id/id_friend_circle"
                        android:layout_width="@dimen/margin_width56"
                        android:layout_height="@dimen/margin_width56"
                        android:contentDescription="@string/picture_text"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/friend_circle_xh"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/id_friend_circle"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:layout_marginBottom="@dimen/margin_width10"
                        android:textColor="@color/color_383838"
                        android:textSize="@dimen/text_width16"
                        android:text="@string/wei_xin_circle"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/background_gray">
                    <ImageView
                        android:id="@+id/id_code_share"
                        android:layout_width="@dimen/margin_width56"
                        android:layout_height="@dimen/margin_width56"
                        android:contentDescription="@string/picture_text"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/qrcode_share_xh"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/id_code_share"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:layout_marginBottom="@dimen/margin_width10"
                        android:textColor="@color/color_383838"
                        android:textSize="@dimen/text_width16"
                        android:text="@string/qr_code_text"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/background_gray">
                    <ImageView
                        android:id="@+id/id_copy_link"
                        android:layout_width="@dimen/margin_width56"
                        android:layout_height="@dimen/margin_width56"
                        android:contentDescription="@string/picture_text"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/copy_link_xh"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/id_copy_link"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:layout_marginBottom="@dimen/margin_width10"
                        android:textColor="@color/color_383838"
                        android:textSize="@dimen/text_width16"
                        android:text="@string/copy_link"/>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>