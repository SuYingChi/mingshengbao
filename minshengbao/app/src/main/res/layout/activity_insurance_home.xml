<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:radioApp="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.FunctionActivity.insurance.InsuranceHome">
    <com.msht.minshengbao.ViewUI.widget.MyScrollview
        android:id="@+id/id_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width200"
                android:scaleType="centerCrop"
                android:src="@drawable/insurance_banner_xh">
            </ImageView>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width12"/>
            <com.msht.minshengbao.ViewUI.widget.CustomRadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_height="@dimen/margin_width70"
                android:orientation="horizontal"
                android:weightSum="4">
                <com.msht.minshengbao.ViewUI.widget.MyRadioButton
                    android:id="@+id/radio_button_one"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_back_one"
                    radioApp:checked="true"
                    radioApp:TextGravity="top"
                    radioApp:text1="300"
                    radioApp:textColor1="@drawable/myradio_button_textcolor"
                    radioApp:textSize1="@dimen/text_width20"
                    radioApp:text2="保险套餐一"
                    radioApp:text3="元"
                    radioApp:textColor2="@drawable/radio_public_textcolor"
                    radioApp:textSize2="@dimen/text_width12"/>
                <View
                    android:layout_width="@dimen/margin_width2"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
                <com.msht.minshengbao.ViewUI.widget.MyRadioButton
                    android:id="@+id/radio_button_two"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorOrange_one"
                    radioApp:TextGravity="top"
                    radioApp:text1="200"
                    radioApp:text3="元"
                    radioApp:textColor1="@drawable/myradio_button_textcolor"
                    radioApp:textSize1="@dimen/text_width20"
                    radioApp:text2="保险套餐二"
                    radioApp:textColor2="@drawable/radio_public_textcolor"
                    radioApp:textSize2="@dimen/text_width12"/>
                <View
                    android:layout_width="@dimen/margin_width2"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
                <com.msht.minshengbao.ViewUI.widget.MyRadioButton
                    android:id="@+id/radio_button_three"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    radioApp:TextGravity="top"
                    android:background="@color/colorOrange_two"
                    radioApp:text1="100"
                    radioApp:textColor1="@drawable/myradio_button_textcolor"
                    radioApp:textSize1="@dimen/text_width20"
                    radioApp:text2="保险套餐三"
                    radioApp:text3="元"
                    radioApp:textColor2="@drawable/radio_public_textcolor"
                    radioApp:textSize2="@dimen/text_width12"/>
                <View
                    android:layout_width="@dimen/margin_width2"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
                <com.msht.minshengbao.ViewUI.widget.MyRadioButton
                    android:id="@+id/radio_button_four"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorOrange_three"
                    radioApp:text1="30"
                    radioApp:textColor1="@drawable/myradio_button_textcolor"
                    radioApp:textSize1="@dimen/text_width20"
                    radioApp:text2="保险套餐四"
                    radioApp:text3="元"
                    radioApp:textColor2="@drawable/radio_public_textcolor"
                    radioApp:textSize2="@dimen/text_width12"/>
            </com.msht.minshengbao.ViewUI.widget.CustomRadioGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width25"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:background="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:background="@color/white"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/id_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_width10"
                        android:text="意外伤害保险金额"
                        android:textColor="@color/title_tv"
                        android:textSize="@dimen/text_width14" />
                    <TextView
                        android:id="@+id/id_amount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/margin_width10"
                        android:text="250000元"
                        android:textColor="@color/title_tv"
                        android:textSize="@dimen/text_width14"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/id_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_width10"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:text="急救医疗保险金额"
                        android:textColor="@color/title_tv"
                        android:textSize="@dimen/text_width14" />
                    <TextView
                        android:id="@+id/id_amount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/margin_width10"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:text="50000元"
                        android:textColor="@color/title_tv"
                        android:textSize="@dimen/text_width14"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/id_text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:layout_marginLeft="@dimen/margin_width10"
                        android:text="家庭财产损失"
                        android:textColor="@color/title_tv"
                        android:textSize="@dimen/text_width14" />
                    <TextView
                        android:id="@+id/id_amount3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/margin_width10"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:text="400000元"
                        android:textColor="@color/title_tv"
                        android:textSize="@dimen/text_width14"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/id_text8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:layout_marginLeft="@dimen/margin_width10"
                        android:text="第三者责任"
                        android:textColor="@color/title_tv"
                        android:textSize="@dimen/text_width14" />
                    <TextView
                        android:id="@+id/id_amount4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/margin_width10"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:text="300000元"
                        android:textColor="@color/title_tv"
                        android:textSize="@dimen/text_width14"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/id_text10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_width10"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:text="额外住房补贴"
                        android:textColor="@color/title_tv"
                        android:textSize="@dimen/text_width14" />
                    <TextView
                        android:id="@+id/id_amount5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/margin_width10"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:text="6000元"
                        android:textColor="@color/title_tv"
                        android:textSize="@dimen/text_width14"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/id_familyHelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/id_text12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:layout_marginLeft="@dimen/margin_width10"
                        android:text="家庭扶助基金责任"
                        android:textColor="@color/title_tv"
                        android:textSize="@dimen/text_width14" />
                    <TextView
                        android:id="@+id/id_amount6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/margin_width10"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:text="150000元"
                        android:textColor="@color/title_tv"
                        android:textSize="@dimen/text_width14"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width10"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:background="@color/white"/>
            <RelativeLayout
                android:id="@+id/id_insurance_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width40"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_centerVertical="true"
                    android:text="保险套餐详情"
                    android:textColor="@color/colorOrange"
                    android:textSize="@dimen/text_width16" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginRight="@dimen/margin_width10"
                android:background="@color/white"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/id_security"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:textColor="@color/black"
                        android:text="94.2万元"
                        android:textSize="@dimen/text_width14"/>
                    <TextView
                        android:id="@+id/id_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/id_security"
                        android:layout_marginTop="@dimen/margin_width5"
                        android:layout_marginBottom="@dimen/margin_width10"
                        android:text="保障金额"
                        android:textSize="@dimen/text_width12"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/id_deadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_width14"
                        android:text="5年"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/id_deadline"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_width5"
                        android:layout_marginBottom="@dimen/margin_width10"
                        android:text="保险期限"
                        android:textSize="@dimen/text_width12"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/id_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_width10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_width14"
                        android:text="次日起"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/id_start_date"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_width5"
                        android:layout_marginBottom="@dimen/margin_width10"
                        android:text="起效日期"
                        android:textSize="@dimen/text_width12"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginRight="@dimen/margin_width10"
                android:background="@drawable/shape_bottom_radius"
                android:minHeight="@dimen/margin_width60">
                <Button
                    android:id="@+id/id_mButtonpay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_width10"
                    android:layout_marginRight="@dimen/margin_width10"
                    android:layout_marginLeft="@dimen/margin_width10"
                    android:layout_marginBottom="@dimen/margin_width15"
                    android:minHeight="@dimen/margin_width45"
                    android:background="@drawable/selector_orange_corner_button"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_width18"
                    android:text="立即投保"/>
            </RelativeLayout>
        </LinearLayout>
    </com.msht.minshengbao.ViewUI.widget.MyScrollview>
    <include layout="@layout/layout_insurance_header" />
</FrameLayout>
