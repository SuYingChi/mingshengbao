<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff">
    <View
        android:id="@+id/id_status_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_20" />
    <RelativeLayout
        android:id="@+id/id_re_second"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/id_goback"
            android:layout_width="@dimen/margin_width30"
            android:layout_height="@dimen/margin_width30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/circle_back_h"/>
        <TextView
            android:id="@+id/tv_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title在代码中更改"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_18"
            android:textColor="#ffffffff"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/id_right_img"
            android:layout_width="@dimen/margin_width30"
            android:layout_height="@dimen/margin_width30"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_width12"
            android:src="@drawable/circle_search_h" />
    </RelativeLayout>

</LinearLayout>