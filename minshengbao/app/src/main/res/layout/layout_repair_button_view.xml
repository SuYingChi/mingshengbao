<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end">
    <Button
        android:id="@+id/id_evaluate_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width35"
        android:layout_marginTop="@dimen/margin_width15"
        android:layout_marginBottom="@dimen/margin_width15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/margin_width10"
        android:layout_marginEnd="@dimen/margin_width10"
        android:background="@drawable/selector_orange_corner_button"
        android:textSize="@dimen/text_width16"
        android:textColor="@color/white"
        android:text="@string/evaluate_text"
        android:visibility="gone"/>
    <Button
        android:id="@+id/id_btn_refix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width35"
        android:layout_marginTop="@dimen/margin_width15"
        android:layout_marginBottom="@dimen/margin_width15"
        android:layout_toLeftOf="@+id/id_evaluate_order"
        android:layout_toStartOf="@+id/id_evaluate_order"
        android:layout_marginRight="@dimen/margin_width15"
        android:layout_marginEnd="@dimen/margin_width15"
        android:background="@drawable/shape_gray_border_white"
        android:textSize="@dimen/text_width16"
        android:textColor="@color/title_tv"
        android:text="@string/reRepair_text"/>
    <Button
        android:id="@+id/id_btn_refund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width35"
        android:layout_marginTop="@dimen/margin_width15"
        android:layout_marginBottom="@dimen/margin_width15"
        android:layout_toLeftOf="@+id/id_btn_refix"
        android:layout_toStartOf="@+id/id_btn_refix"
        android:layout_marginRight="@dimen/margin_width15"
        android:layout_marginEnd="@dimen/margin_width15"
        android:background="@drawable/shape_gray_border_white"
        android:textSize="@dimen/text_width16"
        android:textColor="@color/title_tv"
        android:text="@string/refund_text"/>
</RelativeLayout>