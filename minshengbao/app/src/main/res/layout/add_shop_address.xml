<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--不加android:background="@color/msb_color",顶部会出现空白-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/msb_color"
        app:contentInsetStart="0dp"
        >
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/msb_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="?actionBarSize"
            android:layout_height="match_parent"
            android:padding="@dimen/dp14"
            android:src="@drawable/back2x" />

        <TextView
            android:id="@+id/title"
            style="@style/shopMsbcolorTitleText"
            android:layout_centerInParent="true"
            android:text="新增收货地址"
            android:textColor="@color/white" />
    </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/toolbar2"
        >
        <TextView
            style="@style/shopMsbcolorTitleText"
            android:textColor="@color/black"
            android:text="收货人"
            />
        <EditText
            android:id="@+id/et_name"
            style="@style/editText"
            android:layout_marginRight="@dimen/margin_Modules"
            android:gravity="right|center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_mob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_name"
        >
        <TextView
            style="@style/shopMsbcolorTitleText"
            android:textColor="@color/black"
            android:text="联系电话"
            />
        <EditText
            android:id="@+id/et_mob"
            style="@style/editText"
            android:inputType="number"
            android:maxLength="11"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_mob"
        >
        <TextView
            style="@style/shopMsbcolorTitleText"
            android:textColor="@color/black"
            android:text="城市"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_city"
            style="@style/shopBlackTitleText" />
        <ImageView
            style="@style/image"
            android:src="@drawable/right_angle"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_city"
        >
        <TextView
            style="@style/shopMsbcolorTitleText"
            android:textColor="@color/black"
            android:text="详细地址"
            />
        <EditText
            android:id="@+id/et_address"
            style="@style/editText"
            android:gravity="right"/>

    </LinearLayout>
    <TextView
        android:id="@+id/save_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_15"
        android:textColor="@color/white"
        android:background="@color/msb_color"
        android:text="保存"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_width18"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>