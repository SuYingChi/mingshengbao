<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background_gray"
    android:paddingTop="@dimen/margin_width1"
    android:paddingBottom="@dimen/margin_width1"
    android:paddingRight="@dimen/margin_width5"
    android:paddingLeft="@dimen/margin_width5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">
        <ImageView
            android:id="@+id/id_bottle_image"
            android:layout_width="@dimen/margin_width70"
            android:layout_height="@dimen/margin_width70"
            android:layout_margin="@dimen/margin_width10"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width10"
            android:contentDescription="@string/picture_text"
            android:src="@drawable/fifteen_weight_bottle_xh"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id_right_layout"
            android:layout_toStartOf="@+id/id_right_layout"
            android:layout_marginRight="@dimen/margin_width5"
            android:layout_marginEnd="@dimen/margin_width5"
            android:layout_toRightOf="@+id/id_bottle_image"
            android:layout_toEndOf="@+id/id_bottle_image">
            <TextView
                android:id="@+id/id_bottleNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/color_383838"
                android:text="@string/steel_bottle_type1"/>
            <TextView
                android:id="@+id/id_bottle_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_bottleNo"
                android:layout_marginTop="@dimen/margin_width6"
                android:textColor="@color/color_9e9e9e"
                android:textSize="@dimen/text_width14"
                android:text="@string/count_text"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/id_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/white"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_9e9e9e"
                android:textSize="@dimen/text_width14"
                android:text="@string/have_used"/>
            <TextView
                android:id="@+id/id_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_width5"
                android:layout_marginLeft="@dimen/margin_width5"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/text_width16"
                android:text="@string/default_value0"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_width5"
                android:layout_marginLeft="@dimen/margin_width5"
                android:textColor="@color/color_9e9e9e"
                android:textSize="@dimen/text_width14"
                android:text="@string/day"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_marginLeft="@dimen/margin_width10"
                android:contentDescription="@string/picture_text"
                android:src="@drawable/forward_2x"/>
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>