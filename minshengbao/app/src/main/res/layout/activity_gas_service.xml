<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_gas_service"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.functionActivity.GasService.GasServiceActivity">
    <include layout="@layout/layout_header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_12"
                android:background="@color/background"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_20"
                android:minHeight="@dimen/margin_20">
                <com.msht.minshengbao.ViewUI.widget.MyNoScrollGridView
                    android:id="@+id/id_function_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:numColumns="4"
                    android:horizontalSpacing="@dimen/margin_8"
                    android:verticalSpacing="@dimen/margin_20">
                </com.msht.minshengbao.ViewUI.widget.MyNoScrollGridView>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width20"
                android:background="@color/background"/>
            <com.msht.minshengbao.ViewUI.banner.RecyclerViewBannerNormal
                android:id="@+id/id_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width275"
                android:layout_marginBottom="@dimen/text_width20"
                app:showIndicator="false"
                app:orientation="horizontal">
            </com.msht.minshengbao.ViewUI.banner.RecyclerViewBannerNormal>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
