<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background_gray"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_change_blue_bg">
        <TextView
            android:id="@+id/id_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_width20"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:textColor="@color/white"
            android:text="@string/water_account_text"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_text1"
            android:layout_marginTop="@dimen/margin_width30"
            android:layout_marginBottom="@dimen/margin_width35">
            <TextView
                android:id="@+id/id_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:textColor="@color/white"
                android:textSize="@dimen/text_width40"
                android:text="@string/default_value0"/>
            <TextView
                android:id="@+id/id_give_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/id_total_amount"
                android:layout_toEndOf="@+id/id_total_amount"
                android:layout_toStartOf="@+id/id_tv_detail"
                android:layout_toLeftOf="@+id/id_tv_detail"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_alignBaseline="@+id/id_total_amount"
                android:text="@string/default_value0"
                android:textSize="@dimen/text_width14"
                android:textColor="@color/white"/>
            <ImageView
                android:id="@+id/id_forward_img"
                android:layout_width="@dimen/margin_width15"
                android:layout_height="@dimen/margin_width15"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/picture_text"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_marginEnd="@dimen/margin_width10"
                android:src="@drawable/back2x"
                android:rotation="180"/>
            <TextView
                android:id="@+id/id_tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/id_forward_img"
                android:layout_toStartOf="@+id/id_forward_img"
                android:textColor="@color/white"
                android:text="@string/water_balance_detail" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>