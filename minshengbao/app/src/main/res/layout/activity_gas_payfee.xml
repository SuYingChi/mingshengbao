<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_gas_payfee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.functionActivity.gasService.GasPayFeeActivity">
    <include layout="@layout/layout_header"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_width16"
            android:gravity="start"
            android:layout_marginTop="@dimen/margin_width10"
            android:layout_marginBottom="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_toLeftOf="@+id/id_newAdd_btn"
            android:layout_toStartOf="@+id/id_newAdd_btn"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_marginEnd="@dimen/margin_width10"
            android:textColor="@color/color_383838"
            android:text="@string/pay_fee_customerNo"/>
        <TextView
            android:id="@+id/id_newAdd_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_width10"
            android:layout_marginRight="@dimen/margin_width10"
            android:layout_centerVertical="true"
            android:text="@string/new_add_customerNo"
            android:textSize="@dimen/text_width16"
            android:textColor="@color/color_383838"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_width10"
        android:background="@color/white">
        <ListView
            android:id="@+id/id_address_dataList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
        <TextView
            android:id="@+id/id_tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_width16"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_width40"
            android:text="@string/current_noHave_customerNo"
            android:textColor="@color/red"
            android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>
