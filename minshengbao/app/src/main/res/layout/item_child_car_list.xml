<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/margin_Modules">

    <CheckBox
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_width80"
        android:layout_alignParentLeft="true"
        android:button="@null"
        android:checked="false"
        android:drawableLeft="@drawable/item_carlist_selected"
        android:paddingLeft="@dimen/margin_Modules"
        android:paddingRight="@dimen/margin_Modules" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/margin_width80"
        android:layout_height="@dimen/margin_width80"
        android:layout_marginBottom="@dimen/margin_Modules"
        android:layout_toRightOf="@id/select"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/close"
        android:layout_marginLeft="@dimen/margin_width15"
        android:layout_toRightOf="@id/iv"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="@dimen/text_width14" />

    <TextView
        android:id="@+id/jingle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginLeft="@dimen/margin_width15"
        android:layout_toRightOf="@id/iv"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/nc_text"
        android:textSize="@dimen/text_12"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_remain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/name"
        android:layout_below="@id/jingle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/remain_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库存量:"
            android:textColor="@color/msb_color"
            android:textSize="@dimen/text_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_width2"
            >

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/msb_color"
                android:textSize="@dimen/text_width18" />

            <TextView
                android:id="@+id/ispickupself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_Modules"
                android:background="@drawable/btn_red"
                android:text="限自提"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/num_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ll_remain" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1" />
</RelativeLayout>