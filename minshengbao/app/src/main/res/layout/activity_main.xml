<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:fitsSystemWindows="false"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.msht.minshengbao.functionActivity.MainActivity">
    <FrameLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_weight="1.0"
        android:layout_height="0dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">
        </LinearLayout>
        <!-- 顶部 -->
        <include layout="@layout/layout_transparent_head"
            android:id="@+id/id_head_view" />
        <RelativeLayout
            android:id="@+id/id_network_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_width70"
            android:layout_marginLeft="@dimen/margin_width15"
            android:layout_marginRight="@dimen/margin_width15"
            android:background="#A0000000"
            android:layout_height="@dimen/margin_width45"
            android:visibility="gone">
            <ImageView
                android:id="@+id/id_img_error"
                android:layout_width="@dimen/margin_width25"
                android:layout_height="@dimen/margin_width25"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:contentDescription="@string/picture_text"
                android:src="@drawable/network_sign_xh"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/id_img_error"
                android:layout_toEndOf="@+id/id_img_error"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_width14"
                android:textColor="@color/white"
                android:text="@string/network_error"/>
        </RelativeLayout>

    </FrameLayout>
    <!-- 底部tab -->
    <!-- 内容部分， fragment切换 -->
    <include layout="@layout/layout_line_gray"/>
    <!-- 底部tab -->
    <RelativeLayout
        android:id="@+id/rla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
    <RadioGroup
        android:id="@+id/radiogroup_main"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:baselineAligned="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width56">
        <RadioButton
            android:id="@+id/radio_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:textColor="@drawable/radio_home_textcolor"
            android:textSize="@dimen/text_width12"
            android:checked="true"
            android:drawableTop="@drawable/radio_home_button"
            android:text="首页"
            android:layout_height="@dimen/margin_width50"/>
        <RadioButton
            android:id="@+id/radio_mall"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:textSize="@dimen/text_width12"
            android:textColor="@drawable/radio_home_textcolor"
            android:drawableTop="@drawable/radio_mall_button"
            android:text="商城"
            android:layout_height="@dimen/margin_width50"/>
        <RadioButton
            android:id="@+id/radio_order"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:background="@null"
            android:textSize="@dimen/text_width12"
            android:textColor="@drawable/radio_home_textcolor"
            android:drawableTop="@drawable/radio_order_button"
            android:drawablePadding="3dp"
            android:text="购物车"
            android:layout_height="@dimen/margin_width50"/>
        <RadioButton
            android:id="@+id/radio_me"
            android:layout_width="0dp"
            android:textSize="@dimen/text_width12"
            android:layout_weight="1"
            android:textColor="@drawable/radio_home_textcolor"
            android:gravity="center"
            android:button="@null"
            android:drawablePadding="@dimen/margin_3"
            android:drawableTop="@drawable/radio_my_button"
            android:text="我的"
            android:layout_height="@dimen/margin_width50"/>
    </RadioGroup>
        <TextView
            android:id="@+id/shop_car_num"
            android:layout_width="@dimen/dp14"
            android:layout_height="@dimen/dp14"
            android:background="@drawable/shop_red_oval"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_10"
            android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>
