<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/msb_color"
        app:contentInsetStart="0dp"
        >
        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/msb_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="?actionBarSize"
                android:layout_height="match_parent"
                android:padding="@dimen/dp14"
                android:src="@drawable/back2x" />

            <TextView
                android:id="@+id/title"
                style="@style/shopMsbcolorTitleText"
                android:layout_centerInParent="true"
                android:text="红包兑换"
                android:textColor="@color/white" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/toolbar2"
        android:layout_marginLeft="@dimen/margin_Modules"
        android:layout_marginRight="@dimen/margin_Modules"
        >
    <EditText
        android:id="@+id/kami"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45"
        android:textSize="@dimen/text_15"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_width30"
        android:layout_marginLeft="@dimen/margin_Modules"
        android:layout_marginRight="@dimen/margin_Modules"
        android:background="@color/background_gray"
        android:hint="请输入16位兑换码"
        android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
        />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="@dimen/margin_Modules"
         android:layout_marginLeft="@dimen/margin_Modules"
         android:layout_marginRight="@dimen/margin_Modules"
         >
         <EditText
             android:id="@+id/etcode"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="@dimen/margin_45"
             android:textSize="@dimen/text_15"
             android:textColor="@color/black"
             android:background="@color/background_gray"
             android:hint="请输入右侧验证码"
             android:layout_marginRight="@dimen/margin_Modules"
             android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
             />
         <ImageView
             android:id="@+id/ivcode"
             android:layout_width="wrap_content"
             android:layout_height="@dimen/margin_45"
             android:scaleType="fitXY"
             />
     </LinearLayout>
        <TextView
            android:id="@+id/regetcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="看不清？换一张"
            android:layout_gravity="right"
            android:textColor="@color/blue"
            android:layout_marginTop="@dimen/margin_Modules"
            android:layout_marginRight="@dimen/margin_Modules"


            />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/text_hint"
         android:textSize="@dimen/text_15"
         android:text="兑换说明:"
         android:layout_marginTop="@dimen/margin_Modules"
         android:layout_marginLeft="@dimen/margin_Modules"
         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_hint"
        android:textSize="@dimen/text_14"
        android:layout_marginTop="@dimen/margin_Modules"
        android:layout_marginLeft="@dimen/margin_Modules"
        android:layout_marginRight="@dimen/margin_Modules"
        android:text="1.兑换码获取：参与民生宝活动有机会获得红包兑换码。兑换码由16位数字和字母组合而成。"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_hint"
        android:textSize="@dimen/text_14"
        android:layout_marginTop="@dimen/margin_Modules"
        android:layout_marginLeft="@dimen/margin_Modules"
        android:layout_marginRight="@dimen/margin_Modules"
        android:text="1.兑换码使用：在当前页面输入兑换码即可兑换对应红包。一个兑换码只能兑换一张商城红包，不可重复使用"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/background_gray"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/get_redpacket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="领取购物红包"
        android:paddingLeft="@dimen/margin_width100"
        android:paddingRight="@dimen/margin_width100"
        android:paddingTop="@dimen/margin_Modules"
        android:paddingBottom="@dimen/margin_Modules"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_width30"
        android:textSize="@dimen/text_15"
        android:background="@drawable/btn_pay"
        />
</RelativeLayout>