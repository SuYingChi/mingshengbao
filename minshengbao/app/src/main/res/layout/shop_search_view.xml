<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    app:contentInsetStart="0dp">

<LinearLayout
    android:id="@+id/search"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:baselineAligned="false"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/margin_Modules"
        android:background="@drawable/bg_round_gray"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/nc_icon_search_w" />

        <EditText
            android:id="@+id/tvSearchD"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:hint="搜索商品,品牌"
            android:background="@null"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:textColorHint="@color/white" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rlt_msg"
        android:layout_width="wrap_content"
        android:layout_height="48dp"

        >

        <ImageView
            android:id="@+id/ivIconMessage"
            android:layout_width="@dimen/margin_width25"
            android:layout_height="@dimen/margin_width25"
            android:layout_centerInParent="true"
            android:src="@drawable/shop_home_message" />

        <TextView
            android:id="@+id/vhint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivIconMessage"
            android:layout_marginRight="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:text=""
            android:gravity="center"
            android:background="@drawable/shop_red_oval"
            android:textSize="@dimen/text_10"
            android:textColor="@color/white"
            android:visibility="invisible"
            />

    </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.Toolbar>