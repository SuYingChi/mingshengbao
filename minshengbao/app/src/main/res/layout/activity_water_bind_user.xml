<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray"
    tools:context=".functionActivity.WaterApp.WaterBindUserActivity">
    <include layout="@layout/layout_white_header"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width45"
        android:background="@color/background_gray">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:textColor="@color/color_9e9e9e"
            android:textSize="@dimen/text_width16"
            android:text="@string/my_phone"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width50"
        android:layout_marginLeft="@dimen/margin_width6"
        android:layout_marginStart="@dimen/margin_width6"
        android:layout_marginRight="@dimen/margin_width6"
        android:layout_marginEnd="@dimen/margin_width6"
        android:background="@drawable/shape_gray_back_corner">
        <EditText
            android:id="@+id/id_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/margin_width10"
            android:paddingLeft="@dimen/margin_width10"
            android:paddingEnd="@dimen/margin_width10"
            android:paddingRight="@dimen/margin_width10"
            android:background="@null"
            android:inputType="phone"
            android:hint="@string/please_input_phone"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width45"
        android:background="@color/background_gray">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_width10"
            android:layout_marginStart="@dimen/margin_width10"
            android:textColor="@color/color_9e9e9e"
            android:textSize="@dimen/text_width16"
            android:text="@string/verification_code"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_gray_back_corner"
        android:layout_marginLeft="@dimen/margin_width6"
        android:layout_marginStart="@dimen/margin_width6"
        android:layout_marginRight="@dimen/margin_width6"
        android:layout_marginEnd="@dimen/margin_width6">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_width50">
            <EditText
                android:id="@+id/id_et_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/margin_width10"
                android:paddingLeft="@dimen/margin_width10"
                android:paddingEnd="@dimen/margin_width10"
                android:paddingRight="@dimen/margin_width10"
                android:background="@null"
                android:inputType="phone"
                android:hint="@string/please_input_code"/>
        </RelativeLayout>
       <Button
           android:id="@+id/id_btn_code"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:minWidth="@dimen/margin_width80"
           android:background="@drawable/selector_change_yellow_rectangle_background"
           android:padding="@dimen/margin_width10"
           android:layout_gravity="center_vertical"
           android:text="@string/get_verification_code"
           android:textColor="@color/white"
           android:textSize="@dimen/text_width14"
           android:gravity="center"
           />
    </LinearLayout>
    <Button
        android:id="@+id/id_btn_bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_width45"
        android:layout_marginTop="@dimen/margin_width50"
        android:layout_marginRight="@dimen/margin_width50"
        android:layout_marginEnd="@dimen/margin_width50"
        android:layout_marginStart="@dimen/margin_width50"
        android:layout_marginLeft="@dimen/margin_width50"
        android:background="@drawable/selector_change_blue_corner_background"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_width16"
        android:text="@string/ensure_binding"/>
</LinearLayout>