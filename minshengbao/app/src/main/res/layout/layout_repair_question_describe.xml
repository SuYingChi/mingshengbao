<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:padding="@dimen/margin_width40"
    android:background="@color/transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_width10"
        android:background="@drawable/shape_white_layout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:id="@+id/id_text2"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginStart="@dimen/margin_width10"
                android:text="@string/please_select_question_describe"
                android:textSize="@dimen/text_width16"
                android:textColor="@color/right_title"/>
            <com.msht.minshengbao.ViewUI.widget.MultiLineChooseLayout
                android:id="@+id/id_multiChoose"
                style="@style/MultiLineChooseItemTags.FlowLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_width10"
                android:layout_marginRight="@dimen/margin_width10"
                android:layout_below="@+id/id_text2"
                android:layout_marginTop="@dimen/margin_width20">
            </com.msht.minshengbao.ViewUI.widget.MultiLineChooseLayout>
            <EditText
                android:id="@+id/id_et_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width80"
                android:layout_below="@+id/id_multiChoose"
                android:hint="@string/can_input_140_character"
                android:inputType="textPersonName"
                android:padding="@dimen/margin_width10"
                android:layout_margin="@dimen/margin_width20"
                android:textSize="@dimen/text_width16"
                android:maxLength="150"
                android:background="@drawable/shape_white_border_rectangle"
                android:gravity="start|top"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_width20"
            android:layout_marginBottom="@dimen/margin_width20"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <com.msht.minshengbao.ViewUI.ButtonUI.ButtonM
                android:id="@+id/id_cancel"
                android:layout_width="@dimen/margin_width80"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_width30"
                android:layout_marginRight="@dimen/margin_width30"
                android:layout_marginStart="@dimen/margin_width20"
                android:layout_marginLeft="@dimen/margin_width20"
                android:minHeight="@dimen/margin_width35"
                android:gravity="center"
                android:text="@string/cancel_text"
                android:textSize="@dimen/text_width16"
                app:textColor="@color/color_383838"
                app:backColor="@color/background_gray"
                app:backColorPress="@color/light_gray"
                app:shape="rectangle"
                app:radius="10"
                app:fillet="true"/>
            <com.msht.minshengbao.ViewUI.ButtonUI.ButtonM
                android:id="@+id/id_btn_send"
                android:layout_width="@dimen/margin_width80"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_width35"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_width20"
                android:layout_marginEnd="@dimen/margin_width20"
                android:layout_marginStart="@dimen/margin_width30"
                android:layout_marginLeft="@dimen/margin_width30"
                android:text="@string/ensure_text"
                android:textSize="@dimen/text_width16"
                android:gravity="center"
                app:textColor="@color/white"
                app:backColor="@color/colorOrange"
                app:backColorPress="@color/color_red"
                app:shape="rectangle"
                app:radius="10"
                app:fillet="true"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>