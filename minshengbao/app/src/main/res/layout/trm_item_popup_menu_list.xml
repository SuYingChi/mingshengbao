<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_width40"
    android:gravity="center_vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/trm_menu_item_icon"
        android:layout_width="@dimen/margin_width25"
        android:layout_height="@dimen/margin_width25"
        android:layout_marginRight="@dimen/margin_width8"
        android:layout_marginEnd="@dimen/margin_width8"
        android:contentDescription="@string/picture_text"
        android:scaleType="center"/>
    <TextView
        android:id="@+id/trm_menu_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_width14"/>
</LinearLayout>