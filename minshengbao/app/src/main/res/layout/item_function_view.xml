<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/id_function_img"
            android:layout_width="@dimen/margin_width35"
            android:layout_height="@dimen/margin_width35"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/home_default_xh" />
    </RelativeLayout>
    <TextView
        android:id="@+id/id_function_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_width6"
        android:text="家电清洗"
        android:textSize="@dimen/text_width12"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="#FF535353"/>
</LinearLayout>