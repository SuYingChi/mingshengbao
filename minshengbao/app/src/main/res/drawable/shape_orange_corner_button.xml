<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充的颜色：这里设置背景橙红 -->
    <solid android:color="#fff96331" />
    <gradient
        android:startColor="@color/light_Orange"
        android:endColor="@color/deep_Orange"
        android:centerColor="@color/highlight_Orange"
        android:angle="0"/>
    <!-- 边框的颜色 ：不能和窗口背景色一样-->

    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="@dimen/margin_width45" />
    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:bottom="@dimen/margin_width3"
        android:left="@dimen/margin_width6"
        android:right="@dimen/margin_width6"
        android:top="@dimen/margin_width3" />

</shape>