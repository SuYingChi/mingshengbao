<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="@color/background_gray"/>
    <stroke
        android:width="0.5dp"
        android:color="@color/background_gray" />
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners
        android:topLeftRadius="@dimen/margin_width10"
        android:bottomLeftRadius="@dimen/margin_width10"/>
    <padding
        android:bottom="@dimen/margin_width3"
        android:left="@dimen/margin_width5"
        android:right="@dimen/margin_width5"
        android:top="@dimen/margin_width3" />

</shape>